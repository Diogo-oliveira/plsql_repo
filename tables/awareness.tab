CREATE TABLE AWARENESS
(
ID_PATIENT	NUMBER(24) NOT NULL ENABLE,
ID_EPISODE	NUMBER(24) NOT NULL ENABLE,
FLG_EPISODE	VARCHAR2(1),
FLG_PAT_ALLERGY	VARCHAR2(1),
FLG_PAT_HABIT	VARCHAR2(1),
FLG_PAT_HISTORY_DIAGNOSIS	VARCHAR2(1),
FLG_VITAL_SIGN_READ	VARCHAR2(1),
FLG_EPIS_DIAGNOSIS	VARCHAR2(1),
FLG_ANALYSIS_REQ	VARCHAR2(1),
FLG_EXAM_REQ	VARCHAR2(1),
FLG_PRESCRIPTION	VARCHAR2(1),
FLG_DRUG_PRESCRIPTION	VARCHAR2(1),
FLG_DRUG_REQ	VARCHAR2(1),
FLG_INTERV_PRESCRIPTION	VARCHAR2(1),
FLG_NURSE_ACTIVITY_REQ	VARCHAR2(1),
FLG_MONITORIZATION	VARCHAR2(1),
FLG_ICNP_EPIS_DIAGNOSIS	VARCHAR2(1),
FLG_ICNP_EPIS_INTERVENTION	VARCHAR2(1),
FLG_PAT_PREGNANCY	VARCHAR2(1),
FLG_SYS_ALERT_DET	VARCHAR2(1)
);


COMMENT ON COLUMN AWARENESS.ID_PATIENT IS 'Patient ID';
COMMENT ON COLUMN AWARENESS.ID_EPISODE IS 'Apisode ID';
COMMENT ON COLUMN AWARENESS.FLG_EPISODE IS 'Has Episodes';
COMMENT ON COLUMN AWARENESS.FLG_PAT_ALLERGY IS 'Has Allergies';
COMMENT ON COLUMN AWARENESS.FLG_PAT_HABIT IS 'Has Habits';
COMMENT ON COLUMN AWARENESS.FLG_PAT_HISTORY_DIAGNOSIS IS 'Has Problems';
COMMENT ON COLUMN AWARENESS.FLG_VITAL_SIGN_READ IS 'Has Vital Sign Readings';
COMMENT ON COLUMN AWARENESS.FLG_EPIS_DIAGNOSIS IS 'Has Diagnosis';
COMMENT ON COLUMN AWARENESS.FLG_ANALYSIS_REQ IS 'Has Lab Tests Requisitions';
COMMENT ON COLUMN AWARENESS.FLG_EXAM_REQ IS 'Has Exams Requisitions';
COMMENT ON COLUMN AWARENESS.FLG_PRESCRIPTION IS 'Has Prescriptions';
COMMENT ON COLUMN AWARENESS.FLG_DRUG_PRESCRIPTION IS 'Has Drug Prescriptions';
COMMENT ON COLUMN AWARENESS.FLG_DRUG_REQ IS 'Has Drug Requisitions';
COMMENT ON COLUMN AWARENESS.FLG_INTERV_PRESCRIPTION IS 'Has Procedures';
COMMENT ON COLUMN AWARENESS.FLG_NURSE_ACTIVITY_REQ IS 'Has Nursing activity requests';
COMMENT ON COLUMN AWARENESS.FLG_MONITORIZATION IS 'Has Monitoring';
COMMENT ON COLUMN AWARENESS.FLG_ICNP_EPIS_DIAGNOSIS IS 'Has Nursing Diagnosis';
COMMENT ON COLUMN AWARENESS.FLG_ICNP_EPIS_INTERVENTION IS 'Has Nursing Interventions';
COMMENT ON COLUMN AWARENESS.FLG_PAT_PREGNANCY IS 'Has Pregnancy Records';
COMMENT ON COLUMN AWARENESS.FLG_SYS_ALERT_DET IS 'Has Alerts';

COMMENT ON TABLE AWARENESS IS 'Identifies if a certain type of information/data is available for a specific patient/episode';


