

  CREATE TABLE INF_EMB
   (	EMB_ID NUMBER(10,0) NOT NULL ENABLE,
	N_REGISTO NUMBER(7,0) NOT NULL ENABLE,
	DESCR VARCHAR2(400) NOT NULL ENABLE,
	COMPART NUMBER(3,0) NOT NULL ENABLE,
	DATA_COMPART DATE,
	GRUPO_HOM_ID VARCHAR2(6) NOT NULL ENABLE,
	MED_ID NUMBER(10,0) NOT NULL ENABLE,
	DATA_ALTER DATE NOT NULL ENABLE,
	DATA_ALT_COMP DATE,
	DATA_ALT_PRECO DATE,
	TRATAMENTO NUMBER(1,0) NOT NULL ENABLE,

	EMB_UNIT_ID NUMBER(1,0) NOT NULL ENABLE,
	PRICE_PVP NUMBER(8,2),
	SHORT_DESCR VARCHAR2(400),
	N_UNITS NUMBER(5,0),
	QT_PER_UNIT NUMBER(15,5),
	FLG_AVAILABLE VARCHAR2(1),
	FLG_COMERC VARCHAR2(1) NOT NULL ENABLE
   );


COMMENT ON TABLE inf_emb IS 'Embalagens.' ;

COMMENT ON COLUMN inf_emb.emb_id IS 'Codigo identificador da embalagem.' ;
COMMENT ON COLUMN inf_emb.n_registo IS 'Número de registo atribuído a cada embalagem.' ;
COMMENT ON COLUMN inf_emb.descr IS 'Informação completa sobre a embalagem (formato do Prontuário Terapêutico)' ;
COMMENT ON COLUMN inf_emb.compart IS 'Taxa de comparticipação da embalagem.' ;
COMMENT ON COLUMN inf_emb.data_compart IS 'Data da comparticipação.' ;
COMMENT ON COLUMN inf_emb.grupo_hom_id IS 'Código identificador do Grupo Homogéneo do medicamento.' ;
COMMENT ON COLUMN inf_emb.med_id IS 'Código identificador do medicamento.' ;
COMMENT ON COLUMN inf_emb.data_alter IS 'Data da última alteração da embalagem. Actualizada sempre que há alteração de qualquer um dos atributos da tabela.' ;
COMMENT ON COLUMN inf_emb.data_alt_comp IS 'Data da última alteração do escalão de comparticipação da embalagem. Actualizada quando há alteração da comparticipação.' ;
COMMENT ON COLUMN inf_emb.data_alt_preco IS 'Data da última alteração de preço da embalagem. Actualizada quando há alteração no preço.' ;
COMMENT ON COLUMN inf_emb.tratamento IS 'Código identificador do tipo de tratamento.' ;
COMMENT ON COLUMN inf_emb.emb_unit_id IS 'Código identificador da embalagem unitária.' ;
COMMENT ON COLUMN inf_emb.price_pvp IS 'PVP: preço de venda ao público' ;

COMMENT ON COLUMN inf_emb.short_descr IS 'Descrição abreviada da embalagem.' ;
COMMENT ON COLUMN inf_emb.n_units IS 'Nº de unidades da embalagem.' ;
COMMENT ON COLUMN inf_emb.qt_per_unit IS 'Dosagem de cada unidade.' ;
COMMENT ON COLUMN inf_emb.flg_available IS 'Flag que indica se o medicamento está (Y) ou não (N) na última versão da BD do Infarmed.' ;
COMMENT ON COLUMN inf_emb.flg_comerc IS 'Flag que indica se a embalagem é (Y) ou não (N) comercializada.' ;


