

  CREATE TABLE HIDRICS_TYPE
   (	ID_HIDRICS_TYPE NUMBER(24,0) NOT NULL ENABLE,
	CODE_HIDRICS_TYPE VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(24,0),
	ADW_LAST_UPDATE DATE,
	ACRONYM VARCHAR2(10) NOT NULL ENABLE
   );


COMMENT ON TABLE hidrics_type IS 'Tipos de Hidricos' ;

COMMENT ON COLUMN hidrics_type.id_hidrics_type IS 'Chave primária' ;
COMMENT ON COLUMN hidrics_type.code_hidrics_type IS 'Código para obter os tipos de hidricos por língua' ;
COMMENT ON COLUMN hidrics_type.flg_available IS 'Disponibilidade do registo' ;
COMMENT ON COLUMN hidrics_type.rank IS 'Ordenação' ;
COMMENT ON COLUMN hidrics_type.adw_last_update IS 'Data da última alteração' ;



ALTER TABLE Hidrics_Type ADD (ID_CONTENT VARCHAR2(200));
COMMENT ON COLUMN Hidrics_Type.ID_CONTENT  IS 'Identificador único de conteúdo';


