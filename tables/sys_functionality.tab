

  CREATE TABLE SYS_FUNCTIONALITY
   (	ID_FUNCTIONALITY NUMBER(12,0) NOT NULL ENABLE,
	INTERN_NAME_FUNC VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	CODE_FUNCTIONALITY VARCHAR2(200),
	ADW_LAST_UPDATE DATE
   );


COMMENT ON TABLE sys_functionality IS 'Funcionalidades acessíveis na parte principal do ecrã (central). Por ex., selecção dos estados possíveis, update, ...' ;

COMMENT ON COLUMN sys_functionality.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;


