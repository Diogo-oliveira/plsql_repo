CREATE TABLE CPT_CODE (
	ID_CPT_CODE NUMBER(24) NOT NULL,
	LONG_DESC VARCHAR2(2000),
	MEDIUM_DESC VARCHAR2(50),
	SHORT_DESC VARCHAR2(50),
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
);


COMMENT ON TABLE CPT_CODE IS 'Current Procedural Terminology - CPT codes';

COMMENT ON COLUMN CPT_CODE.ID_CPT_CODE IS 'Primary key';
COMMENT ON COLUMN CPT_CODE.LONG_DESC IS 'Long description';
COMMENT ON COLUMN CPT_CODE.MEDIUM_DESC IS 'Medium description';
COMMENT ON COLUMN CPT_CODE.SHORT_DESC IS 'Short description';
COMMENT ON COLUMN CPT_CODE.ADW_LAST_UPDATE  IS 'Date of last update';
