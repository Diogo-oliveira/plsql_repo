CREATE TABLE REF_AUTO_TRANSITIONS
 (ID_WORKFLOW NUMBER(24) NOT NULL
 ,ID_STATUS_BEGIN NUMBER(24) NOT NULL
 ,ID_STATUS_END NUMBER(24) NOT NULL
 ,ID_WORKFLOW_ACTION NUMBER(24) NOT NULL
 ,ID_WORKFLOW_ACTION_PREV NUMBER(24) NOT NULL
 ,CREATE_USER VARCHAR2(24)
 ,CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE
 ,CREATE_INSTITUTION NUMBER(24)
 ,UPDATE_USER VARCHAR2(24)
 ,UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE
 ,UPDATE_INSTITUTION NUMBER(24)
 );
 
COMMENT ON TABLE REF_AUTO_TRANSITIONS IS 'Automatic transitions dependencies [RAN]';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.ID_WORKFLOW IS 'Workflow identifier';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.ID_STATUS_BEGIN IS 'Begin status ID';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.ID_STATUS_END IS 'End status ID';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.ID_WORKFLOW_ACTION IS 'Next automatic workflow action that can be processed';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.ID_WORKFLOW_ACTION_PREV IS 'Previous workflow action processed ID';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN REF_AUTO_TRANSITIONS.UPDATE_INSTITUTION IS 'Update Institution';
