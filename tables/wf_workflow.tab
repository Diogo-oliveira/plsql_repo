   COMMENT ON COLUMN "WF_WORKFLOW"."INTERNAL_NAME" IS 'Workflow internal name';

   COMMENT ON COLUMN "WF_WORKFLOW"."DESCRIPTION" IS 'Workflow description';

   COMMENT ON TABLE "WF_WORKFLOW"  IS 'Workflow identification';
