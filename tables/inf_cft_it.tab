
  CREATE TABLE INF_CFT_IT
   (	CODE VARCHAR2(14) NOT NULL ENABLE,
	DESCR VARCHAR2(110) NOT NULL ENABLE,
	CFT_ID NUMBER(6,0) NOT NULL ENABLE
   );


COMMENT ON TABLE inf_cft_it IS 'Classificações Farmacoterapêutica (CFT) de medicamentos.' ;

COMMENT ON COLUMN inf_cft_it.code IS 'Código identificador da Classificação Farmacoterapêutica (CFT) do medicamento.' ;
COMMENT ON COLUMN inf_cft_it.descr IS 'Descrição da Classificação Farmacoterapêutica (CFT) do medicamento.' ;
COMMENT ON COLUMN inf_cft_it.cft_id IS 'ID único.' ;

