

  CREATE TABLE PRESC_PAT_PROBLEM
   (	ID_PRESC_PAT_PROBLEM NUMBER(24,0) NOT NULL ENABLE,
	ID_PAT_PROBLEM NUMBER(24,0),
	ID_PRESCRIPTION_PHARM NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	DT_PRESC_PAT_PROBLEM DATE NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	ID_PAT_ALLERGY NUMBER(24,0),
	FLG_STATUS VARCHAR2(1),
	ID_PROF_CANCEL NUMBER(24,0),
	DT_CANCEL DATE
   );



COMMENT ON TABLE presc_pat_problem IS 'Associação de prescrição de farmacos a problemas.' ;

COMMENT ON COLUMN presc_pat_problem.id_presc_pat_problem IS 'Chave primária.' ;
COMMENT ON COLUMN presc_pat_problem.id_pat_problem IS 'Problema a que está a associada a prescrição do fármaco.' ;
COMMENT ON COLUMN presc_pat_problem.id_prescription_pharm IS 'Prescrição associada ao problema.' ;
COMMENT ON COLUMN presc_pat_problem.id_professional IS 'Profissional que regista a associação.' ;
COMMENT ON COLUMN presc_pat_problem.dt_presc_pat_problem IS 'Data de registo da associação da prescrição ao problema.' ;
COMMENT ON COLUMN presc_pat_problem.flg_type IS 'Flag que indica se é uma contra-indicação (C) ou uma associação de fármacos a problemas (A).' ;
COMMENT ON COLUMN presc_pat_problem.id_pat_allergy IS 'Alergia a que está a associada a prescrição do fármaco.' ;
COMMENT ON COLUMN presc_pat_problem.flg_status IS 'Estado da associação: A - activo, C - cancelado.' ;
COMMENT ON COLUMN presc_pat_problem.id_prof_cancel IS 'Profissional que cancela.' ;
COMMENT ON COLUMN presc_pat_problem.dt_cancel IS 'Data de cancelamento.' ;

alter table presc_pat_problem 
add (dt_presc_pat_problem_tstz timestamp with local time zone,
dt_cancel_tstz timestamp with local time zone);

