create table INSTITUTION_HIST
(
  ID_INSTITUTION           NUMBER(24) not null,
  FLG_TYPE                 VARCHAR2(1) not null,
  FLG_AVAILABLE            VARCHAR2(1) not null,
  ABBREVIATION             VARCHAR2(30),
  LOCATION                 VARCHAR2(200),
  PHONE_NUMBER             VARCHAR2(30),
  ADDRESS                  VARCHAR2(200),
  ZIP_CODE                 VARCHAR2(30),
  FAX_NUMBER               VARCHAR2(30),
  DISTRICT                 VARCHAR2(200),
  ID_TIMEZONE_REGION       NUMBER(24),
	ID_COUNTRY               NUMBER(24),
  EMAIL                    VARCHAR2(100),
  ID_INSTITUTION_LANGUAGE  NUMBER(12),
	DT_BEGIN_TSTZ            TIMESTAMP WITH LOCAL TIME ZONE,
  DT_END_TSTZ              TIMESTAMP WITH LOCAL TIME ZONE,
	INST_NAME                VARCHAR2(200),
	ID_LANGUAGE              NUMBER(24)
)


comment on table INSTITUTION_HIST is 'Histórico de Instituições de saúde';

comment on column INSTITUTION_HIST.INST_NAME is 'Nome da instituição';
comment on column INSTITUTION_HIST.FLG_TYPE is 'Tipo: H - hospital, C - centro de saúde, P - clínica privada, R - A.R.S., U - Unidade de saúde familiar';
comment on column INSTITUTION_HIST.FLG_AVAILABLE is 'Disponibilidade do registo na instituição onde está instalada a BD';
comment on column INSTITUTION_HIST.LOCATION is 'Cidade ou localidade';
comment on column INSTITUTION_HIST.PHONE_NUMBER is 'Nº de telefone da instituição.';
comment on column INSTITUTION_HIST.ADDRESS is 'Morada da instituição';
comment on column INSTITUTION_HIST.ZIP_CODE is 'Código postal da instituição';
comment on column INSTITUTION_HIST.FAX_NUMBER is 'Nº de fax da instituição';
comment on column INSTITUTION_HIST.DISTRICT is 'Distrito';
comment on column INSTITUTION_HIST.ID_TIMEZONE_REGION is 'Timezone da instituição';
comment on column INSTITUTION_HIST.ID_COUNTRY is 'País da instituição';
comment on column INSTITUTION_HIST.EMAIL is 'E-mail da instituição';
comment on column INSTITUTION_HIST.ID_INSTITUTION_LANGUAGE is 'Idioma da instituição';
comment on column INSTITUTION_HIST.DT_BEGIN_TSTZ is 'Data de inicio de insformação da instituição';
comment on column INSTITUTION_HIST.DT_END_TSTZ is 'Data de fim da validade da insformação da instituição';
comment on column INSTITUTION_HIST.ID_LANGUAGE is 'Idioma em que o registo foi efectuado';