CREATE TABLE RISK_FACTOR
(ID_RISK_FACTOR NUMBER(24,0) NOT NULL ENABLE,
 ID_DOC_ELEMENT NUMBER(24,0) NOT NULL ENABLE,
 SCORE NUMBER(6,0),
 MIN_VALUE NUMBER(6,0),
 MAX_VALUE NUMBER(6,0),
 ADW_LAST_UPDATE DATE
);


COMMENT ON TABLE RISK_FACTOR IS 'Tabela onde está o scoring dos factores de risco';

COMMENT ON COLUMN RISK_FACTOR.ID_RISK_FACTOR IS 'Chave primária';
COMMENT ON COLUMN RISK_FACTOR.ID_DOC_ELEMENT IS 'ID do elemento da documentation';
COMMENT ON COLUMN RISK_FACTOR.SCORE IS 'Número de pontos';
COMMENT ON COLUMN RISK_FACTOR.MIN_VALUE IS 'Valor mínimo';
COMMENT ON COLUMN RISK_FACTOR.MAX_VALUE IS 'Valor máximo';
COMMENT ON COLUMN RISK_FACTOR.ADW_LAST_UPDATE IS 'Data da última alteração';

