

  CREATE TABLE CRITICAL_CARE
   (	ID_CRITICAL_CARE NUMBER(24,0) NOT NULL ENABLE,
	CODE_CRITICAL_CARE VARCHAR2(200) NOT NULL ENABLE,
	INTERNAL_NAME VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(2) NOT NULL ENABLE,
	RANK NUMBER NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );

comment on table CRITICAL_CARE
  is 'Notas críticas';
 
comment on column CRITICAL_CARE.ID_CRITICAL_CARE
  is 'Chave primária';
comment on column CRITICAL_CARE.CODE_CRITICAL_CARE
  is 'Descrição das notas críticas por língua';
comment on column CRITICAL_CARE.INTERNAL_NAME
  is 'Nome interno';
comment on column CRITICAL_CARE.FLG_TYPE
  is 'Tipo de nota. C - Check-box; T-Text; YN -Yes/No;Hour - H';
comment on column CRITICAL_CARE.RANK
  is 'Ordenação';
comment on column CRITICAL_CARE.FLG_AVAILABLE
  is 'Disponibilidade do registo';
comment on column CRITICAL_CARE.ADW_LAST_UPDATE
  is 'Data da última alteração';