--Timezones changes
ALTER TABLE PAT_MEDICATION_HIST_LIST_IT ADD DT_PAT_MEDICATION_LIST_TSTZ TIMESTAMP WITH LOCAL TIME ZONE; 
COMMENT ON COLUMN PAT_MEDICATION_HIST_LIST_IT.DT_PAT_MEDICATION_LIST_TSTZ IS 'Data de registo'; 
