

  CREATE TABLE TRIAGE_BOARD_GROUP
   (	ID_TRIAGE_BOARD_GROUP NUMBER(12,0) NOT NULL ENABLE,
	CODE_TRIAGE_BOARD_GROUP VARCHAR2(200) NOT NULL ENABLE,
	CODE_HELP_TRIAGE_BOARD_GROUP VARCHAR2(200),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	ID_TRIAGE_TYPE NUMBER,
	GENDER VARCHAR2(2),
	AGE_MIN NUMBER(24,0),
	AGE_MAX NUMBER(24,0)
   );



COMMENT ON TABLE triage_board_group IS 'Grupos de fluxogramas' ;

COMMENT ON COLUMN triage_board_group.id_triage_board_group IS 'Chave primária' ;
COMMENT ON COLUMN triage_board_group.code_triage_board_group IS 'Código para tradução dos grupos de fluxogramas' ;
COMMENT ON COLUMN triage_board_group.code_help_triage_board_group IS 'Código para tradução da explicação do grupo' ;
COMMENT ON COLUMN triage_board_group.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN triage_board_group.rank IS 'Ordem de visualização' ;
COMMENT ON COLUMN triage_board_group.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN triage_board_group.gender IS 'Sexo' ;
COMMENT ON COLUMN triage_board_group.age_min IS 'Idade mínima' ;
COMMENT ON COLUMN triage_board_group.age_max IS 'Idade máxima' ;


