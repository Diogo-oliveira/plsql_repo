

  CREATE TABLE BED
   (	ID_BED NUMBER(24,0) NOT NULL ENABLE,
	CODE_BED VARCHAR2(200) NOT NULL ENABLE,
	ID_ROOM NUMBER(24,0) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE,
	DESC_BED VARCHAR2(100),
	NOTES VARCHAR2(4000),
	RANK NUMBER(6,0)
   );


COMMENT ON TABLE bed IS 'Camas existentes na instituição. Podem ser permanentes ou temporárias (por exemplo, macas).' ;

COMMENT ON COLUMN bed.id_bed IS 'Chave primária' ;
COMMENT ON COLUMN bed.code_bed IS 'Código do nome da cama' ;
COMMENT ON COLUMN bed.flg_type IS 'Tipo de cama: P - Permanente, T - Temporária' ;
COMMENT ON COLUMN bed.flg_status IS 'Estado da cama: V - vago, O - ocupado' ;
COMMENT ON COLUMN bed.adw_last_update IS 'Data da última alteração' ;

ALTER TABLE BED 
 ADD (FLG_AVAILABLE  VARCHAR2(1) DEFAULT 'Y' NOT NULL
 );

COMMENT ON COLUMN BED.FLG_AVAILABLE IS 'Disponibilidade do registo na instituição onde está instalada a BD';

ALTER TABLE BED MODIFY FLG_AVAILABLE default null;


ALTER TABLE BED ADD ID_BED_TYPE NUMBER(24) ;
COMMENT ON COLUMN BED.ID_BED_TYPE IS 'Type of bed';


