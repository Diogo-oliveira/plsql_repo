  CREATE TABLE ESCAPE_DEPARTMENT_HIST
  ( ID_ADM_INDICATION_HIST NUMBER(24),
    ID_DEPARTMENT NUMBER(24),
  ID_ADM_INDICATION NUMBER(24),
    CREATE_USER VARCHAR2(24 char),
  CREATE_TIME TIMESTAMP (6) WITH LOCAL TIME ZONE,
  CREATE_INSTITUTION NUMBER(24),
  UPDATE_USER VARCHAR2(24 char),
  UPDATE_TIME TIMESTAMP (6) WITH LOCAL TIME ZONE,
  UPDATE_INSTITUTION NUMBER(24)
   ) ;

COMMENT ON COLUMN ESCAPE_DEPARTMENT_HIST.ID_ADM_INDICATION_HIST IS 'Admission indication history id';
COMMENT ON COLUMN ESCAPE_DEPARTMENT_HIST.ID_DEPARTMENT IS 'ID for the escape department (foreign key)';
COMMENT ON COLUMN ESCAPE_DEPARTMENT_HIST.ID_ADM_INDICATION IS 'Foreign key for the indication for admission';
COMMENT ON TABLE ESCAPE_DEPARTMENT_HIST  IS 'Escape departments parameterization table history';
comment on column ESCAPE_DEPARTMENT_HIST.CREATE_USER
  is 'Creation User';
comment on column ESCAPE_DEPARTMENT_HIST.CREATE_TIME
  is 'Creation Time';
comment on column ESCAPE_DEPARTMENT_HIST.CREATE_INSTITUTION
  is 'Creation Institution';
comment on column ESCAPE_DEPARTMENT_HIST.UPDATE_USER
  is 'Update User';
comment on column ESCAPE_DEPARTMENT_HIST.UPDATE_INSTITUTION
  is 'Update Institution';
comment on column ESCAPE_DEPARTMENT_HIST.UPDATE_TIME
  is 'Update Time';
  
