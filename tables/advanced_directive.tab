
CREATE TABLE advanced_directive(
    id_advanced_directive NUMBER NOT NULL,
    code_advanced_directive VARCHAR2(200) NOT NULL,
    gender VARCHAR2(1),
    age_min NUMBER(3, 0),
    age_max NUMBER(3, 0),
    flg_type VARCHAR2(1) NOT NULL,
    flg_available VARCHAR2(1) DEFAULT 'Y' NOT NULL,
    adw_last_update DATE DEFAULT SYSDATE NOT NULL
);

COMMENT ON TABLE advanced_directive IS 'Definição de uma decisão antecipada. Consiste numa pergunta.';
COMMENT ON COLUMN advanced_directive.id_advanced_directive IS 'Chave primária';
COMMENT ON COLUMN advanced_directive.code_advanced_directive IS 'Código da translation';
COMMENT ON COLUMN advanced_directive.gENDer IS 'Sexo do paciente a que se aplica';
COMMENT ON COLUMN advanced_directive.age_min IS 'Idade mínima do paciente a que se aplica';
COMMENT ON COLUMN advanced_directive.age_max IS 'Idade máxima do paciente a que se aplica';
COMMENT ON COLUMN advanced_directive.flg_type IS 'Tipo de pergunta: é feita directamente ao paciente (flg_type=A) ou respondida pelos profissionais de saude para os casos legais (flg_type = Q).';
COMMENT ON COLUMN advanced_directive.flg_available IS 'registo disponível?';

ALTER TABLE advanced_directive ADD code_label VARCHAR2(200) DEFAULT 'ADVANCED_DIRECTIVE.CODE_LABEL.XXX' NOT NULL;
COMMENT ON COLUMN advanced_directive.code_advanced_directive IS 'Código da translation para a etiqueta';
