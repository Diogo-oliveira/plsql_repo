CREATE TABLE TASK_GOAL
 (ID_TASK_GOAL NUMBER(24) NOT NULL
 ,CODE_TASK_GOAL VARCHAR2(200) NOT NULL
 ,DESC_TASK_GOAL VARCHAR2(4000) NOT NULL
 ,ID_CONTENT NUMBER(24)
 ,CREATE_USER VARCHAR2(24)
 ,CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE
 ,CREATE_INSTITUTION NUMBER(24)
 ,UPDATE_USER VARCHAR2(24)
 ,UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE
 ,UPDATE_INSTITUTION NUMBER(24)
 ,CONSTRAINT TGL_PK PRIMARY KEY 
  (ID_TASK_GOAL)
 )
/

COMMENT ON COLUMN TASK_GOAL.ID_TASK_GOAL IS 'Identifier of the task/goal and scope detail'
/

COMMENT ON COLUMN TASK_GOAL.CODE_TASK_GOAL IS 'Identifier of the coded task/goal'
/

COMMENT ON COLUMN TASK_GOAL.DESC_TASK_GOAL IS 'CLOB for free text task/goal input'
/

COMMENT ON COLUMN TASK_GOAL.ID_CONTENT IS 'Content Identifier'
/

COMMENT ON COLUMN TASK_GOAL.CREATE_USER IS 'Creation User'
/

COMMENT ON COLUMN TASK_GOAL.CREATE_TIME IS 'Creation Time'
/

COMMENT ON COLUMN TASK_GOAL.CREATE_INSTITUTION IS 'Creation Institution'
/

COMMENT ON COLUMN TASK_GOAL.UPDATE_USER IS 'Update User'
/

COMMENT ON COLUMN TASK_GOAL.UPDATE_TIME IS 'Update Time'
/

COMMENT ON COLUMN TASK_GOAL.UPDATE_INSTITUTION IS 'Update Institution'
/
