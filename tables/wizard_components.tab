CREATE TABLE WIZARD_COMPONENTS
(
  ID_WIZARD_COMPONENT NUMBER(24) NOT NULL,
INTERNAL_NAME VARCHAR2(200 CHAR) NOT NULL,
ID_SYS_SHORTCUT NUMBER(24) NOT NULL,
ID_DOC_AREA NUMBER(24),
FLG_AVAILABLE VARCHAR2(1 CHAR) DEFAULT 'Y' NOT NULL,
CREATE_USER VARCHAR2(24 CHAR),
CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
CREATE_INSTITUTION NUMBER(24),
UPDATE_USER VARCHAR2(24 CHAR),
UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION NUMBER(24)
);
/

ALTER TABLE WIZARD_COMPONENTS MOVE TABLESPACE TABLE_S;

COMMENT ON TABLE WIZARD_COMPONENTS IS 'List of all wizard components';
COMMENT ON COLUMN WIZARD_COMPONENTS.ID_WIZARD_COMPONENT IS 'Wizard component primary key';
COMMENT ON COLUMN WIZARD_COMPONENTS.INTERNAL_NAME IS 'Wizard component unique name';
COMMENT ON COLUMN WIZARD_COMPONENTS.ID_SYS_SHORTCUT IS 'Default shortcut to this component';
COMMENT ON COLUMN WIZARD_COMPONENTS.ID_DOC_AREA IS 'Default doc_area, if available, to this component';
COMMENT ON COLUMN WIZARD_COMPONENTS.FLG_AVAILABLE IS 'Availability of the record';
COMMENT ON COLUMN WIZARD_COMPONENTS.CREATE_USER is 'Professional ID which created the record';
COMMENT ON COLUMN WIZARD_COMPONENTS.CREATE_TIME is 'Date of record creation';
COMMENT ON COLUMN WIZARD_COMPONENTS.CREATE_INSTITUTION is 'Institution ID where record was created';
COMMENT ON COLUMN WIZARD_COMPONENTS.UPDATE_USER is 'Professional ID who last updated the record';
COMMENT ON COLUMN WIZARD_COMPONENTS.UPDATE_TIME is 'Date when record was last updated';
COMMENT ON COLUMN WIZARD_COMPONENTS.UPDATE_INSTITUTION is 'Institution ID where record was last updated';
