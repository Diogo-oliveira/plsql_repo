-- CHANGE REASON: [ALERT-306018] ALERT-306018 Versioning Single Page backoffice
CREATE TABLE PN_CONFIG_HELP (
       SP_RESOURCE VARCHAR2(40 CHAR) NOT NULL ENABLE, 
       SP_RESOURCE_COLUMN VARCHAR2(30 CHAR) NOT NULL ENABLE, 
       HELP VARCHAR2(1000 CHAR), 
       COLUMN_DESC VARCHAR2(300 CHAR), 
       TOPIC VARCHAR2(100),
       CREATE_USER VARCHAR2(24 CHAR), 
       CREATE_TIME TIMESTAMP (6) WITH LOCAL TIME ZONE, 
       CREATE_INSTITUTION NUMBER(24), 
       UPDATE_USER VARCHAR2(24 CHAR), 
       UPDATE_TIME TIMESTAMP (6) WITH LOCAL TIME ZONE, 
       UPDATE_INSTITUTION NUMBER(24)
  );
   COMMENT ON COLUMN PN_CONFIG_HELP.SP_RESOURCE IS 'Indicates the single page resource table.';
   COMMENT ON COLUMN PN_CONFIG_HELP.SP_RESOURCE_COLUMN IS 'Indicates the table column respective to the resource config';
   COMMENT ON COLUMN PN_CONFIG_HELP.HELP IS 'Help text';
   COMMENT ON COLUMN PN_CONFIG_HELP.COLUMN_DESC IS 'Resource Column Description (backoffice labels)';
   COMMENT ON COLUMN PN_CONFIG_HELP.TOPIC IS 'Topic of the Resource Column. Eg: Internal Names, Time Limits...';
   COMMENT ON COLUMN PN_CONFIG_HELP.CREATE_USER IS 'Creation User';
   COMMENT ON COLUMN PN_CONFIG_HELP.CREATE_TIME IS 'Creation Time';
   COMMENT ON COLUMN PN_CONFIG_HELP.CREATE_INSTITUTION IS 'Creation Institution';
   COMMENT ON COLUMN PN_CONFIG_HELP.UPDATE_USER IS 'Update User';
   COMMENT ON COLUMN PN_CONFIG_HELP.UPDATE_TIME IS 'Update Time';
   COMMENT ON COLUMN PN_CONFIG_HELP.UPDATE_INSTITUTION IS 'Update Institution';
   COMMENT ON TABLE PN_CONFIG_HELP  IS 'Help text relative to a single page resource column. Identical to the column coments';
/
-- CHANGE END: Nuno Alves