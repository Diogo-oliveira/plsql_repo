CREATE TABLE WIZARD
(
  ID_WIZARD NUMBER(24) NOT NULL,
  INTERNAL_NAME VARCHAR2(200 CHAR) NOT NULL,
FLG_AVAILABLE VARCHAR2(1 CHAR) DEFAULT 'Y' NOT NULL,
CREATE_USER VARCHAR2(24 CHAR),
CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
CREATE_INSTITUTION NUMBER(24),
UPDATE_USER VARCHAR2(24 CHAR),
UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION NUMBER(24)
);
/

ALTER TABLE WIZARD MOVE TABLESPACE TABLE_S;

COMMENT ON TABLE WIZARD IS 'Aplication wizards';
COMMENT ON COLUMN WIZARD.ID_WIZARD IS 'Wizard primary key';
COMMENT ON COLUMN WIZARD.INTERNAL_NAME IS 'Wizard unique name';
COMMENT ON COLUMN WIZARD.FLG_AVAILABLE IS 'Availability of the record';
COMMENT ON COLUMN WIZARD.CREATE_USER is 'Professional ID which created the record';
COMMENT ON COLUMN WIZARD.CREATE_TIME is 'Date of record creation';
COMMENT ON COLUMN WIZARD.CREATE_INSTITUTION is 'Institution ID where record was created';
COMMENT ON COLUMN WIZARD.UPDATE_USER is 'Professional ID who last updated the record';
COMMENT ON COLUMN WIZARD.UPDATE_TIME is 'Date when record was last updated';
COMMENT ON COLUMN WIZARD.UPDATE_INSTITUTION is 'Institution ID where record was last updated';
