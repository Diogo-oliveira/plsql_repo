
  CREATE TABLE USA_PRESCRIPTION_PHARM
   (	ID_PRESCRIPTION_PHARM NUMBER(24,0) NOT NULL ENABLE,
	DT_PRESCRIPTION_PHARM DATE NOT NULL ENABLE,
	ID_PRESCRIPTION NUMBER(24,0) NOT NULL ENABLE,
	MEDID NUMBER(10,0),
	ID_DIETARY_DRUG NUMBER(24,0),
	DESC_DIETARY VARCHAR2(1000),
	ID_MANIPULATED NUMBER(24,0),
	DESC_MANIP VARCHAR2(1000),
	QTY_MANIP NUMBER(6,2),
	UNIT_MANIP VARCHAR2(4),
	QTY NUMBER(3,0) NOT NULL ENABLE,
	GENERICO VARCHAR2(1),
	DOSAGE VARCHAR2(100),
	NOTES VARCHAR2(173),
	FLG_CI VARCHAR2(1) NOT NULL ENABLE,
	FLG_CHEAPER VARCHAR2(1) NOT NULL ENABLE,
	FLG_ATTENTION VARCHAR2(2),
	FLG_ATTENTION_PRINT VARCHAR2(1),
	FLG_INTERAC_MED VARCHAR2(1) NOT NULL ENABLE,
	FLG_INTERAC_ALLERGY VARCHAR2(1) NOT NULL ENABLE,
	VIAS_ADMIN_ID NUMBER(24,0),
	ID_PREVIOUS_PRESC_PHARM NUMBER(24,0),
	QTY_PER_TAKE NUMBER(2,0),
	INTERVAL NUMBER(12,4),
	DURATION NUMBER(6,0),
	DT_BEGIN DATE,
	DT_END DATE
   );


COMMENT ON TABLE usa_prescription_pharm IS 'Prescrições para a farmácia externa - VERSÃO USA.' ;

COMMENT ON COLUMN usa_prescription_pharm.id_prescription_pharm IS 'Chave primária.' ;
COMMENT ON COLUMN usa_prescription_pharm.dt_prescription_pharm IS 'Data em que o medicamento foi prescrito.' ;
COMMENT ON COLUMN usa_prescription_pharm.id_prescription IS 'ID da prescrição.' ;
COMMENT ON COLUMN usa_prescription_pharm.medid IS 'ID do medicamento.' ;
COMMENT ON COLUMN usa_prescription_pharm.id_dietary_drug IS 'ID do dietético.' ;
COMMENT ON COLUMN usa_prescription_pharm.desc_dietary IS 'Descritivo do dietético.' ;
COMMENT ON COLUMN usa_prescription_pharm.id_manipulated IS 'ID do manipulado (se a prescrição for feita através dos mais frequentes).' ;
COMMENT ON COLUMN usa_prescription_pharm.desc_manip IS 'Descritivo do manipulado.' ;
COMMENT ON COLUMN usa_prescription_pharm.qty_manip IS 'Quantidade a preparar (só existe nos manipulados).' ;
COMMENT ON COLUMN usa_prescription_pharm.unit_manip IS 'Unidade da quantidade a preparar, QTY_MANIP (só existe para manipulados)' ;
COMMENT ON COLUMN usa_prescription_pharm.qty IS 'Nº de embalagens.' ;
COMMENT ON COLUMN usa_prescription_pharm.generico IS 'Autorização de genérico.' ;
COMMENT ON COLUMN usa_prescription_pharm.dosage IS 'Posologia.' ;
COMMENT ON COLUMN usa_prescription_pharm.notes IS 'Notas da requisição. (O nº limite de carateres é 173 pois é o máximo permitido na receita impressa)' ;
COMMENT ON COLUMN usa_prescription_pharm.flg_ci IS 'Chamada de atenção de contra-indicações: Y - sim; N - não; R - lida.' ;
COMMENT ON COLUMN usa_prescription_pharm.flg_cheaper IS 'Chamada de atenção de medicamentos mais baratos: Y - sim; N - não; R - lida.' ;
COMMENT ON COLUMN usa_prescription_pharm.flg_attention IS 'Flag que indica a chamada de atenção prioritária: CI - contra-indicações; B - medicamentos mais baratos; J - justificação de prescrição; IM - interacções medicamentosas' ;
COMMENT ON COLUMN usa_prescription_pharm.flg_attention_print IS 'Flag que indica se o profissional prosseguiu (Y) ou não (N) com a impressão apesar das chamadas de atenção.' ;
COMMENT ON COLUMN usa_prescription_pharm.flg_interac_med IS 'Chamada de atenção de interacções com alergias: Y - sim; N - não; R - lida.' ;
COMMENT ON COLUMN usa_prescription_pharm.vias_admin_id IS 'ID da via de administração (nunca é preenchido no caso de medicamentos normais. Só é preenchido se forem produtos dietéticos e manipulados, se o profissional pretender.).' ;
COMMENT ON COLUMN usa_prescription_pharm.id_previous_presc_pharm IS 'ID da prescrição que se está a alterar (só é preenchida nos casos em que o utilizador faz uma alteração de posologia).' ;
COMMENT ON COLUMN usa_prescription_pharm.qty_per_take IS 'Nº de unidades por toma (por ex., 2 comprimidos)' ;
COMMENT ON COLUMN usa_prescription_pharm.interval IS 'Intervalo (em segundos)' ;
COMMENT ON COLUMN usa_prescription_pharm.duration IS 'Duração (em dias)' ;
COMMENT ON COLUMN usa_prescription_pharm.dt_begin IS 'Data de início' ;
COMMENT ON COLUMN usa_prescription_pharm.dt_end IS 'Data prevista de fim' ;





ALTER TABLE USA_PRESCRIPTION_PHARM ADD DT_BEGIN_TSTZ TIMESTAMP WITH LOCAL TIME ZONE; 
COMMENT ON COLUMN USA_PRESCRIPTION_PHARM.DT_BEGIN_TSTZ IS 'Data de in¡cio'; 




ALTER TABLE USA_PRESCRIPTION_PHARM ADD DT_END_TSTZ TIMESTAMP WITH LOCAL TIME ZONE; 
COMMENT ON COLUMN USA_PRESCRIPTION_PHARM.DT_END_TSTZ IS 'Data prevista de fim'; 




ALTER TABLE USA_PRESCRIPTION_PHARM ADD DT_PRESCRIPTION_PHARM_TSTZ TIMESTAMP WITH LOCAL TIME ZONE; 
COMMENT ON COLUMN USA_PRESCRIPTION_PHARM.DT_PRESCRIPTION_PHARM_TSTZ IS 'Data em que o medicamento foi prescrito.'; 
