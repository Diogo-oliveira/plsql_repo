  CREATE TABLE INTERVAL_CONDITIONS
  (ID_INTERVAL_CONDITIONS NUMBER(24,0) NOT NULL ENABLE,
	 ID_VITAL_SIGN_CONDITIONS NUMBER(24,0) NOT NULL ENABLE,
	 val_max NUMBER(24,0) ,
	 val_min NUMBER(24,0) ,
	 id_unit_measure NUMBER(24,0) ,
   FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
   ADW_LAST_UPDATE DATE NOT NULL ENABLE);


COMMENT ON TABLE INTERVAL_CONDITIONS IS 'Parametrização das condições que um sinal vital pode assumir ' ;

COMMENT ON COLUMN INTERVAL_CONDITIONS.id_interval_conditions IS 'Chave primária' ;
COMMENT ON COLUMN INTERVAL_CONDITIONS.id_vital_sign_conditions IS 'Identificador das condições que um sinal vital pode assumir' ;
COMMENT ON COLUMN INTERVAL_CONDITIONS.val_max is 'Valor máximo';
COMMENT ON COLUMN INTERVAL_CONDITIONS.val_min is 'Valor mínimo';
COMMENT ON COLUMN INTERVAL_CONDITIONS.id_unit_measure is 'Unidade de medida';
COMMENT ON COLUMN INTERVAL_CONDITIONS.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN INTERVAL_CONDITIONS.adw_last_update IS 'Data da última alteração' ;