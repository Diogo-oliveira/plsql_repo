
CREATE TABLE "REF_COMPLETION"(
ID_REF_COMPLETION NUMBER(24,0) NOT NULL,
CODE_REF_COMPLETION VARCHAR2(200) NOT NULL,
CODE_REF_COMPL_SHORT VARCHAR2(200) NOT NULL,
CODE_WARNING VARCHAR2(200) NOT NULL,
FLG_TYPE VARCHAR2(1) NOT NULL,
CREATE_USER VARCHAR2(24) ,
CREATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE ,
CREATE_INSTITUTION NUMBER(24,0) ,
UPDATE_USER VARCHAR2(24) ,
UPDATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE ,
UPDATE_INSTITUTION NUMBER(24,0) );

   COMMENT ON COLUMN "REF_COMPLETION"."ID_REF_COMPLETION" IS 'Primary key';
   COMMENT ON COLUMN "REF_COMPLETION"."CODE_REF_COMPLETION" IS 'Name';
   COMMENT ON COLUMN "REF_COMPLETION"."CODE_REF_COMPL_SHORT" IS 'Short name';
   COMMENT ON COLUMN "REF_COMPLETION"."CODE_WARNING" IS 'Warning message';
   COMMENT ON COLUMN "REF_COMPLETION"."FLG_TYPE" IS 'Completion output: (P)rint, (E)lectronic, (A)ll';
   COMMENT ON COLUMN "REF_COMPLETION"."CREATE_USER" IS 'Creation User';
   COMMENT ON COLUMN "REF_COMPLETION"."CREATE_TIME" IS 'Creation Time';
   COMMENT ON COLUMN "REF_COMPLETION"."CREATE_INSTITUTION" IS 'Creation Institution';
   COMMENT ON COLUMN "REF_COMPLETION"."UPDATE_USER" IS 'Update User';
   COMMENT ON COLUMN "REF_COMPLETION"."UPDATE_TIME" IS 'Update Time';
   COMMENT ON COLUMN "REF_COMPLETION"."UPDATE_INSTITUTION" IS 'Update Institution';
   COMMENT ON TABLE "REF_COMPLETION"  IS 'Referral completion options';


