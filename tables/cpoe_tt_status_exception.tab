

-- CHANGED BY: Diogo Oliveira
-- CHANGE DATE: 15/10/2019 14:48
-- CHANGE REASON: [EMR-21164] - CPOE: possibility to configure statuses and a timeline for the orders to be shown - DDL
CREATE TABLE CPOE_TT_STATUS_EXCEPTION (
ID_CPOE_TT_STATUS_EXCEPTION NUMBER(24) not null,
ID_TASK_TYPE NUMBER(24) not null,
FLG_STATUS VARCHAR2(10 CHAR) not null,
FLG_FILTER_TAB VARCHAR2(2 CHAR) not null,
FLG_ADD_REMOVE VARCHAR2(1 CHAR) DEFAULT 'N',
ID_INSTITUTION NUMBER(24) DEFAULT 0,
ID_SOFTWARE NUMBER(24) DEFAULT 0,
CREATE_USER VARCHAR2(24 CHAR),
CREATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE,
CREATE_INSTITUTION NUMBER(24),
UPDATE_USER VARCHAR2(24 CHAR),
UPDATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION NUMBER(24)
);

COMMENT ON TABLE CPOE_TT_STATUS_EXCEPTION IS 'Cpoe Status Filter Exception (Remove or Add status on CPOE GRID)';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.ID_CPOE_TT_STATUS_EXCEPTION IS 'Primary Key';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.ID_TASK_TYPE IS 'CPOE task type ID';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.FLG_STATUS IS 'CPOE task flag status';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.FLG_FILTER_TAB IS 'CPOE task filter: A - Active | I - Inactive | D - Draft | X - Cancelled';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.FLG_ADD_REMOVE IS 'Exception Type: A- Add, R- Remove';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.ID_INSTITUTION IS 'ID of institution where exception is to be applied (0 for all)';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.ID_SOFTWARE IS 'ID of software';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.CREATE_USER IS 'Creation user';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.CREATE_TIME IS 'Creation time';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.CREATE_INSTITUTION IS 'Creation institution';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.UPDATE_USER IS 'Update user';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.UPDATE_TIME IS 'Update time';
COMMENT ON COLUMN CPOE_TT_STATUS_EXCEPTION.UPDATE_INSTITUTION IS 'Update institution';
-- CHANGE END: Diogo Oliveira