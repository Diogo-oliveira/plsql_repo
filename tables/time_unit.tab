

  CREATE TABLE TIME_UNIT
   (	ID_TIME_UNIT NUMBER(12,0) NOT NULL ENABLE,
	CODE_TIME_UNIT VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE time_unit IS 'Unidades de tempo' ;

COMMENT ON COLUMN time_unit.code_time_unit IS 'Código para tradução da unidade de tempo (horas, dias, semanas, meses, anos, ...)' ;
COMMENT ON COLUMN time_unit.flg_type IS 'Letra única para cada unidade de tempo registada' ;
COMMENT ON COLUMN time_unit.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
