--Table Vacc
CREATE TABLE VACC
( ID_VACC         NUMBER(12) not null,
  CODE_VACC       VARCHAR2(200) not null,
  CODE_DESC_VACC  VARCHAR2(200),
  RANK            NUMBER(5),
  ADW_LAST_UPDATE DATE not null
);


comment on table VACC is 'Esta tabela contem todas as vacinas';

COMMENT ON COLUMN VACC.ID_VACC IS 'Chave primária';
COMMENT ON COLUMN VACC.CODE_VACC IS 'Código da Vacina';
COMMENT ON COLUMN VACC.CODE_DESC_VACC IS 'Descrição do código da vacina';
COMMENT ON COLUMN VACC.RANK IS 'Ordem da vacina';
COMMENT ON COLUMN VACC.ADW_LAST_UPDATE IS 'Data da última alteração';

