-- CHANGED BY: mario.mineiro
-- CHANGE DATE: 11/11/2014 15:26
-- CHANGE REASON: [ALERT-301386] 
DECLARE
    e_name_already_exists EXCEPTION;

    PRAGMA EXCEPTION_INIT(e_name_already_exists, -1430);
BEGIN
    BEGIN
        EXECUTE IMMEDIATE 'alter table vacc add ID_MAX_AGE NUMBER(12)';
    EXCEPTION
        WHEN e_name_already_exists THEN
            dbms_output.put_line('AVISO: Operação já executada anteriormente.');
    END;

    EXECUTE IMMEDIATE 'comment on column VACC.ID_MAX_AGE   is ''Idade máxima para a toma da dose em dias''';
END;
/
-- CHANGE END: mario.mineiro

