

  CREATE TABLE TRIAGE_CONSIDERATIONS
   (	ID_TRIAGE_CONSIDERATIONS NUMBER(24,0) NOT NULL ENABLE,
	CODE_TRIAGE_CONSIDERATIONS VARCHAR2(200) NOT NULL ENABLE,
	RANK NUMBER(24,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE
   );


COMMENT ON COLUMN triage_considerations.id_triage_considerations IS 'Chave primária' ;
COMMENT ON COLUMN triage_considerations.code_triage_considerations IS 'Descrição das considerações por língua' ;
COMMENT ON COLUMN triage_considerations.rank IS 'Ordenação' ;
COMMENT ON COLUMN triage_considerations.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN triage_considerations.flg_available IS 'Disponibilidade do registo' ;


