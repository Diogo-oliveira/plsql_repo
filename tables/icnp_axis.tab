

  CREATE TABLE ICNP_AXIS
   (	ID_AXIS NUMBER(12,0) NOT NULL ENABLE,
	CODE_AXIS VARCHAR2(200) NOT NULL ENABLE,
	ID_CLASSIFICATION NUMBER(12,0) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(3) NOT NULL ENABLE,
	CODE_HELP_AXIS VARCHAR2(200),
	RANK NUMBER(12,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_MANDATORY VARCHAR2(1)
   );


COMMENT ON TABLE icnp_axis IS 'Eixos' ;

COMMENT ON COLUMN icnp_axis.code_axis IS 'Código para tradução do eixo' ;
COMMENT ON COLUMN icnp_axis.code_help_axis IS 'Código para tradução da ajuda de contexto do eixo' ;
COMMENT ON COLUMN icnp_axis.flg_mandatory IS 'Obrigatoriedade: Y - obrigatório; N - não obrigatório; M - obrigatório em alternância com outro' ;


