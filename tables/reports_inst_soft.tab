CREATE TABLE REPORTS_INST_SOFT
 (ID_REPORTS_INST_SOFT NUMBER(12,0) NOT NULL
 ,ID_REPORTS NUMBER(24) NOT NULL
 ,ID_INSTITUTION NUMBER(24) NOT NULL
 ,ID_SOFTWARE NUMBER(24) NOT NULL
 ,FLG_DIGITAL_SIGNATURE VARCHAR2(1) NOT NULL
 ,FLG_PARAM_DIGITAL_SIGNATURE VARCHAR2(256)
 )
 TABLESPACE TABLE_M;
 
 COMMENT ON TABLE REPORTS_INST_SOFT IS 'Allows reports specific configurations by software and institution.';
 
 COMMENT ON COLUMN REPORTS_INST_SOFT.ID_REPORTS_INST_SOFT IS 'Primary key';
 
 COMMENT ON COLUMN REPORTS_INST_SOFT.ID_REPORTS IS 'Report to which this record applies';
 
 COMMENT ON COLUMN REPORTS_INST_SOFT.ID_INSTITUTION IS 'Institution to which this records refers';
 
 COMMENT ON COLUMN REPORTS_INST_SOFT.ID_SOFTWARE IS 'Softaware to which this records refers';
 
 COMMENT ON COLUMN REPORTS_INST_SOFT.FLG_DIGITAL_SIGNATURE IS 'Y - digital signature required. N digital signature not required.';
 
 COMMENT ON COLUMN REPORTS_INST_SOFT.FLG_PARAM_DIGITAL_SIGNATURE IS 'Digital signature configuration parameters. Used , for instance, to define the digital signature position in the report.';


--Luís Gaspar, 12-08-2008
