

  CREATE TABLE GRID_TASK_BETWEEN
   (	ID_GRID_TASK_BETWEEN NUMBER(24,0) NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	FLG_DRUG VARCHAR2(1),
	FLG_INTERV VARCHAR2(1),
	FLG_MONITOR VARCHAR2(1),
	FLG_NURSE_ACT VARCHAR2(1),
	FLG_PHARM VARCHAR2(1),
	FLG_VACCINE VARCHAR2(1)
   );


COMMENT ON COLUMN grid_task_between.id_grid_task_between IS 'Chave primária.' ;
COMMENT ON COLUMN grid_task_between.id_episode IS 'ID do episódio.' ;
COMMENT ON COLUMN grid_task_between.flg_drug IS 'Indicação da existência de prescrição de medicamentos.' ;
COMMENT ON COLUMN grid_task_between.flg_interv IS 'Indicação da existência de requisição de procedimentos.' ;
COMMENT ON COLUMN grid_task_between.flg_monitor IS 'Indicação da existência de requisição de monitorizações.' ;
COMMENT ON COLUMN grid_task_between.flg_nurse_act IS 'Indicação da existência de requisição de pensos.' ;
COMMENT ON COLUMN grid_task_between.flg_pharm IS 'Indicação da existência de requisição de medicamentos à farmácia.' ;
COMMENT ON COLUMN grid_task_between.flg_vaccine IS 'Indicação da existência de requisição de vacinas.' ;

comment on table GRID_TASK_BETWEEN
  is 'Tabela com a indicação, por episódio, da existência de requisições até à próxima consulta para hoje. Utilizada na função do 2º botão da enfermeira.';


ALTER TABLE GRID_TASK_BETWEEN
ADD (FLG_ICNP_INTERV VARCHAR2(1));

COMMENT ON COLUMN GRID_TASK_BETWEEN.FLG_ICNP_INTERV IS 'Indicação da existência de requisição de intervenções de enfermagem.';



