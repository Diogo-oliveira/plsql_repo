CREATE TABLE WIZARD_COMP_REL
(
  ID_WIZARD NUMBER(24) NOT NULL,
  ID_WIZARD_COMPONENT NUMBER(24) NOT NULL,
ID_SYS_SHORTCUT NUMBER(24),
ID_DOC_AREA NUMBER(24),
CREATE_USER VARCHAR2(24 CHAR),
CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
CREATE_INSTITUTION NUMBER(24),
UPDATE_USER VARCHAR2(24 CHAR),
UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION NUMBER(24)
);
/

ALTER TABLE WIZARD_COMP_REL MOVE TABLESPACE TABLE_S;

COMMENT ON TABLE WIZARD_COMP_REL IS 'Wizard Components relation';
COMMENT ON COLUMN WIZARD_COMP_REL.ID_WIZARD IS 'Wizard identifier. Part of primary key';
COMMENT ON COLUMN WIZARD_COMP_REL.ID_WIZARD_COMPONENT IS 'Wizard component identifier. Part of primary key';
COMMENT ON COLUMN WIZARD_COMP_REL.ID_SYS_SHORTCUT IS 'Specific shortcut to this component, if NULL default shortcut of table WIZARD_COMPONENTS is used';
COMMENT ON COLUMN WIZARD_COMP_REL.ID_DOC_AREA IS 'Specific doc_area, if NULL default doc_area of table WIZARD_COMPONENTS is used';
COMMENT ON COLUMN WIZARD_COMP_REL.CREATE_USER is 'Professional ID which created the record';
COMMENT ON COLUMN WIZARD_COMP_REL.CREATE_TIME is 'Date of record creation';
COMMENT ON COLUMN WIZARD_COMP_REL.CREATE_INSTITUTION is 'Institution ID where record was created';
COMMENT ON COLUMN WIZARD_COMP_REL.UPDATE_USER is 'Professional ID who last updated the record';
COMMENT ON COLUMN WIZARD_COMP_REL.UPDATE_TIME is 'Date when record was last updated';
COMMENT ON COLUMN WIZARD_COMP_REL.UPDATE_INSTITUTION is 'Institution ID where record was last updated';
