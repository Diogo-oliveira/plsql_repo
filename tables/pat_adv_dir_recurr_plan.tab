                                             i_flg_default_child => 'N');

    BEGIN
        EXECUTE IMMEDIATE '
CREATE TABLE PAT_ADV_DIR_RECURR_PLAN
(
  ID_PAT_ADVANCE_DIRECTIVE       NUMBER(24) NOT NULL,
  ID_PROFILE_TEMPLATE            NUMBER(24) NOT NULL,
  ID_RECURR_PLAN                 NUMBER(24) NOT NULL,
