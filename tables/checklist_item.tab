/** Tables */
CREATE TABLE CHECKLIST_ITEM(
    FLG_CONTENT_CREATOR VARCHAR2(1 CHAR) NOT NULL,
INTERNAL_NAME VARCHAR2(1000 CHAR) NOT NULL,
VERSION NUMBER(6) NOT NULL,
ITEM NUMBER(6) NOT NULL,
ID_CHECKLIST_ITEM NUMBER(24) NOT NULL,
ID_CHECKLIST_VERSION NUMBER(24) NOT NULL,
ITEM_DESCRIPTION VARCHAR2(1000 CHAR),
CODE_ITEM_DESCRIPTION VARCHAR2(200 CHAR),
FLG_USE_TRANSLATION VARCHAR2(1 CHAR) NOT NULL,
RANK NUMBER(6),
  CREATE_USER VARCHAR2(24 CHAR),
    CREATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE,
CREATE_INSTITUTION NUMBER(24),
UPDATE_USER VARCHAR2(24 CHAR),
UPDATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION NUMBER(24)
);

COMMENT ON TABLE CHECKLIST_ITEM IS 'Checklist items';

COMMENT ON COLUMN CHECKLIST_ITEM.FLG_CONTENT_CREATOR IS 'Content creator: Checklist created by (A)LERT, Checklist created by (I)nstitution';
COMMENT ON COLUMN CHECKLIST_ITEM.INTERNAL_NAME IS 'Checklist''s internal name (original name)';
COMMENT ON COLUMN CHECKLIST_ITEM.VERSION IS 'An integer to represent the version number of the checklist template';
COMMENT ON COLUMN CHECKLIST_ITEM.ITEM IS 'Item ID within a checklist';
COMMENT ON COLUMN CHECKLIST_ITEM.ID_CHECKLIST_ITEM IS 'Alternate key';
COMMENT ON COLUMN CHECKLIST_ITEM.ID_CHECKLIST_VERSION IS 'Referred checklist (specific version)';
COMMENT ON COLUMN CHECKLIST_ITEM.ITEM_DESCRIPTION IS 'Item description';
COMMENT ON COLUMN CHECKLIST_ITEM.CODE_ITEM_DESCRIPTION IS 'Code to retrieve translated description. This field is set when a checklist is created by ALERT';
COMMENT ON COLUMN CHECKLIST_ITEM.FLG_USE_TRANSLATION IS 'Use "code_item_description" instead of "item_description" to retrieve translated name: (Y)es, (N)o';
COMMENT ON COLUMN CHECKLIST_ITEM.RANK IS 'Item order in the checklist';
COMMENT ON COLUMN CHECKLIST_ITEM.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN CHECKLIST_ITEM.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN CHECKLIST_ITEM.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN CHECKLIST_ITEM.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN CHECKLIST_ITEM.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN CHECKLIST_ITEM.UPDATE_INSTITUTION IS 'Update Institution';
-- CHANGE END: Ariel Machado