

  CREATE TABLE PAT_CLI_ATTRIBUTES
   (	ID_PAT_CLI_ATTRIBUTES NUMBER(24,0) NOT NULL ENABLE,
	ID_PATIENT NUMBER(24,0) NOT NULL ENABLE,
	FLG_BREAST_FEED VARCHAR2(1),
	FLG_PREGNANCY VARCHAR2(1),
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(24,0) NOT NULL ENABLE,
	ID_RECM NUMBER(24,0),
	DT_VAL_RECM DATE
   );


COMMENT ON TABLE pat_cli_attributes IS 'Outros atributos clinicos do paciente' ;

COMMENT ON COLUMN pat_cli_attributes.id_pat_cli_attributes IS 'Chave primaria' ;
COMMENT ON COLUMN pat_cli_attributes.id_patient IS 'Chave primaria' ;
COMMENT ON COLUMN pat_cli_attributes.flg_breast_feed IS 'Indicação de amamentação: Y / N' ;
COMMENT ON COLUMN pat_cli_attributes.flg_pregnancy IS 'Indicação de gravidez: Y / N' ;

