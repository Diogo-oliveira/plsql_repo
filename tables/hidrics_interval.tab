

  CREATE TABLE HIDRICS_INTERVAL
   (	ID_HIDRICS_INTERVAL NUMBER(24,0) NOT NULL ENABLE,
	CODE_HIDRICS_INTERVAL VARCHAR2(200) NOT NULL ENABLE,
	RANK NUMBER(24,0),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	INTERVAL_VALUE VARCHAR2(24)
   );


COMMENT ON TABLE hidrics_interval IS 'Registo dos vários intervalos possiveis para o registo dos hidricos' ;

COMMENT ON COLUMN hidrics_interval.id_hidrics_interval IS 'Chave primária' ;
COMMENT ON COLUMN hidrics_interval.code_hidrics_interval IS 'Código para obter os intervalos dos hidricos por língua' ;
COMMENT ON COLUMN hidrics_interval.rank IS 'Ordenação' ;
COMMENT ON COLUMN hidrics_interval.flg_available IS 'Disponibilidade do registo' ;
COMMENT ON COLUMN hidrics_interval.adw_last_update IS 'Data da última alteração' ;


