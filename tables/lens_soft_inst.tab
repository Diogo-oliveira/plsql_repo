CREATE TABLE LENS_SOFT_INST
 (ID_LENS NUMBER(24) NOT NULL
 ,ID_SOFTWARE NUMBER NOT NULL
 ,ID_INSTITUTION NUMBER NOT NULL
 ,FLG_AVAILABLE VARCHAR2(1) NOT NULL
 ,RANK NUMBER(6) NOT NULL
 )
/

COMMENT ON TABLE LENS_SOFT_INST IS 'Configuration table for lens. This table stores the lens available by institution and software.'
/

COMMENT ON COLUMN LENS_SOFT_INST.ID_LENS IS 'Lens Id'
/

COMMENT ON COLUMN LENS_SOFT_INST.ID_SOFTWARE IS 'Software Id'
/

COMMENT ON COLUMN LENS_SOFT_INST.ID_INSTITUTION IS 'Institution Id'
/

COMMENT ON COLUMN LENS_SOFT_INST.FLG_AVAILABLE IS 'Availability of this record- Y-Yes  N-No'
/

COMMENT ON COLUMN LENS_SOFT_INST.RANK IS 'Ordering by which the records will be sorted'
/
