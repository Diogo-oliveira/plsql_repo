CREATE TABLE OPINION_TYPE_CATEGORY (
ID_OPINION_TYPE_CATEGORY NUMBER(24),
ID_OPINION_TYPE NUMBER(24),
ID_CATEGORY NUMBER(24),
FLG_AVAILABLE VARCHAR2(2 CHAR),
CREATE_USER   VARCHAR2(24),
CREATE_TIME   TIMESTAMP(6) WITH LOCAL TIME ZONE,
CREATE_INSTITUTION    NUMBER(24),
UPDATE_USER   VARCHAR2(24),
UPDATE_TIME   TIMESTAMP(6) WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION    NUMBER(24)
);


COMMENT ON TABLE OPINION_TYPE_CATEGORY  IS 'Table which relationate profissional category with opinion type';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.ID_OPINION_TYPE_CATEGORY IS 'SEQ_OPINION_TYPE_CATEGORY';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.ID_OPINION_TYPE IS 'Opinion Type Id';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.ID_CATEGORY IS 'Category Id';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.FLG_AVAILABLE IS 'Flg available (Y/N)';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN OPINION_TYPE_CATEGORY.UPDATE_INSTITUTION IS 'Update Institution';
