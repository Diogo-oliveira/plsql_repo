

  CREATE TABLE REP_SECTION
   (	ID_REP_SECTION NUMBER(24,0) NOT NULL ENABLE,
	CODE_REP_SECTION VARCHAR2(200) NOT NULL ENABLE,
	INTERNAL_NAME VARCHAR2(200),
	RANK NUMBER NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1)
   );


COMMENT ON TABLE rep_section IS 'Secções que compõem os reports' ;

COMMENT ON COLUMN rep_section.id_rep_section IS 'Chave primária' ;
COMMENT ON COLUMN rep_section.code_rep_section IS 'Código para obter as secções dos relatórios por língua' ;
COMMENT ON COLUMN rep_section.internal_name IS 'Nome interno' ;
COMMENT ON COLUMN rep_section.rank IS 'Ordenação' ;
COMMENT ON COLUMN rep_section.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN rep_section.flg_available IS 'Disponibilidade' ;


alter table rep_section add (reports_sql long);

comment on column REP_SECTION.REPORTS_SQL IS 'Código para obtenção da informação para determinado tipo de impressão';


alter table rep_section modify reports_sql CLOB;

ALTER TABLE rep_section add id_rep_section_parent NUMBER(24);


