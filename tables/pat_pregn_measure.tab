ALTER TABLE PAT_PREGN_MEASURE ADD DT_PAT_PREGN_MEASURE_TSTZ TIMESTAMP WITH LOCAL TIME ZONE; 
COMMENT ON COLUMN PAT_PREGN_MEASURE.DT_PAT_PREGN_MEASURE_TSTZ IS 'Data de registo';

