

  CREATE TABLE INSTITUTION_EXT_HIST
   (	ID_INSTITUTION_EXT_HIST NUMBER(24,0),
	ID_INSTITUTION_EXT NUMBER(24,0),
	FLG_TYPE VARCHAR2(1),
	INSTITUTION_NAME VARCHAR2(200),
	ID_LANGUAGE NUMBER(6,0),
	ADDRESS VARCHAR2(200),
	LOCATION VARCHAR2(200),
	DISTRICT VARCHAR2(200),
	ZIP_CODE VARCHAR2(200),
	ID_COUNTRY NUMBER(12,0),
	WORK_PHONE VARCHAR2(30),
	FAX VARCHAR2(30),
	WEBSITE VARCHAR2(200),
	EMAIL VARCHAR2(100),
	ID_INSTITUTION NUMBER(24,0),
	FLG_AVAILABLE VARCHAR2(1),
	BEGIN_DATE TIMESTAMP (6) WITH LOCAL TIME ZONE,
	END_DATE TIMESTAMP (6) WITH LOCAL TIME ZONE,
	ID_PROFESSIONAL NUMBER(24,0)
   ) ;


   COMMENT ON COLUMN INSTITUTION_EXT_HIST.ID_INSTITUTION_EXT IS 'External institution ID';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.FLG_TYPE IS 'External institution type. Clinic – C; Office - O';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.INSTITUTION_NAME IS 'External institution name';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.ID_LANGUAGE IS 'Prefered language ID';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.ADDRESS IS 'Address';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.LOCATION IS 'City or location';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.DISTRICT IS 'County';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.ZIP_CODE IS 'Zip code';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.ID_COUNTRY IS 'Country ID';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.WORK_PHONE IS 'Work phone number';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.FAX IS 'Fax number';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.WEBSITE IS 'Website address';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.EMAIL IS 'Professional e-mail';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.ID_INSTITUTION IS 'Institution ID';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.FLG_AVAILABLE IS 'External institution status: Y - Yes; N - No';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.BEGIN_DATE IS 'Registry creation date';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.END_DATE IS 'Registry outdated date';



   COMMENT ON COLUMN INSTITUTION_EXT_HIST.ID_PROFESSIONAL IS 'Professional that created/updated the information';



   COMMENT ON TABLE INSTITUTION_EXT_HIST  IS 'External institutions';




