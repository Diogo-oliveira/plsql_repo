CREATE TABLE APPROVAL_FUNCTION
 (ID_APPROVAL_FUNCTION NUMBER(24) NOT NULL
 ,FUNCTION VARCHAR2(2000) NOT NULL
 ,INTERNAL_DESCRIPTION VARCHAR2(240) NOT NULL
 );

