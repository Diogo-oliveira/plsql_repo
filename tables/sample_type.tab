

  CREATE TABLE SAMPLE_TYPE
   (	ID_SAMPLE_TYPE NUMBER(12,0) NOT NULL ENABLE,
	CODE_SAMPLE_TYPE VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	GENDER VARCHAR2(1),
	AGE_MIN NUMBER(3,0),
	AGE_MAX NUMBER(3,0)
   );


COMMENT ON TABLE sample_type IS 'Tipos de amostra para colheita' ;

COMMENT ON COLUMN sample_type.code_sample_type IS 'Código para nome' ;
COMMENT ON COLUMN sample_type.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN sample_type.rank IS 'Ordem de apresentação' ;
COMMENT ON COLUMN sample_type.gender IS 'Género ao qual se aplica' ;
COMMENT ON COLUMN sample_type.age_min IS 'Idade mínima à qual se aplica' ;
COMMENT ON COLUMN sample_type.age_max IS 'Idade máxima à qual se aplica' ;


ALTER TABLE SAMPLE_TYPE  ADD (ID_CONTENT VARCHAR2(200));
COMMENT ON COLUMN SAMPLE_TYPE.ID_CONTENT  IS 'Identificador único de conteúdo';

