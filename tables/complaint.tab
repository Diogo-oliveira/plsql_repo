

  CREATE TABLE COMPLAINT
   (	ID_COMPLAINT NUMBER NOT NULL ENABLE,
	CODE_COMPLAINT VARCHAR2(240) NOT NULL ENABLE,
	RANK NUMBER,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ID_DOC_TEMPLATE NUMBER(24,0) NOT NULL ENABLE
   );


COMMENT ON COLUMN complaint.id_complaint IS 'Chave primária' ;
COMMENT ON COLUMN complaint.code_complaint IS 'Descrição da queixa' ;
COMMENT ON COLUMN complaint.rank IS 'Ordem de visualização' ;
COMMENT ON COLUMN complaint.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN complaint.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;

comment on column COMPLAINT.ID_DOC_TEMPLATE
  is 'Template da queixa';


