

  CREATE TABLE CLINICAL_SERVICE
   (	ID_CLINICAL_SERVICE NUMBER(12,0) NOT NULL ENABLE,
	ID_CLINICAL_SERVICE_PARENT NUMBER(12,0),
	CODE_CLINICAL_SERVICE VARCHAR2(200) NOT NULL ENABLE,
	IMAGE_NAME VARCHAR2(240),
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE clinical_service IS 'Serviços clínicos prestados pelos profissionais de saúde. Tipos de consulta - por exemplo a ginecologia, mas também os respectivos sub-especialidades, como planeamento familiar. Se se registar ginecologia e planeamento familiar, pode-se indicar que a primeira é "pai" da segunda, por ser mais genérica. Exames - por exemplo a audiologia ou cardiopneumologia' ;

COMMENT ON COLUMN clinical_service.id_clinical_service_parent IS 'Especialidade "pai" das subespecialidades registadas. Por ex: existindo 2 registos, p/ Ginecologia e p/ Planeamento Familiar, pode-se considerar o 1º como pai do 2º.' ;
COMMENT ON COLUMN clinical_service.code_clinical_service IS 'Código para nome. Por exemplo a ortopedia, mas também os respectivos sub-níveis como ortotraumatismo da mão.' ;
COMMENT ON COLUMN clinical_service.image_name IS 'Nome da imagem correspondente ao botão de chamada do form correspondente ao "tipo de consulta"' ;
COMMENT ON COLUMN clinical_service.rank IS 'Ordem de apresentação' ;

ALTER TABLE CLINICAL_SERVICE 
 ADD (FLG_AVAILABLE  VARCHAR2(1) DEFAULT 'Y' NOT NULL
 );

COMMENT ON COLUMN CLINICAL_SERVICE.FLG_AVAILABLE IS 'Disponibilidade do registo na instituição onde está instalada a BD';

ALTER TABLE CLINICAL_SERVICE MODIFY FLG_AVAILABLE default null;


ALTER TABLE CLINICAL_SERVICE  ADD (ID_CONTENT VARCHAR2(200));
COMMENT ON COLUMN CLINICAL_SERVICE.ID_CONTENT  IS 'Identificador único de conteúdo';

