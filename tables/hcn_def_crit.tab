COMMENT ON COLUMN hcn_def_crit.internal_name IS 'Nome interno do item da avaliação' ;
COMMENT ON COLUMN hcn_def_crit.num_points IS 'Número de pontos' ;
COMMENT ON COLUMN hcn_def_crit.adw_last_update IS 'Data da última alteração' ;

