
create table SUMMARY_PAGE_ACCESS
(
  ID_SUMMARY_PAGE_ACCESS NUMBER(24) not null,
 ID_PROFILE_TEMPLATE NUMBER(24) not null,
 ID_SUMMARY_PAGE_SECTION NUMBER(24) not null,
 FLG_WRITE VARCHAR2(1) not null,
  ADW_LAST_UPDATE DATE not null
);


COMMENT ON COLUMN summary_page_access.id_summary_page_access IS 'Chave primária' ;
COMMENT ON COLUMN summary_page_access.id_profile_template IS 'Nome interno' ;
COMMENT ON COLUMN summary_page_access.id_summary_page_section IS 'Suporte para descrição multi-língua de summary_page_access' ;
COMMENT ON COLUMN summary_page_access.flg_write IS 'Permissao para escrita' ;
COMMENT ON COLUMN summary_page_access.adw_last_update IS 'Data da última alteração' ;

alter table summary_page_access add     HEIGHT NUMBER(4) default 0;

COMMENT ON COLUMN summary_page_access.HEIGHT IS 'Altura da secção para o perfil de utilizador.';

ALTER TABLE SUMMARY_PAGE_ACCESS ADD flg_search VARCHAR2(1);
COMMENT ON COLUMN SUMMARY_PAGE_ACCESS.flg_search IS 'Permissão para pesquisar outros templates: Y - sim; N - não';

