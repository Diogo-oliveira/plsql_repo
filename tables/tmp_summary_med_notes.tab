CREATE GLOBAL TEMPORARY TABLE ALERT.TMP_SUMMARY_MED_NOTES
(	
NOTES_DATE              VARCHAR2(0050),
SESSION_ID              NUMBER(24),
NOTES_TIME              VARCHAR2(0050),
ID_PROFESSIONAL         NUMBER(24),
NOTES_DESC              VARCHAR2(4000),
RANK                    NUMBER(6)
) ON COMMIT PRESERVE ROWS ;


