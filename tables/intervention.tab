

  CREATE TABLE INTERVENTION
   (	ID_INTERVENTION NUMBER(24,0) NOT NULL ENABLE,
	ID_INTERVENTION_PARENT NUMBER(24,0),
	CODE_INTERVENTION VARCHAR2(200) NOT NULL ENABLE,
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	COST NUMBER(18,4),
	PRICE NUMBER(18,4),
	CODE_HELP_INTERV VARCHAR2(200),
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	ID_BODY_PART NUMBER(12,0),
	FLG_MOV_PAT VARCHAR2(1) NOT NULL ENABLE,

	ID_SPEC_SYS_APPAR NUMBER(24,0) NOT NULL ENABLE,
	ID_INTERV_PHYSIATRY_AREA NUMBER(24,0),
	FLG_TYPE VARCHAR2(1),
	DURATION NUMBER(6,0),
	PREV_RECOV_TIME NUMBER(6,0),
	GENDER VARCHAR2(1),
	AGE_MIN NUMBER(3,0),
	AGE_MAX NUMBER(3,0),
	MDM_CODING NUMBER(12,0)
   );


COMMENT ON TABLE intervention IS 'Procedimentos clínicos' ;

COMMENT ON COLUMN intervention.flg_status IS 'Estado: activo / inactivo' ;
COMMENT ON COLUMN intervention.cost IS 'Custo monetário' ;
COMMENT ON COLUMN intervention.price IS 'Preço de venda' ;
COMMENT ON COLUMN intervention.code_help_interv IS 'Código p/ tradução da ajuda aos profissionais' ;
COMMENT ON COLUMN intervention.flg_mov_pat IS 'Necessidade de movimentação do doente' ;
COMMENT ON COLUMN intervention.flg_type IS 'indica o tipo de intervenção. Valores possíveis: S- Intervenção Cirurgica, N- Intervenção não cirurgica, P - pensos' ;
COMMENT ON COLUMN intervention.duration IS 'Tempo estimado da duração da intervenção (em minutos)' ;
COMMENT ON COLUMN intervention.prev_recov_time IS 'Tempo estimado de permanência no recobro para recuperação da intervenção (em minutos)' ;
COMMENT ON COLUMN intervention.gender IS 'Género ao qual se aplica' ;
COMMENT ON COLUMN intervention.age_min IS 'Idade mínima à qual se aplica' ;
COMMENT ON COLUMN intervention.age_max IS 'Idade máxima à qual se aplica' ;

comment on column INTERVENTION.MDM_CODING
  is 'Codificação de  MDM "Medical Decision Making"';
  
ALTER TABLE INTERVENTION 
 ADD (CPT_CODE VARCHAR2(100));

COMMENT ON COLUMN INTERVENTION.CPT_CODE IS 'INTERVENTION CPT CODE';

