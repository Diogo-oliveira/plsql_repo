

  CREATE TABLE REP_SCREEN
   (	ID_REP_SCREEN NUMBER(24,0) NOT NULL ENABLE,
	INTERNAL_NAME VARCHAR2(200),
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	ID_SYS_BUTTON_PROP NUMBER(24,0) NOT NULL ENABLE,
	SCREEN_NAME VARCHAR2(200) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE rep_screen IS 'Parametrização dos relatórios com tratamento específico num determinado ecrã' ;

COMMENT ON COLUMN rep_screen.flg_type IS 'Indica se adiciona ou retira acessos a um determinado report no ecrã. Valores possíveis: A- Adiciona, R- Retira' ;


