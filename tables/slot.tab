

  CREATE TABLE SLOT
   (	ID_SLOT NUMBER(24,0) NOT NULL ENABLE,
	ID_DCS_AVAILABLE NUMBER(24,0),
	ID_DCS_AVAILABLE_TO NUMBER(24,0),
	PROF_ID_PROF_WRITES NUMBER(24,0) NOT NULL ENABLE,
	PROF_ID_PROF_AVAILABLE NUMBER(24,0),
	ID_ROOM NUMBER(24,0),
	ID_MATERIAL NUMBER(24,0),
	DT_BEGIN DATE NOT NULL ENABLE,
	DT_END DATE NOT NULL ENABLE,
	DT_SCHEDULE DATE,
	NOTES VARCHAR2(4000),

	NUM_MAX NUMBER(2,0)
   );


COMMENT ON TABLE slot IS 'Disponibilidades para agendamento' ;

COMMENT ON COLUMN slot.dt_begin IS 'Data / hora inicial do período' ;
COMMENT ON COLUMN slot.dt_end IS 'Data / hora final do período' ;
COMMENT ON COLUMN slot.dt_schedule IS 'Data / hora em que foi registado' ;
COMMENT ON COLUMN slot.notes IS 'Notas' ;
COMMENT ON COLUMN slot.num_max IS 'Nº máximo de agendamentos q é possível marcar no slot' ;




ALTER TABLE SLOT ADD DT_BEGIN_TSTZ TIMESTAMP WITH LOCAL TIME ZONE; 
