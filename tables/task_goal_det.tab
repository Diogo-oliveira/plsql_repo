CREATE TABLE TASK_GOAL_DET
 (ID_TASK_GOAL_DET NUMBER(24) NOT NULL
 ,ID_TASK_GOAL NUMBER(24)
 ,DESC_TASK_GOAL VARCHAR2(1000)
 ,CREATE_USER VARCHAR2(24)
 ,CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE
 ,CREATE_INSTITUTION NUMBER(24)
 ,UPDATE_USER VARCHAR2(24)
 ,UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE
 ,UPDATE_INSTITUTION NUMBER(24)
 ,CONSTRAINT TGLD_PK PRIMARY KEY 
  (ID_TASK_GOAL_DET)
 )
/

COMMENT ON COLUMN TASK_GOAL_DET.ID_TASK_GOAL_DET IS 'Identifier of the task/goal and scope detail'
/

COMMENT ON COLUMN TASK_GOAL_DET.ID_TASK_GOAL IS 'Identifier of the coded task/goal'
/

COMMENT ON COLUMN TASK_GOAL_DET.DESC_TASK_GOAL IS 'CLOB for free text task/goal input'
/

COMMENT ON COLUMN TASK_GOAL_DET.CREATE_USER IS 'Creation User'
/

COMMENT ON COLUMN TASK_GOAL_DET.CREATE_TIME IS 'Creation Time'
/

COMMENT ON COLUMN TASK_GOAL_DET.CREATE_INSTITUTION IS 'Creation Institution'
/

COMMENT ON COLUMN TASK_GOAL_DET.UPDATE_USER IS 'Update User'
/

COMMENT ON COLUMN TASK_GOAL_DET.UPDATE_TIME IS 'Update Time'
/

COMMENT ON COLUMN TASK_GOAL_DET.UPDATE_INSTITUTION IS 'Update Institution'
/
