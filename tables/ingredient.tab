

  CREATE TABLE INGREDIENT
   (	ID_INGREDIENT NUMBER(24,0) NOT NULL ENABLE,
	CODE_INGREDIENT VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE ingredient IS 'Constituintes para manipulados.' ;

COMMENT ON COLUMN ingredient.id_ingredient IS 'Chave primária.' ;
COMMENT ON COLUMN ingredient.code_ingredient IS 'Nome do constituinte' ;
COMMENT ON COLUMN ingredient.flg_type IS 'Constituinte para a farmácia exterior (E) ou para a farmácia da instituição (I).' ;
COMMENT ON COLUMN ingredient.adw_last_update IS 'Data da última alteração.' ;
