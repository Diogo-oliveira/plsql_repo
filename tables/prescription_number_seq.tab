

  CREATE TABLE PRESCRIPTION_NUMBER_SEQ
   (	ID_PRESCRIPTION_NUMBER_SEQ NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(24,0) NOT NULL ENABLE,
	SEQUENCE_NAME VARCHAR2(25) NOT NULL ENABLE,
	SEQUENCE_XML_NAME VARCHAR2(25),
	ID_CLINICAL_SERVICE NUMBER(12,0),
	ID_EPIS_TYPE NUMBER(12,0)
   );


COMMENT ON TABLE prescription_number_seq IS 'Tabela com a sequência a utilizar para o nº de receita em cada instituição/dep_clin_serv.' ;

COMMENT ON COLUMN prescription_number_seq.id_prescription_number_seq IS 'Chave primária.' ;
COMMENT ON COLUMN prescription_number_seq.id_institution IS 'ID da instituição.' ;
COMMENT ON COLUMN prescription_number_seq.sequence_name IS 'Nome da sequência utilizada para o nº da receita.' ;
COMMENT ON COLUMN prescription_number_seq.sequence_xml_name IS 'Nome da sequência utilizada para o nome do XML.' ;
COMMENT ON COLUMN prescription_number_seq.id_clinical_service IS 'ID do serviço clínico' ;
COMMENT ON COLUMN prescription_number_seq.id_epis_type IS 'ID do tipo de episódio' ;

-- Add/modify columns 
alter table PRESCRIPTION_NUMBER_SEQ add FLG_TYPE varchar2(1);
-- Add comments to the columns 
comment on column PRESCRIPTION_NUMBER_SEQ.FLG_TYPE
  is 'I, se para a receita da farmácia do hospital, ou E, se para a receita da farmácia do exterior';

