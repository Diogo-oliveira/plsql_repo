create table MARKET
(
  ID_MARKET     NUMBER(24) not null,
  ID_CONTENT    VARCHAR2(200),
  DESC_MARKET   VARCHAR2(400),
  FLG_AVAILABLE VARCHAR2(1),
  CODE_MARKET   VARCHAR2(200)
);

comment on table MARKET is 'Markets';

comment on column MARKET.ID_CONTENT is 'Content unique identifier';
comment on column MARKET.DESC_MARKET is 'Market descriptive';
comment on column MARKET.FLG_AVAILABLE is 'Availability';
comment on column MARKET.CODE_MARKET is 'Translation code';