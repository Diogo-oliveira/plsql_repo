COMMENT ON COLUMN "RCM_PROP"."CREATE_TIME" IS 'Creation Time';
COMMENT ON COLUMN "RCM_PROP"."CREATE_INSTITUTION" IS 'Creation Institution';
COMMENT ON COLUMN "RCM_PROP"."UPDATE_USER" IS 'Update User';
COMMENT ON COLUMN "RCM_PROP"."UPDATE_TIME" IS 'Update Time';
COMMENT ON COLUMN "RCM_PROP"."UPDATE_INSTITUTION" IS 'Update Institution';
