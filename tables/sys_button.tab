

  CREATE TABLE SYS_BUTTON
   (	ID_SYS_BUTTON NUMBER(24,0) NOT NULL ENABLE,
	INTERN_NAME_BUTTON VARCHAR2(200) NOT NULL ENABLE,
	CODE_BUTTON VARCHAR2(200),
	ICON VARCHAR2(50),
	SKIN VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1),
	CODE_ICON VARCHAR2(200),
	ADW_LAST_UPDATE DATE
   );

   alter table sys_button add CODE_INTERN_NAME VARCHAR2(200);

   
COMMENT ON TABLE sys_button IS 'No caso da roda, os registos desta tabela correspondem às pétalas, ou botões.No caso das opções de menu da aplicação, correspondem aos botões de acesso a forms, botões de acesso a ecrãs dentro dos forms e deep_navs.' ;

COMMENT ON COLUMN sys_button.code_button IS 'Código para tradução do label do botão' ;
COMMENT ON COLUMN sys_button.icon IS 'Nome do Icon' ;
COMMENT ON COLUMN sys_button.skin IS 'Nome do Skin' ;
COMMENT ON COLUMN sys_button.flg_type IS 'Tipo: C - criação, L - cancelamento, S - pesquisa, P - impressão, T - textos + freq., O - ok, D - detalhe, H - help, N - conteúdos, F - visão 1, V - visão 2, I - digitalização, M - não, G - gráfico, H - gráfico em barras horizontais, B - gráfico em barras verticais' ;
COMMENT ON COLUMN sys_button.code_intern_name IS 'Código para tradução do nome do botão' ;

