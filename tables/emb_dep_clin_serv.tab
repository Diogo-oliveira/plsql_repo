COMMENT ON COLUMN emb_dep_clin_serv.id_software IS 'ID do software.' ;
COMMENT ON COLUMN emb_dep_clin_serv.id_professional IS 'ID do profissional para o qual a embalagem é mais frequente.' ;
COMMENT ON COLUMN emb_dep_clin_serv.generico IS 'Indicação se autoriza genérico (Y) ou não (N).' ;
COMMENT ON COLUMN emb_dep_clin_serv.id_dietary_drug IS 'ID do dietético.' ;
COMMENT ON COLUMN emb_dep_clin_serv.id_manipulated IS 'ID do manipulado.' ;

