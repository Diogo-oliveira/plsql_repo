

  CREATE TABLE DISC_VS_VALID
   (	ID_DISC_VS_VALID NUMBER(12,0) NOT NULL ENABLE,
	ID_VITAL_SIGN NUMBER(12,0),
	ID_DISCRIMINATOR NUMBER(12,0) NOT NULL ENABLE,
	FLG_ACTIVE VARCHAR2(1) NOT NULL ENABLE,
	VAL_MIN NUMBER(10,3),
	VAL_MAX NUMBER(10,3),
	AGE_MIN NUMBER(3,0),
	AGE_MAX NUMBER(3,0),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE

   );


COMMENT ON TABLE disc_vs_valid IS 'Indicação dos SVs que devem ser lidos antes de responder (quer negativa, quer afirmativamente) ao discriminador associado.VAL_MIN e VAL_MAX limitam o intervalo de valores do SV que implica a resposta afirmativa ao discriminador.AGE_MIN e AGE_MAX limitam o intervalo de idades do doente para as quais o discriminador é validado com o SV.' ;

COMMENT ON COLUMN disc_vs_valid.flg_active IS 'Activo: S / N' ;
COMMENT ON COLUMN disc_vs_valid.val_min IS 'Valor mínimo para o SV' ;
COMMENT ON COLUMN disc_vs_valid.val_max IS 'Valor máximo para o SV' ;
COMMENT ON COLUMN disc_vs_valid.age_min IS 'Idade mínima para validação do discriminador com o SV' ;
COMMENT ON COLUMN disc_vs_valid.age_max IS 'Idade máxima para validação do discriminador com o SV' ;
COMMENT ON COLUMN disc_vs_valid.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN disc_vs_valid.rank IS 'Ordem de visualização' ;
