

  CREATE TABLE DRUG_DESPACHOS_SOFT_INST
   (	ID_DRUG_DESPACHOS_SOFT_INST NUMBER(24,0) NOT NULL ENABLE,
	ID_DRUG_DESPACHOS NUMBER(24,0) NOT NULL ENABLE,
	ID_DRUG NUMBER(12,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE
   );


COMMENT ON TABLE drug_despachos_soft_inst IS 'Associaçãod e despachos a medicamentos por instituição e software (requisições internas de medicamentos)' ;

COMMENT ON COLUMN drug_despachos_soft_inst.id_drug_despachos_soft_inst IS 'Chave primária.' ;
COMMENT ON COLUMN drug_despachos_soft_inst.id_drug_despachos IS 'ID do despacho.' ;
COMMENT ON COLUMN drug_despachos_soft_inst.id_drug IS 'ID do medicamento a que o despacho está associado.' ;
COMMENT ON COLUMN drug_despachos_soft_inst.id_institution IS 'ID da instituição onde esta associada é válida.' ;
COMMENT ON COLUMN drug_despachos_soft_inst.id_software IS 'ID do software onde esta associada é válida.' ;


