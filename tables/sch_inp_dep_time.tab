CREATE TABLE SCH_INP_DEP_TIME
 (ID_DEPARTMENT NUMBER NOT NULL
 ,ADMISSION_TIME NUMBER
 ,CREATE_USER VARCHAR2(24)
 ,CREATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE
 ,CREATE_INSTITUTION NUMBER(24)
 ,UPDATE_USER VARCHAR2(24)
 ,UPDATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE
 ,UPDATE_INSTITUTION NUMBER(24)
 ,TIME_SCALE_THRESHOLD NUMBER
 );

COMMENT ON TABLE SCH_INP_DEP_TIME IS 'instante do dia que serve de referencia para calculo da ocupaçao das camas. Por serviço';
COMMENT ON COLUMN SCH_INP_DEP_TIME.ID_DEPARTMENT IS 'id do serviço';
COMMENT ON COLUMN SCH_INP_DEP_TIME.ADMISSION_TIME IS 'instante do dia, em minutos.';
COMMENT ON COLUMN SCH_INP_DEP_TIME.CREATE_USER IS 'Creation user';
COMMENT ON COLUMN SCH_INP_DEP_TIME.CREATE_TIME IS 'creation time';
COMMENT ON COLUMN SCH_INP_DEP_TIME.CREATE_INSTITUTION IS 'creation institution';
COMMENT ON COLUMN SCH_INP_DEP_TIME.UPDATE_USER IS 'update user';
COMMENT ON COLUMN SCH_INP_DEP_TIME.UPDATE_TIME IS 'update time';
COMMENT ON COLUMN SCH_INP_DEP_TIME.UPDATE_INSTITUTION IS 'update institution';
COMMENT ON COLUMN SCH_INP_DEP_TIME.TIME_SCALE_THRESHOLD IS 'em horas. quando a disponib. da cama é inferior a este valor, mostra a disponib. em horas. Caso contrario, em dias';

--END

