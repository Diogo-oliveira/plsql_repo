create table country_company
(
       id_country_company       number(12) not null,
       id_country               number(12) not null,
       id_company               number(6) not null,
       flg_available    varchar2(1) not null,
       adw_last_update  date not null
);

comment on table country_company is
'Relacionamento entre país e empresa';

---------
comment on column country_company.id_country_company is
'ID da tabela';

comment on column country_company.id_country is
'ID do país';

comment on column country_company.id_company is
'ID da empresa';

comment on column country_company.flg_available is
'Disponibilidade do registo';

comment on column country_company.adw_last_update is
'Data do ultimo update efectuado do registo';