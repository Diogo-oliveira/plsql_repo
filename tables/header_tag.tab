CREATE TABLE HEADER_TAG
 (ID_HEADER_TAG NUMBER(24) NOT NULL
 ,INTERNAL_NAME VARCHAR2(64) NOT NULL
 ,INTERNAL_DESC VARCHAR2(240) NOT NULL
 ,ID_HEADER_TAG_GRP NUMBER(24) NOT NULL
 );
COMMENT ON TABLE HEADER_TAG IS 'Holds all the Tags available to be included in the Header.';
COMMENT ON COLUMN HEADER_TAG.ID_HEADER_TAG IS 'Primary key';
COMMENT ON COLUMN HEADER_TAG.INTERNAL_NAME IS 'Tag internal name';
COMMENT ON COLUMN HEADER_TAG.INTERNAL_DESC IS 'Tag internal description';
COMMENT ON COLUMN HEADER_TAG.ID_HEADER_TAG_GRP IS 'The group Id this tag belongs to';

ALTER TABLE HEADER_TAG ADD 
  ( CREATE_USER VARCHAR2(24),
    CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
    CREATE_INSTITUTION NUMBER(24),
    UPDATE_USER VARCHAR2(24),
    UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
    UPDATE_INSTITUTION NUMBER(24));
COMMENT ON COLUMN HEADER_TAG.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN HEADER_TAG.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN HEADER_TAG.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN HEADER_TAG.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN HEADER_TAG.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN HEADER_TAG.UPDATE_INSTITUTION IS 'Update Institution';
