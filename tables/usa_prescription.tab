
  CREATE TABLE USA_PRESCRIPTION
   (	ID_PRESCRIPTION NUMBER(24,0) NOT NULL ENABLE,
	DT_PRESCRIPTION DATE NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_PATIENT NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	FLG_STATUS VARCHAR2(2) NOT NULL ENABLE,
	ID_PROF_CANCEL NUMBER(24,0),
	NOTES_CANCEL VARCHAR2(4000),
	DT_CANCEL DATE,
	ID_INSTITUTION_CANCEL NUMBER(12,0),
	ID_SOFTWARE_CANCEL NUMBER(24,0),
	FLG_TYPE VARCHAR2(2) NOT NULL ENABLE,
	FLG_SUB_TYPE VARCHAR2(2)
   );


COMMENT ON TABLE usa_prescription IS 'Prescrições para o exterior - VERSÃO USA.' ;

COMMENT ON COLUMN usa_prescription.id_prescription IS 'ID da prescrição.' ;
COMMENT ON COLUMN usa_prescription.dt_prescription IS 'Data da prescrição.' ;
COMMENT ON COLUMN usa_prescription.id_episode IS 'ID do episódio em que foi feita a prescrição.' ;
COMMENT ON COLUMN usa_prescription.id_patient IS 'ID do paciente.' ;
COMMENT ON COLUMN usa_prescription.id_professional IS 'Profissional que prescreve.' ;
COMMENT ON COLUMN usa_prescription.id_institution IS 'ID da instituição onde foi feita a prescrição.' ;
COMMENT ON COLUMN usa_prescription.id_software IS 'ID do software onde foi feita a prescrição.' ;
COMMENT ON COLUMN usa_prescription.flg_status IS 'Estado da prescrição: T - temporária; P - impressa; C - cancelada; NN - não notificado; NE - notificado por e-mail; NC - notificado por correio; NS - notificado por SMS; NT - notificado por telefone; NP - notificado presencialmente' ;
COMMENT ON COLUMN usa_prescription.id_prof_cancel IS 'Profissional que cancela.' ;
COMMENT ON COLUMN usa_prescription.notes_cancel IS 'Notas de cancelamento.' ;
COMMENT ON COLUMN usa_prescription.dt_cancel IS 'Data de cancelamento.' ;
COMMENT ON COLUMN usa_prescription.id_institution_cancel IS 'ID da instituição onde foi cancelada a prescrição.' ;
COMMENT ON COLUMN usa_prescription.id_software_cancel IS 'ID do software onde foi cancelada a prescrição.' ;
COMMENT ON COLUMN usa_prescription.flg_type IS 'Flag que indica se é uma prescrição de um medicamento para o exterior (E), de um manipulado/dietético (P), alteração da posologia de uma prescrição externa (AE), alteração da posologia de uma prescrição externa de manipulados ou distéticos (AP).' ;
COMMENT ON COLUMN usa_prescription.flg_sub_type IS 'Flag que indica se é um dietético para o exterior (DE), manipulado para o exterior (ME), alteração de posologia de um manipulado para o exterior (MA), alteração de posologia de uma dietético para o exterior (SA). Só é preenchida se FLG_TYPE = P ou AP.' ;





