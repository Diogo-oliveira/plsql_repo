

  CREATE TABLE NURSE_DISCHARGE
   (	ID_NURSE_DISCHARGE NUMBER(24,0) NOT NULL ENABLE,
	DT_NURSE_DISCHARGE DATE NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	NOTES VARCHAR2(4000),
	DT_CANCEL DATE,
	ID_PROF_CANCEL NUMBER(24,0),
	NOTES_CANCEL VARCHAR2(4000),
	FLG_TEMP VARCHAR2(1) NOT NULL ENABLE
   );


COMMENT ON TABLE nurse_discharge IS 'Altas de enfermagem.Ao contrário de DISCHARGE, esta tabela pode conter vários registos não cancelados para cada episódio, para os casos em q se associam vários tratamentos de enfermagem a um epis. anterior.' ;

comment on column NURSE_DISCHARGE.FLG_TEMP
  is 'Indica se o registo é: H - histórico, T - temporário (temporariamente gravado(Auto Save)); D - definitivo';
alter table nurse_discharge 
add (dt_nurse_discharge_tstz timestamp with local time zone,
     dt_cancel_tstz timestamp with local time zone); 


