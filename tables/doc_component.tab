

  CREATE TABLE DOC_COMPONENT
   (	ID_DOC_COMPONENT NUMBER(24,0) NOT NULL ENABLE,
	CODE_DOC_COMPONENT VARCHAR2(240) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_GENDER VARCHAR2(1),
	AGE_MAX NUMBER(6,2),
	AGE_MIN NUMBER(6,2),
	CODE_DOC_COMP_VIEW VARCHAR2(240)
   );


COMMENT ON COLUMN doc_component.id_doc_component IS 'Chave primária' ;
COMMENT ON COLUMN doc_component.code_doc_component IS 'Descrição do componente' ;
COMMENT ON COLUMN doc_component.flg_type IS 'Tipo de componente: N - Normal; T - Title' ;
COMMENT ON COLUMN doc_component.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN doc_component.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN doc_component.flg_gender IS 'Sexo:F-Feminino;M-Masculino;T-Todos' ;
COMMENT ON COLUMN doc_component.age_max IS 'Idade Máxima' ;
COMMENT ON COLUMN doc_component.age_min IS 'Idade mínima' ;
COMMENT ON COLUMN doc_component.code_doc_comp_view IS 'Descrição do componente a mostrar nas páginas resumo' ;

comment on column DOC_COMPONENT.AGE_MAX
  is 'Idade máxima';

COMMENT ON COLUMN doc_component.flg_type IS 'Tipo de componente: N - Normal; T - Title; D - Dynamic';

