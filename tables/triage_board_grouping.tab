COMMENT ON COLUMN triage_board_grouping.id_triage_board_group IS 'Grupo do fluxograma' ;
COMMENT ON COLUMN triage_board_grouping.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN triage_board_grouping.rank IS 'Ordem de visualização' ;
COMMENT ON COLUMN triage_board_grouping.adw_last_update IS 'Data da última alteração' ;


