	ID_TRIAGE_BOARD NUMBER(12,0) NOT NULL ENABLE,
	ID_TRIAGE_BOARD_GROUP NUMBER(12,0) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(3,0),
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
