

  CREATE TABLE SR_RESERV_REQ
   (	ID_SR_RESERV_REQ NUMBER(24,0) NOT NULL ENABLE,
	ID_SURG_PERIOD NUMBER(3,0) NOT NULL ENABLE,
	ID_SR_EQUIP NUMBER(24,0) NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_SR_INTERVENTION NUMBER(24,0),
	ID_PROTOCOLS NUMBER(24,0),
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	QTY_REQ NUMBER(12,3) NOT NULL ENABLE,
	DT_REQ DATE NOT NULL ENABLE,
	ID_PROF_REQ NUMBER(24,0) NOT NULL ENABLE,
	DT_EXEC DATE,

	ID_PROF_EXEC NUMBER(24,0),
	DT_CANCEL DATE,
	ID_PROF_CANCEL NUMBER(24,0),
	NOTES_CANCEL VARCHAR2(2000),
	ADW_LAST_UPDATE DATE
   );


COMMENT ON COLUMN sr_reserv_req.id_sr_reserv_req IS 'ID único' ;
COMMENT ON COLUMN sr_reserv_req.id_surg_period IS 'ID do periodo operatório' ;
COMMENT ON COLUMN sr_reserv_req.id_sr_equip IS 'ID do tipo de reserva' ;
COMMENT ON COLUMN sr_reserv_req.id_episode IS 'ID do episódio' ;
COMMENT ON COLUMN sr_reserv_req.id_protocols IS 'ID do protocolo, caso tenha sido requesitado através de um protocolo.' ;
COMMENT ON COLUMN sr_reserv_req.flg_status IS 'Estado da requisição. Valores possíveis: R- Requisitado, F- Concluído, C- Cancelado' ;
COMMENT ON COLUMN sr_reserv_req.qty_req IS 'Quantidade requisitada' ;
COMMENT ON COLUMN sr_reserv_req.dt_req IS 'Data de requisição' ;
COMMENT ON COLUMN sr_reserv_req.id_prof_req IS 'ID do profissional que requisitou' ;
COMMENT ON COLUMN sr_reserv_req.dt_exec IS 'Data de execução' ;
COMMENT ON COLUMN sr_reserv_req.id_prof_exec IS 'ID do profissional que efectou a requisição' ;
COMMENT ON COLUMN sr_reserv_req.dt_cancel IS 'Data de cancelamento' ;
COMMENT ON COLUMN sr_reserv_req.id_prof_cancel IS 'Id do profissional que cancelou a requisição' ;

COMMENT ON COLUMN sr_reserv_req.notes_cancel IS 'Notas de cancelamento' ;
COMMENT ON COLUMN sr_reserv_req.adw_last_update IS 'Data da última alteração' ;


