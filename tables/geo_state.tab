
CREATE TABLE geo_state(
  id_geo_state        NUMBER,
  id_country          NUMBER,
  code_geo_state      VARCHAR2(200) NOT NULL,
  code_geo_state_abbr VARCHAR2(200) NOT NULL,
  flg_available       VARCHAR2(1) DEFAULT 'Y' NOT NULL);

COMMENT ON geo_state IS 'Chave primária';
COMMENT ON column geo_state.id_geo_state IS 'Estado, região administrativa de um país';
COMMENT ON column geo_state.id_country IS 'Id do país a que este estado pertence (FK para COUNTRY.ID_COUNTRY)';
COMMENT ON column geo_state.code_geo_state IS 'Código da translation para o nome do estado';
COMMENT ON column geo_state.code_geo_state_abbr IS 'Código da translation para a abreviatura do nome do estado';
COMMENT ON column geo_state.flg_available IS 'Indica se o registo está disponível';



