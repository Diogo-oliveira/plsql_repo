/** Tables */
CREATE TABLE PAT_CHECKLIST_DET(
ID_PAT_CHECKLIST NUMBER(24) NOT NULL,
FLG_CONTENT_CREATOR VARCHAR2(1 CHAR) NOT NULL,
ID_CHECKLIST_ITEM NUMBER(24) NOT NULL,
ID_EPISODE NUMBER(24) NOT NULL,
ID_PROFESSIONAL NUMBER(24) NOT NULL,
FLG_ANSWER VARCHAR2(1 CHAR),
DT_PAT_CHECKLIST_DET TIMESTAMP(6) WITH LOCAL TIME ZONE NOT NULL,
NOTES VARCHAR2(1000 CHAR),
DT_CREATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE,
DT_RETIRE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE,
DEL_STATUS NUMBER(6) NOT NULL,
CREATE_USER VARCHAR2(24 CHAR),
    CREATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE,
CREATE_INSTITUTION NUMBER(24),
UPDATE_USER VARCHAR2(24 CHAR),
UPDATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION NUMBER(24)
);

COMMENT ON TABLE PAT_CHECKLIST_DET IS 'Answers to items in checklist';

COMMENT ON COLUMN PAT_CHECKLIST_DET.ID_PAT_CHECKLIST IS 'Checklist instance for patient';
COMMENT ON COLUMN PAT_CHECKLIST_DET.FLG_CONTENT_CREATOR IS 'Checklist content creator: Checklist created by (A)LERT, Checklist created by (I)nstitution';
COMMENT ON COLUMN PAT_CHECKLIST_DET.ID_CHECKLIST_ITEM IS 'Checklist item ID';
COMMENT ON COLUMN PAT_CHECKLIST_DET.ID_EPISODE IS 'Episode where the professional gives this answer';
COMMENT ON COLUMN PAT_CHECKLIST_DET.ID_PROFESSIONAL IS 'Professional who answered the question';
COMMENT ON COLUMN PAT_CHECKLIST_DET.FLG_ANSWER IS 'Answer given: (Y)es, (N)o, Not (A)pplicable, Cleaned (NULL)';
COMMENT ON COLUMN PAT_CHECKLIST_DET.DT_PAT_CHECKLIST_DET IS 'Answer date';
COMMENT ON COLUMN PAT_CHECKLIST_DET.NOTES IS 'Observations in answer given';
COMMENT ON COLUMN PAT_CHECKLIST_DET.DT_CREATE_TIME IS 'Timestamp the record was created. Used for history management';
COMMENT ON COLUMN PAT_CHECKLIST_DET.DT_RETIRE_TIME IS 'Timestamp the record was outdated. Used for history management';
COMMENT ON COLUMN PAT_CHECKLIST_DET.DEL_STATUS IS 'Record edition status. Used for history management';
COMMENT ON COLUMN PAT_CHECKLIST_DET.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN PAT_CHECKLIST_DET.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN PAT_CHECKLIST_DET.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN PAT_CHECKLIST_DET.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN PAT_CHECKLIST_DET.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN PAT_CHECKLIST_DET.UPDATE_INSTITUTION IS 'Update Institution';
