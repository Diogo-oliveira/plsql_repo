

  CREATE TABLE VACCINE_PRESCRIPTION
   (	ID_VACCINE_PRESCRIPTION NUMBER(24,0) NOT NULL ENABLE,
	DT_VACCINE_PRESCRIPTION DATE NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	FLG_TIME VARCHAR2(1) NOT NULL ENABLE,
	DT_BEGIN DATE,
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	DT_CANCEL DATE,
	ID_PROF_CANCEL NUMBER(24,0),
	NOTES_CANCEL VARCHAR2(4000),
	ID_INSTITUTION NUMBER(12,0),

	NOTES VARCHAR2(4000),
	ID_EPISODE_ORIGIN NUMBER(24,0),
	ID_EPISODE_DESTINATION NUMBER(24,0)
   );


COMMENT ON TABLE vaccine_prescription IS 'Prescrição de vacinas, para casos em que é preciso definir as dosagens, tomas, etc, como por exemplo as vacinas relacionadas com alergologia.' ;

COMMENT ON COLUMN vaccine_prescription.flg_time IS 'Realização: E - neste episódio; N - próximo episódio' ;
COMMENT ON COLUMN vaccine_prescription.dt_begin IS 'Data pretendida para início da execução do exame (ie, ñ imediata)' ;
COMMENT ON COLUMN vaccine_prescription.flg_status IS 'F - c/ resultado; R - requisitado; C - cancelado; E - em execução; D - pendente; P - parcial' ;
COMMENT ON COLUMN vaccine_prescription.id_episode_origin IS 'ID do episódio em que foi registada a req. inicialmente (se FLG_TIME = ''N'')' ;
COMMENT ON COLUMN vaccine_prescription.id_episode_destination IS 'ID do episódio em que foi registada a req. destino (se FLG_TIME = ''N'')' ;




