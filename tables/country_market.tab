CREATE TABLE COUNTRY_MARKET
(
     ID_COUNTRY NUMBER(12) not null,
     ID_MARKET  NUMBER(24) not null,
     FLG_ACTIVE VARCHAR2(1)
);

comment on table COUNTRY_MARKET is 'Country and Markets association';

comment on column COUNTRY_MARKET.ID_COUNTRY is 'Country identifier';
comment on column COUNTRY_MARKET.ID_MARKET is 'Market identifier';
comment on column COUNTRY_MARKET.FLG_ACTIVE is 'Default active market for a country';