

  CREATE TABLE PREP_MESSAGE
   (	ID_PREP_MESSAGE NUMBER(12,0) NOT NULL ENABLE,
	CODE_PREP_MESSAGE VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE prep_message IS 'Instruções de preparação para exames / análises / intervençõesOU termos de responsabilidadeOU recomendações ao doente, após alta clínica' ;

COMMENT ON COLUMN prep_message.flg_type IS 'I - instruções para exames, T - termo de responsabilidade, R - recomandações pós-alta' ;
COMMENT ON COLUMN prep_message.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN prep_message.rank IS 'Ordem de apresentação' ;
