

  CREATE TABLE SAMPLE_RECIPIENT
   (	ID_SAMPLE_RECIPIENT NUMBER(12,0) NOT NULL ENABLE,
	CODE_SAMPLE_RECIPIENT VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	CAPACITY NUMBER(10,2),
	CODE_CAPACITY_MEASURE VARCHAR2(200)
   );


COMMENT ON TABLE sample_recipient IS 'Recipientes para colheita de amostras' ;

COMMENT ON COLUMN sample_recipient.code_sample_recipient IS 'Código para nome' ;
COMMENT ON COLUMN sample_recipient.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN sample_recipient.rank IS 'Ordem de apresentação' ;
COMMENT ON COLUMN sample_recipient.capacity IS 'Capacidade do recipiente' ;
COMMENT ON COLUMN sample_recipient.code_capacity_measure IS 'Código para tradução da unidade de medida da capacidade' ;


ALTER TABLE SAMPLE_RECIPIENT  ADD (ID_CONTENT VARCHAR2(200));
COMMENT ON COLUMN SAMPLE_RECIPIENT.ID_CONTENT  IS 'Identificador único de conteúdo';

