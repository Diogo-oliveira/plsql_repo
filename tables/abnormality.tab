

  CREATE TABLE ABNORMALITY
   (	ID_ABNORMALITY NUMBER(24,0) NOT NULL ENABLE,
	VALUE VARCHAR2(6) NOT NULL ENABLE,
	DESC_ABNORMALITY VARCHAR2(4000) NOT NULL ENABLE
   );


COMMENT ON TABLE abnormality IS 'Tabela de parametrização de graus de anormalidade (registos da tabela "0080 - Nature of Abnormal testing" do HL7)' ;

COMMENT ON COLUMN abnormality.value IS 'Valor na tabela de HL7' ;
COMMENT ON COLUMN abnormality.desc_abnormality IS 'Descrição na tabela de HL7' ;

