
  CREATE TABLE P1_TRACKING
   (	ID_TRACKING NUMBER(24,0) NOT NULL ENABLE,
	EXT_REQ_STATUS VARCHAR2(1) NOT NULL ENABLE,
	DT_TRACKING DATE,
	ID_EXTERNAL_REQUEST NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	ID_PROF_DEST NUMBER(24,0),
	ID_DEP_CLIN_SERV NUMBER(24,0),
	ROUND_ID NUMBER(24,0),
	REASON_CODE VARCHAR2(1),
	FLG_RESCHEDULE VARCHAR2(1)
   );



COMMENT ON COLUMN p1_tracking.ext_req_status IS 'Estado do pedido' ;
COMMENT ON COLUMN p1_tracking.dt_tracking IS 'Data/hora do registo' ;
COMMENT ON COLUMN p1_tracking.id_external_request IS 'Id do pedido' ;
COMMENT ON COLUMN p1_tracking.id_institution IS 'Instituição do profissional responsável pelo registo' ;
COMMENT ON COLUMN p1_tracking.id_professional IS 'Profissional responsável pelo registo' ;
COMMENT ON COLUMN p1_tracking.flg_type IS '(S)tatus - Mudança de estado; (P)rofessional - encaminhamento para triador; (C)linical service - encaminhamento para outro serviço clínico; (R)ead - Lido pelo profissional' ;
COMMENT ON COLUMN p1_tracking.id_prof_dest IS 'Id do profissional - Usado apenas no encaminhamento para outro profissional (FLG_TYPE = P)' ;
COMMENT ON COLUMN p1_tracking.id_dep_clin_serv IS 'Id dep_clin_serv - Usado apenas no encaminhamento para outro serviço clínico (FLG_TYPE = C)' ;
COMMENT ON COLUMN p1_tracking.flg_reschedule IS 'Código associado à mudança de estado quando aplicável (Por exemplo EXT_REQ_STATUS "C" (Cancelamento) O - Óbito, E - Engano ou erro, R - Resolvido)' ;


