

  CREATE TABLE SR_SURG_PERIOD
   (	ID_SURG_PERIOD NUMBER(3,0) NOT NULL ENABLE,
	CODE_SURG_PERIOD VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1),
	RANK NUMBER(3,0),
	ADW_LAST_UPDATE DATE
   );


COMMENT ON COLUMN sr_surg_period.id_surg_period IS 'ID único' ;
COMMENT ON COLUMN sr_surg_period.code_surg_period IS 'Código para a obtenção da descrição do período na tabela TRANSLATION' ;
COMMENT ON COLUMN sr_surg_period.flg_type IS 'Tipo de periodo operatório. Valores possíveis: P- Pré-operatório, I- Intra-operatório, O-Pos-operatório' ;
COMMENT ON COLUMN sr_surg_period.rank IS 'Ordem de visualização' ;


