
CREATE TABLE PROTOCOL_TASK
 (ID_PROTOCOL_TASK NUMBER(24) NOT NULL
 ,ID_GROUP_TASK NUMBER(24) NOT NULL
 ,DESC_PROTOCOL_TASK VARCHAR2(1000)
 ,ID_TASK_LINK NUMBER(24)
 ,TASK_TYPE NUMBER(24)
 ,TASK_NOTES VARCHAR2(2000)
 ,ID_TASK_ATTACH NUMBER(24)
 );

COMMENT ON COLUMN PROTOCOL_TASK.ID_PROTOCOL_TASK IS 'ID of protocol task';
COMMENT ON COLUMN PROTOCOL_TASK.ID_GROUP_TASK IS 'ID of group of tasks for a specific element';
COMMENT ON COLUMN PROTOCOL_TASK.DESC_PROTOCOL_TASK IS 'Description of task';
COMMENT ON COLUMN PROTOCOL_TASK.ID_TASK_LINK IS 'ID of task linked to protocol';
COMMENT ON COLUMN PROTOCOL_TASK.TASK_TYPE IS 'Type of task as defined in package body';
COMMENT ON COLUMN PROTOCOL_TASK.ID_TASK_ATTACH IS 'Auxiliary ID associated to task';

