   COMMENT ON COLUMN "ALERT"."PATIENT_CARE_INST_HISTORY"."ID_PATIENT" IS 'ID do paciente Chave primaria';



   COMMENT ON COLUMN "ALERT"."PATIENT_CARE_INST_HISTORY"."ID_INSTITUTION" IS 'ID da instituição';



   COMMENT ON COLUMN "ALERT"."PATIENT_CARE_INST_HISTORY"."REASON_TYPE" IS 'Tipo de razão: M - mudança de residência do utente, P - preferência do utente, M - médico deixa de exercer na instit., R - reforma do médico';



   COMMENT ON COLUMN "ALERT"."PATIENT_CARE_INST_HISTORY"."REASON" IS 'Justificação apontada pelo utente';



