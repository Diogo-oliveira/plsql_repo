

  CREATE TABLE POSTAL_CODE_PT
   (	ID_POSTAL_CODE_PT NUMBER(24,0) NOT NULL ENABLE,
	ID_DISTRITO VARCHAR2(3) NOT NULL ENABLE,
	ID_CONCELHO VARCHAR2(3) NOT NULL ENABLE,
	ID_FREGUESIA VARCHAR2(3) NOT NULL ENABLE,
	ID_LOCALIDADE VARCHAR2(7) NOT NULL ENABLE,
	LOCALIDADE VARCHAR2(100) NOT NULL ENABLE,
	COD_ARTERIA VARCHAR2(20),
	TIPO_ARTERIA VARCHAR2(30),
	TITULO_ARTERIA VARCHAR2(30),
	DESIGN_ARTERIA VARCHAR2(200),
	LOCALIZ_ARTERIA VARCHAR2(100),

	TROCO VARCHAR2(200),
	PORTA VARCHAR2(200),
	CLIENTE VARCHAR2(200),
	COD_POSTAL_4DIG VARCHAR2(4) NOT NULL ENABLE,
	COD_POSTAL_3DIG VARCHAR2(3) NOT NULL ENABLE,
	COD_POSTAL_DESIGN VARCHAR2(100) NOT NULL ENABLE
   );


COMMENT ON COLUMN postal_code_pt.id_postal_code_pt IS 'Chave primária' ;
COMMENT ON COLUMN postal_code_pt.id_distrito IS 'Código do Distrito' ;
COMMENT ON COLUMN postal_code_pt.id_concelho IS 'Código do Concelho' ;
COMMENT ON COLUMN postal_code_pt.id_freguesia IS 'Código da Freguesia' ;
COMMENT ON COLUMN postal_code_pt.id_localidade IS 'Código da localidade' ;
COMMENT ON COLUMN postal_code_pt.localidade IS 'Nome da localidade' ;
COMMENT ON COLUMN postal_code_pt.cod_arteria IS 'Código da Artéria' ;
COMMENT ON COLUMN postal_code_pt.tipo_arteria IS 'Artéria - Tipo (Rua, Praça, etc)' ;
COMMENT ON COLUMN postal_code_pt.titulo_arteria IS 'Artéria - Titulo (Doutor, Eng.º, Professor, etc)' ;
COMMENT ON COLUMN postal_code_pt.design_arteria IS 'Artéria - Designação' ;
COMMENT ON COLUMN postal_code_pt.localiz_arteria IS 'Artéria - Informação do Local/Zona' ;
COMMENT ON COLUMN postal_code_pt.troco IS 'Descrição do troço' ;
COMMENT ON COLUMN postal_code_pt.porta IS 'Número da porta do cliente' ;

COMMENT ON COLUMN postal_code_pt.cliente IS 'Nome do cliente' ;
COMMENT ON COLUMN postal_code_pt.cod_postal_4dig IS 'N.º do código postal' ;
COMMENT ON COLUMN postal_code_pt.cod_postal_3dig IS 'Extensão do n.º do código postal' ;
COMMENT ON COLUMN postal_code_pt.cod_postal_design IS 'Designação Postal' ;
