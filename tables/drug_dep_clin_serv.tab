

  CREATE TABLE DRUG_DEP_CLIN_SERV
   (	ID_DRUG_DEP_CLIN_SERV NUMBER(24,0) NOT NULL ENABLE,
	ID_DRUG NUMBER(12,0) NOT NULL ENABLE,
	ID_DEP_CLIN_SERV NUMBER(12,0),
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(24,0),
	ID_PROFESSIONAL NUMBER(24,0),
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	FLG_TAKE_TYPE VARCHAR2(1),
	TAKES NUMBER(12,0),

	INTERVAL NUMBER(12,4),
	DOSAGE VARCHAR2(100)
   );


COMMENT ON TABLE drug_dep_clin_serv IS 'Medicamentos mais frequentemente escolhidos pelos departamentos e sev. clínicos' ;

COMMENT ON COLUMN drug_dep_clin_serv.id_drug IS 'Chave primaria' ;
COMMENT ON COLUMN drug_dep_clin_serv.id_dep_clin_serv IS 'Departamento + serv. clínico que executa o medicamento, ou para o qual o medicamento é mais frequente' ;
COMMENT ON COLUMN drug_dep_clin_serv.flg_type IS 'Tipo de acção do departamento e serv. clínico: R - fornecimento, P - pode requisitar, M - mais frequentes' ;
COMMENT ON COLUMN drug_dep_clin_serv.id_institution IS 'Instituição para a qual o medicamento é requisitável' ;
COMMENT ON COLUMN drug_dep_clin_serv.id_professional IS 'Profissional para o qual o medicamento é mais frequente' ;
COMMENT ON COLUMN drug_dep_clin_serv.id_software IS 'Aplicação Alert para a qual se verifica o registo' ;
COMMENT ON COLUMN drug_dep_clin_serv.flg_take_type IS 'Tipo de plano de tomas: A - ad eternum , C - contínuo, N - normal, S - SOS, U - unitário (só é preenchido se FLG_TYPE=''M'')' ;
COMMENT ON COLUMN drug_dep_clin_serv.takes IS 'Nº de tomas (só é preenchido se FLG_TYPE=''M'')' ;
COMMENT ON COLUMN drug_dep_clin_serv.interval IS 'Intervalo entre tomas (só é preenchido se FLG_TYPE=''M'' AND FLG_TAKE_TYPE=''N'': mais frequentes, tipo = normal)' ;
COMMENT ON COLUMN drug_dep_clin_serv.dosage IS 'Posologias associada aos medicamentos mais frequentes (só é preenchido se FLG_TYPE=''M'').' ;

alter table drug_dep_clin_serv modify id_dep_clin_serv number(24);

