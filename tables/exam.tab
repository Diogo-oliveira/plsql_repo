

  CREATE TABLE EXAM
   (	ID_EXAM NUMBER(12,0) NOT NULL ENABLE,
	CODE_EXAM VARCHAR2(200) NOT NULL ENABLE,
	FLG_PAT_RESP VARCHAR2(1) NOT NULL ENABLE,
	FLG_PAT_PREP VARCHAR2(1) NOT NULL ENABLE,
	DURATION NUMBER(6,0),
	RESULT_TIME NUMBER(6,0),
	INTERVAL NUMBER(6,0),
	FLG_MOV_PAT VARCHAR2(1) NOT NULL ENABLE,
	COST NUMBER(18,4),
	PRICE NUMBER(18,4),
	CODE_HELP_EXAM VARCHAR2(200),

	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(2) NOT NULL ENABLE,
	GENDER VARCHAR2(1),
	AGE_MIN NUMBER(3,0),
	AGE_MAX NUMBER(3,0),
	ID_EXAM_CAT NUMBER(24,0) NOT NULL ENABLE
   );


COMMENT ON TABLE exam IS 'Parametrização de exames' ;

COMMENT ON COLUMN exam.code_exam IS 'Código para nome' ;
COMMENT ON COLUMN exam.flg_pat_resp IS 'Indicação da necessidade de entrega do termo de responsabilidade ao utente: Y / N' ;
COMMENT ON COLUMN exam.flg_pat_prep IS 'Indicação da necessidade de entrega de indicações de preparação ao utente: Y / N' ;
COMMENT ON COLUMN exam.duration IS 'Duração prevista para a realização (minutos)' ;
COMMENT ON COLUMN exam.result_time IS 'Tempo previsto para obtenção dos resultados (minutos)' ;
COMMENT ON COLUMN exam.interval IS 'Intervalo de tempo entre agendamentos (minutos)' ;
COMMENT ON COLUMN exam.flg_mov_pat IS 'Necessidade de movimentação do doente' ;
COMMENT ON COLUMN exam.cost IS 'Custo monetário' ;
COMMENT ON COLUMN exam.price IS 'Preço de de venda' ;
COMMENT ON COLUMN exam.code_help_exam IS 'Código p/ tradução da ajuda aos profissionais: resultados habituais de acordo com a idade e sexo, parâmetros q inclui, ...' ;
COMMENT ON COLUMN exam.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN exam.rank IS 'Ordem de apresentação' ;
COMMENT ON COLUMN exam.flg_type IS 'Tipo: I - imagem; F - prova funcional; O - ortóptica; A - audiometria; GE - endoscopias gastro; FE - endoscopias respiratórias; G - gastro; F - provas funcionais' ;

COMMENT ON COLUMN exam.gender IS 'Género ao qual se aplica' ;
COMMENT ON COLUMN exam.age_min IS 'Idade mínima à qual se aplica' ;
COMMENT ON COLUMN exam.age_max IS 'Idade máxima à qual se aplica' ;

