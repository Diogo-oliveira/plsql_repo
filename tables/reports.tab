

  CREATE TABLE REPORTS
   (	ID_REPORTS NUMBER(24,0) NOT NULL ENABLE,
	CODE_REPORTS VARCHAR2(200) NOT NULL ENABLE,
	INTERNAL_NAME VARCHAR2(200),
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_PRINTER VARCHAR2(1),
	REPORTS_SQL LONG,
	FLG_TOOLS VARCHAR2(1),
	FLG_FILTER VARCHAR2(1),
	FLG_AUTH_REQ VARCHAR2(1),
	FLG_ACTION VARCHAR2(2),
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,

	DET_SCREEN_NAME VARCHAR2(200),
	FLG_AVAILABLE VARCHAR2(1)
   );


COMMENT ON TABLE reports IS 'Parametriação dos relatórios (reports)' ;

COMMENT ON COLUMN reports.id_reports IS 'Chave primária' ;
COMMENT ON COLUMN reports.code_reports IS 'Código para obter os relatórios por língua' ;
COMMENT ON COLUMN reports.internal_name IS 'Nome interno' ;
COMMENT ON COLUMN reports.flg_type IS 'Tipo de relatório: R-Report; G-Group of report' ;
COMMENT ON COLUMN reports.flg_printer IS 'Tipo de impressão:D-Drugs;B-Barcode;P-Patients; R-Reports; Os relatórios do menu Save terão o tipo S' ;
COMMENT ON COLUMN reports.reports_sql IS 'Código para obtenção da informação para determinado tipo de impressão' ;
COMMENT ON COLUMN reports.flg_tools IS 'Indica se o reports apenas aponta para a utilização da Print Tool' ;
COMMENT ON COLUMN reports.flg_filter IS 'Indica se tem filtro para aplicar, definido na coluna reports_sql. Valores possíveis: Y/N' ;
COMMENT ON COLUMN reports.flg_auth_req IS 'Indica se é necessária autenticação antes de executar o relatório' ;
COMMENT ON COLUMN reports.flg_action IS 'Tipo de acção: R- Print Report, S- Send to screen' ;
COMMENT ON COLUMN reports.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN reports.det_screen_name IS 'Nome do ecrã a mostrar para visualizar o detalhe do item do report' ;
COMMENT ON COLUMN reports.flg_available IS 'Disponibilidade' ;

