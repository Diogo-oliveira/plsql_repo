-- CHANGE REASON: [ALERT-171724] Trials
CREATE TABLE TRIAL (
  ID_TRIAL            NUMBER(24) NOT NULL,
  NAME                VARCHAR2(1000 CHAR) NOT NULL,
  CODE                VARCHAR2(100 CHAR),
  FLG_STATUS          VARCHAR2(1 CHAR) NOT NULL,
  DT_RECORD           TIMESTAMP(6) WITH LOCAL TIME ZONE,
  ID_PROF_RECORD      NUMBER(24),
  RESPONSIBLE         VARCHAR2(1000 CHAR),
  RESP_CONTACT_DET    VARCHAR2(1000 CHAR),
  NOTES               CLOB,
  DT_START            TIMESTAMP(6) WITH LOCAL TIME ZONE,
  DT_END              TIMESTAMP(6) WITH LOCAL TIME ZONE,
  ID_INSTITUTION      NUMBER(24),
  FLG_TRIAL_TYPE      VARCHAR2(1 CHAR) NOT NULL,
  PHARMA_CODE         VARCHAR2(100 CHAR),
  PHARMA_NAME         VARCHAR2(1000 CHAR),
  ID_CANCEL_INFO_DET  NUMBER(24),
  CREATE_USER         VARCHAR2(24 CHAR),
  CREATE_TIME         TIMESTAMP(6) WITH LOCAL TIME ZONE,
  CREATE_INSTITUTION  NUMBER(24),
  UPDATE_USER         VARCHAR2(24 CHAR),
  UPDATE_TIME         TIMESTAMP(6) WITH LOCAL TIME ZONE,
  UPDATE_INSTITUTION  NUMBER(24)
);  
  
COMMENT ON TABLE TRIAL IS 'Table for register the trials for the institution';
COMMENT ON COLUMN TRIAL.ID_TRIAL IS 'ID trail';
COMMENT ON COLUMN TRIAL.NAME IS 'Trial Name';
COMMENT ON COLUMN TRIAL.CODE IS 'Trial Code';
COMMENT ON COLUMN TRIAL.FLG_STATUS IS 'Trial status: A - active, R - Pending, C - cancel, D - Discontinue F- Finish';
COMMENT ON COLUMN TRIAL.DT_RECORD IS 'Trial creation date';
COMMENT ON COLUMN TRIAL.ID_PROF_RECORD IS 'Professional that creates the Trial';
COMMENT ON COLUMN TRIAL.RESPONSIBLE IS 'Professional/Institution responsible for the trial (external trials)';
COMMENT ON COLUMN TRIAL.RESP_CONTACT_DET IS 'Contact details for the Trial''s rsponsible (external trials)';
COMMENT ON COLUMN TRIAL.NOTES IS 'Trial notes (external trials)';
COMMENT ON COLUMN TRIAL.DT_START IS 'Trial start date';
COMMENT ON COLUMN TRIAL.DT_END IS 'Trial end date';
COMMENT ON COLUMN TRIAL.ID_INSTITUTION IS 'Institution where the Trial is created';
COMMENT ON COLUMN TRIAL.FLG_TRIAL_TYPE IS 'Trial type: I - internal, E - external';
COMMENT ON COLUMN TRIAL.ID_CANCEL_INFO_DET IS 'Cancel information details.';
COMMENT ON COLUMN TRIAL.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN TRIAL.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN TRIAL.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN TRIAL.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN TRIAL.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN TRIAL.UPDATE_INSTITUTION IS 'Update Institution';
COMMENT ON COLUMN TRIAL.PHARMA_CODE IS 'Pharmaceutic code';
COMMENT ON COLUMN TRIAL.PHARMA_NAME IS 'Pharmaceutic name';
-- CHANGE END: Elisabete Bugalho