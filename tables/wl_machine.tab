

  CREATE TABLE WL_MACHINE
   (	ID_WL_MACHINE NUMBER(24,0) NOT NULL ENABLE,
	INTERN_NAME_MACHINE VARCHAR2(30) NOT NULL ENABLE,
	FLG_AUDIO_ACTIVE VARCHAR2(1) NOT NULL ENABLE,
	FLG_VIDEO_ACTIVE VARCHAR2(1) NOT NULL ENABLE,
	ID_ROOM NUMBER(24,0) NOT NULL ENABLE,
	DESC_MACHINE_VISUAL VARCHAR2(200) NOT NULL ENABLE,
	DESC_MACHINE_AUDIO VARCHAR2(200) NOT NULL ENABLE
   );


COMMENT ON TABLE wl_machine IS 'Máquinas (PCs Alert e monitores onde são mostradas as informações aos utentes)' ;

COMMENT ON COLUMN wl_machine.id_wl_machine IS 'Chave primária' ;
COMMENT ON COLUMN wl_machine.intern_name_machine IS 'Nome interno (utilizado no código)' ;
COMMENT ON COLUMN wl_machine.flg_audio_active IS 'Tipo de transmissão audio da máquina: N - none; B - bip; V - voice' ;
COMMENT ON COLUMN wl_machine.flg_video_active IS 'Indicador de que a máq transmite info em vídeo' ;
COMMENT ON COLUMN wl_machine.desc_machine_visual IS 'Descrição da máq, tal como aparece no ecrã' ;
COMMENT ON COLUMN wl_machine.desc_machine_audio IS 'Descrição da máq, tal como é referida pelo sistema  de voz' ;

ALTER TABLE WL_MACHINE ADD ID_WL_QUEUE_GROUP NUMBER(24);

comment on column WL_MACHINE.ID_WL_QUEUE_GROUP is 'ID do grupo';

