CREATE TABLE SNCP_NURSE_CARE_PLAN
  (
    ID_SNCP_NURSE_CARE_PLAN NUMBER (24) NOT NULL ,
    FLG_CONTENT_CREATOR     VARCHAR2 (1 CHAR) NOT NULL ,
    CODE_NAME               VARCHAR2 (200 CHAR) AS ( 'SNCP_NURSE_CARE_PLAN.CODE_NAME.'
    ||TO_CHAR(ID_SNCP_NURSE_CARE_PLAN) ) VIRTUAL NOT NULL ,
    CODE_DESCRIPTION VARCHAR2 (200 CHAR) AS ( 'SNCP_NURSE_CARE_PLAN.CODE_DESCRIPTION.'
    ||TO_CHAR(ID_SNCP_NURSE_CARE_PLAN) ) VIRTUAL NOT NULL ,
    ID_INSTITUTION   NUMBER (24) ,
    ID_PROFESSIONAL  NUMBER (24) ,
    ID_CANCEL_REASON NUMBER (24) ,
    CANCEL_NOTES     VARCHAR2 (1000 CHAR) ,
    FLG_STATUS       VARCHAR2 (1 CHAR) DEFAULT 'A' NOT NULL ,
    CODE_NOTES       VARCHAR2 (200 CHAR) AS ( 'SNCP_NURSE_CARE_PLAN.CODE_NOTES.'
    ||TO_CHAR(ID_SNCP_NURSE_CARE_PLAN) ) VIRTUAL NOT NULL ,
    DT_TRS_TIME_START  TIMESTAMP WITH LOCAL TIME ZONE NOT NULL ,
    DT_TRS_TIME_END    TIMESTAMP WITH LOCAL TIME ZONE ,
    CREATE_USER        VARCHAR2 (30 CHAR) ,
    CREATE_TIME        TIMESTAMP WITH LOCAL TIME ZONE ,
    CREATE_INSTITUTION NUMBER (24) ,
    UPDATE_USER        VARCHAR2 (30 CHAR) ,
    UPDATE_TIME        TIMESTAMP WITH LOCAL TIME ZONE ,
    UPDATE_INSTITUTION NUMBER (24)
  )
  TABLESPACE ALERT_DATA ;

