-- CHANGED BY: Pedro Carneiro
-- CHANGE DATE: 25/02/2011 10:10
-- CHANGE REASON: [ALERT-164483] soap note blocks configuration data model
create table PN_FREE_TEXT_INST
(
  ID_INSTITUTION      NUMBER(24) not null,
  ID_PROFILE_TEMPLATE NUMBER(12) not null,
  ID_PN_DATA_BLOCK    NUMBER(24) not null,
  FLG_WRITE           VARCHAR2(1 char) not null,
  CREATE_USER         VARCHAR2(24 char),
  CREATE_TIME         TIMESTAMP WITH LOCAL TIME ZONE,
  CREATE_INSTITUTION  NUMBER(24),
  UPDATE_USER         VARCHAR2(24 char),
  UPDATE_TIME         TIMESTAMP WITH LOCAL TIME ZONE,
  UPDATE_INSTITUTION  NUMBER(24)
)
;

comment on table PN_FREE_TEXT_INST
  is 'Free text blocks edition access configured by institution.';

comment on column PN_FREE_TEXT_INST.ID_INSTITUTION
  is 'Institution identifier.';
comment on column PN_FREE_TEXT_INST.ID_PROFILE_TEMPLATE
  is 'Profile template identifier.';
comment on column PN_FREE_TEXT_INST.ID_PN_DATA_BLOCK
  is 'Data block identifier.';
comment on column PN_FREE_TEXT_INST.FLG_WRITE
  is 'Can this profile edit this block? Y/N (applicable only to ambulatory free texts blocks).';
comment on column PN_FREE_TEXT_INST.CREATE_USER
  is 'Creation User';
comment on column PN_FREE_TEXT_INST.CREATE_TIME
  is 'Creation Time';
comment on column PN_FREE_TEXT_INST.CREATE_INSTITUTION
  is 'Creation Institution';
comment on column PN_FREE_TEXT_INST.UPDATE_USER
  is 'Update User';
comment on column PN_FREE_TEXT_INST.UPDATE_TIME
  is 'Update Time';
comment on column PN_FREE_TEXT_INST.UPDATE_INSTITUTION
  is 'Update Institution';
-- CHANGE END: Pedro Carneiro

