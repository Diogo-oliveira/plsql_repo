-- CHANGED BY: Luís Maia
-- CHANGE DATE: 03/04/2012 17:45
-- CHANGE REASON: [ALERT-226174] 
DECLARE
    e_column_already_there EXCEPTION;

    PRAGMA EXCEPTION_INIT(e_column_already_there, -01430); -- add column
BEGIN
    EXECUTE IMMEDIATE 'alter table pn_free_text_inst add id_category number(24) default -1 not null';
EXCEPTION
    WHEN e_column_already_there THEN
      dbms_output.put_line('AVISO: Operação já executada anteriormente.');   
END;
/

DECLARE
    e_column_already_there EXCEPTION;

    PRAGMA EXCEPTION_INIT(e_column_already_there, -01430); -- add column
BEGIN
    EXECUTE IMMEDIATE 'alter table pn_free_text_inst add id_software number(24) default 0 not null';
EXCEPTION
    WHEN e_column_already_there THEN
      dbms_output.put_line('AVISO: Operação já executada anteriormente.');   
END;
/

DECLARE
    e_column_already_there EXCEPTION;

    PRAGMA EXCEPTION_INIT(e_column_already_there, -01430); -- add column
BEGIN
    EXECUTE IMMEDIATE 'alter table pn_free_text_inst add flg_config_type varchar2(1 char) default ''P'' not null';
EXCEPTION
    WHEN e_column_already_there THEN
      dbms_output.put_line('AVISO: Operação já executada anteriormente.');   
END;
/

COMMENT ON column pn_free_text_inst.id_software IS 'Software identifier.';
COMMENT ON column pn_free_text_inst.id_category IS 'Category identifier.';
COMMENT ON column pn_free_text_inst.flg_config_type IS 'Indicates the scope of the configuration. S - by Software: id_software<>0, id_category=-1 and id_profile_template=0; C - by category: id_software=0, id_category<>-1 and id_profile_template=0; P - by profile_template: id_software=0, id_category=-1 and id_profile_template<>0';
-- CHANGE END: Luís Maia

