

  CREATE TABLE HIDRICS
   (	ID_HIDRICS NUMBER(24,0) NOT NULL ENABLE,
	CODE_HIDRICS VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(24,0),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	ID_UNIT_MEASURE NUMBER(24,0)
   );


COMMENT ON TABLE hidrics IS 'Hidricos (Administração / eliminação)' ;

COMMENT ON COLUMN hidrics.id_hidrics IS 'Chave primária' ;
COMMENT ON COLUMN hidrics.code_hidrics IS 'Código para obter os hidricos por língua' ;
COMMENT ON COLUMN hidrics.flg_type IS 'Tipo de hidrico. A - Administration; E - Elimination' ;
COMMENT ON COLUMN hidrics.rank IS 'Ordenação' ;
COMMENT ON COLUMN hidrics.flg_available IS 'Disponibilidade do registo' ;
COMMENT ON COLUMN hidrics.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN hidrics.id_unit_measure IS 'Unidade de medida' ;



ALTER TABLE HIDRICS ADD (ID_CONTENT VARCHAR2(200));
COMMENT ON COLUMN HIDRICS.ID_CONTENT  IS 'Identificador único de conteúdo';

