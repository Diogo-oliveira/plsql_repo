

  CREATE TABLE DOC_ELEMENT_CRIT
   (	ID_DOC_ELEMENT_CRIT NUMBER(24,0) NOT NULL ENABLE,
	ID_DOC_ELEMENT NUMBER(24,0) NOT NULL ENABLE,
	ID_DOC_CRITERIA NUMBER(24,0) NOT NULL ENABLE,
	CODE_ELEMENT_CLOSE VARCHAR2(200),
	CODE_ELEMENT_OPEN VARCHAR2(200),
	FLG_VIEW VARCHAR2(1),
	FLG_DEFAULT VARCHAR2(1) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	CODE_ELEMENT_VIEW VARCHAR2(200),
	FLG_MANDATORY VARCHAR2(1)

   );


COMMENT ON COLUMN doc_element_crit.id_doc_element_crit IS 'Chave primária' ;
COMMENT ON COLUMN doc_element_crit.id_doc_element IS 'Elemento' ;
COMMENT ON COLUMN doc_element_crit.id_doc_criteria IS 'Critério do elemento' ;
COMMENT ON COLUMN doc_element_crit.code_element_close IS 'Descrição do elemento quando ele está fechado' ;
COMMENT ON COLUMN doc_element_crit.code_element_open IS 'Descrição do elemento quando ele está aberto' ;
COMMENT ON COLUMN doc_element_crit.flg_view IS 'Posição dos elementos. S -Página resumo; H - Cabeçalho' ;
COMMENT ON COLUMN doc_element_crit.flg_default IS 'Valor por defeito: Y - Yes; N - No' ;
COMMENT ON COLUMN doc_element_crit.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN doc_element_crit.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN doc_element_crit.code_element_view IS 'Descrição do elemento nas páginas resumo' ;
COMMENT ON COLUMN doc_element_crit.flg_mandatory IS 'Indica se o elemento é mandatório e se esta resposta satisfaz a condição de mandatório. Y- Yes; N- No' ;

comment on column DOC_ELEMENT_CRIT.CODE_ELEMENT_VIEW
  is 'Descrição do elemento a mostrar nas páginas resumo';
  
