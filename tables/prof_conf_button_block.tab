BEGIN
    EXECUTE IMMEDIATE 'alter table prof_conf_button_block add id_software number(24) default 0 not null';
EXCEPTION
    WHEN e_column_already_there THEN
      dbms_output.put_line('AVISO: Operação já executada anteriormente.');   
