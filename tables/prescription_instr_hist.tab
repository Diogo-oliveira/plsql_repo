create table PRESCRIPTION_INSTR_HIST
(
  ID_PRESCRIPTION_INSTR_HIST NUMBER(24) not null,
  ID_PRESC                   NUMBER(24) not null,
  FLG_TYPE_PRESC             VARCHAR2(1) not null,
  FLG_SUBTYPE_PRESC          VARCHAR2(2),
  QTY                        NUMBER(24,4),
  ID_UNIT_MEASURE_QTY        NUMBER(24),
  FREQUENCY                  NUMBER(24),
  ID_UNIT_MEASURE_FREQ       NUMBER(24),
  DURATION                   NUMBER(24),
  ID_UNIT_MEASURE_DUR        NUMBER(24),
  DATE_START                 TIMESTAMP(6) WITH LOCAL TIME ZONE,
  DATE_END                   TIMESTAMP(6) WITH LOCAL TIME ZONE,
  ID_PROFESSIONAL            NUMBER(24),
  ID_INSTITUTION             NUMBER(12),
  ID_SOFTWARE                NUMBER(24),
  LAST_UPDATE_TSTZ           TIMESTAMP(6) WITH LOCAL TIME ZONE,
  PRESCRIPTION_TABLE         VARCHAR2(100),
  FLG_STATUS_OLD             VARCHAR2(1),
  FLG_STATUS_NEW             VARCHAR2(1),
  FLG_CHANGE                 VARCHAR2(1)
);

comment on table PRESCRIPTION_INSTR_HIST is 'Histórico das alterações da posologia de medicação';

comment on column PRESCRIPTION_INSTR_HIST.ID_PRESC is 'Identificação de medicamento/manipulado/dietético (ID_PRESCRIPTION_PHARM/ID_DRUG_REQ_DET/ID_DRUG_PRESC_DET)';
comment on column PRESCRIPTION_INSTR_HIST.FLG_TYPE_PRESC is 'Identificação do tipo de prescrição: E - Exterior, I - Farmácia hospitalar, A - Neste local';
comment on column PRESCRIPTION_INSTR_HIST.FLG_SUBTYPE_PRESC is 'Identificação de subtipo de prescrição: ME - manipulado p/ exterior, DE - dietético p/ exterior, MI - manipulado p/ farmácia hospitalar , DI - dietético p/ farmácia hospitalar';
comment on column PRESCRIPTION_INSTR_HIST.QTY is 'Quantidade';
comment on column PRESCRIPTION_INSTR_HIST.ID_UNIT_MEASURE_QTY is 'Unidade de medida da quantidade';
comment on column PRESCRIPTION_INSTR_HIST.FREQUENCY is 'Frequência';
comment on column PRESCRIPTION_INSTR_HIST.ID_UNIT_MEASURE_FREQ is 'Unidade de medida da frequência';
comment on column PRESCRIPTION_INSTR_HIST.DURATION is 'Duração';
comment on column PRESCRIPTION_INSTR_HIST.ID_UNIT_MEASURE_DUR is 'Unidade de medida da duração';
comment on column PRESCRIPTION_INSTR_HIST.DATE_START is 'Data de início';
comment on column PRESCRIPTION_INSTR_HIST.DATE_END is 'Data de fim';
comment on column PRESCRIPTION_INSTR_HIST.ID_PROFESSIONAL is 'ID do profissional';
comment on column PRESCRIPTION_INSTR_HIST.ID_INSTITUTION is 'ID da instituição';
comment on column PRESCRIPTION_INSTR_HIST.ID_SOFTWARE is 'ID do software';
comment on column PRESCRIPTION_INSTR_HIST.LAST_UPDATE_TSTZ is 'Data de última alteração da posologia';
comment on column PRESCRIPTION_INSTR_HIST.PRESCRIPTION_TABLE is 'tabela da prescrição reativa ao id_presc';
comment on column PRESCRIPTION_INSTR_HIST.FLG_STATUS_OLD is 'estado inicial';
comment on column PRESCRIPTION_INSTR_HIST.FLG_STATUS_NEW is 'estado final';
comment on column PRESCRIPTION_INSTR_HIST.FLG_CHANGE is 'Flag tipo de alteração P- Posologia S- Status ';

