CREATE TABLE EPIS_PN_ADDENDUM_HIST
 (ID_EPIS_PN_ADDENDUM NUMBER(24) NOT NULL
 ,DT_EPIS_ADDENDUM_HIST TIMESTAMP WITH LOCAL TIME ZONE NOT NULL
 ,ID_EPIS_PN NUMBER(24) NOT NULL
 ,FLG_STATUS VARCHAR2(1 CHAR) NOT NULL
 ,ID_PROFESSIONAL NUMBER(24) NOT NULL
 ,DT_ADDENDUM TIMESTAMP WITH LOCAL TIME ZONE NOT NULL
 ,PN_ADDENDUM CLOB NOT NULL
 ,DT_LAST_UPDATE TIMESTAMP WITH LOCAL TIME ZONE
 ,ID_PROF_LAST_UPDATE NUMBER(24) 
 ,DT_SIGNOFF TIMESTAMP WITH LOCAL TIME ZONE
 ,ID_PROF_SIGNOFF NUMBER(24)
 ,ID_PROF_CANCEL NUMBER(24)
 ,ID_CANCEL_REASON NUMBER(24)
 ,DT_CANCEL TIMESTAMP WITH LOCAL TIME ZONE
 ,NOTES_CANCEL VARCHAR2(1000 CHAR)
 ,CREATE_USER VARCHAR2(30 CHAR)
 ,CREATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE
 ,CREATE_INSTITUTION NUMBER(24)
 ,UPDATE_USER VARCHAR2(30 CHAR)
 ,UPDATE_TIME TIMESTAMP(6) WITH LOCAL TIME ZONE
 ,UPDATE_INSTITUTION NUMBER(24)
 )
/

COMMENT ON TABLE EPIS_PN_ADDENDUM_HIST IS 'Progress notes sign off addendums history'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.ID_EPIS_PN_ADDENDUM IS 'Addendum ID'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.DT_EPIS_ADDENDUM_HIST IS 'Addendum update date'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.ID_EPIS_PN IS 'Epis Progress note ID'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.FLG_STATUS IS 'Addendum status. D- Draft; S-Signed-off'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.ID_PROFESSIONAL IS 'Professional ID'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.DT_ADDENDUM IS 'Addendum date'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.PN_ADDENDUM IS 'Addendum (text)'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.DT_LAST_UPDATE IS 'Last update date'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.ID_PROF_LAST_UPDATE IS 'Last update professional ID'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.DT_SIGNOFF IS 'Sign-off date'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.ID_PROF_SIGNOFF IS 'Sign-off professional ID'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.ID_PROF_CANCEL IS 'Cancel professional ID'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.ID_CANCEL_REASON IS 'Cancel reason ID'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.DT_CANCEL IS 'Cancel date'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.NOTES_CANCEL IS 'Cancel notes'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.CREATE_USER IS 'Professional ID that creates the registry'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.CREATE_TIME IS 'Date of registry creation'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.CREATE_INSTITUTION IS 'Institution ID where registry was created'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.UPDATE_USER IS 'Professional ID that last updates the registry'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.UPDATE_TIME IS 'Date of registry last update'
/

COMMENT ON COLUMN EPIS_PN_ADDENDUM_HIST.UPDATE_INSTITUTION IS 'Institution ID where registry was last updated'
/


