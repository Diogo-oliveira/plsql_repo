

  CREATE TABLE EXAM_GROUP
   (	ID_EXAM_GROUP NUMBER(24,0) NOT NULL ENABLE,
	CODE_EXAM_GROUP VARCHAR2(200) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	GENDER VARCHAR2(1),
	AGE_MIN NUMBER(3,0),
	AGE_MAX NUMBER(3,0)
   );


COMMENT ON TABLE exam_group IS 'Grupos de exames, para que, seleccionando um grupo, sejam criadas requisições para os vários exames incluídos no grupo.' ;

COMMENT ON COLUMN exam_group.code_exam_group IS 'Código para tradução do noem do grupo' ;
COMMENT ON COLUMN exam_group.gender IS 'Género ao qual se aplica' ;
COMMENT ON COLUMN exam_group.age_min IS 'Idade mínima à qual se aplica' ;
COMMENT ON COLUMN exam_group.age_max IS 'Idade máxima à qual se aplica' ;



