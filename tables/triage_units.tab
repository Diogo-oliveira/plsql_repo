

  CREATE TABLE TRIAGE_UNITS
   (	ID_TRIAGE_UNITS NUMBER NOT NULL ENABLE,
	CODE_TRIAGE_UNITS VARCHAR2(240) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	CONVERSION NUMBER
   );


COMMENT ON COLUMN triage_units.id_triage_units IS 'Chave primária' ;
COMMENT ON COLUMN triage_units.code_triage_units IS 'Descrição da unidade' ;
COMMENT ON COLUMN triage_units.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN triage_units.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN triage_units.conversion IS 'Conversão' ;


