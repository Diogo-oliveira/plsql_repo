CREATE TABLE PAT_TRIAL_FOLLOW_UP_HIST (
  ID_PAT_TRIAL_FOLLOW_UP_H NUMBER(24) NOT NULL,
  ID_PAT_TRIAL_FOLLOW_UP   NUMBER(24) NOT NULL,
  DT_RECORD           TIMESTAMP(6) WITH LOCAL TIME ZONE,
  ID_PROF_RECORD      NUMBER(24),
  DT_CREATE           TIMESTAMP(6) WITH LOCAL TIME ZONE,
  ID_PROF_CREATE      NUMBER(24),
  FLG_STATUS          VARCHAR2(1 CHAR) NOT NULL,
  ID_EPISODE_RECORD   NUMBER(24),
  NOTES               CLOB,
  ID_CANCEL_INFO_DET  NUMBER(24),
  CREATE_USER         VARCHAR2(24 CHAR),
  CREATE_TIME         TIMESTAMP(6) WITH LOCAL TIME ZONE,
  CREATE_INSTITUTION  NUMBER(24),
  UPDATE_USER         VARCHAR2(24 CHAR),
  UPDATE_TIME         TIMESTAMP(6) WITH LOCAL TIME ZONE,
  UPDATE_INSTITUTION  NUMBER(24)
);  
  
COMMENT ON TABLE PAT_TRIAL_FOLLOW_UP_HIST IS 'Table for register the history of follow up notes for a given patient''s trial';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.ID_PAT_TRIAL_FOLLOW_UP_H IS 'ID pat_trial_follow_up_hist';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.ID_PAT_TRIAL_FOLLOW_UP IS 'ID PAT_TRIAL_FOLLOW_UP';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.DT_RECORD IS 'Follow up creation/edition date';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.ID_PROF_RECORD IS 'Professional that creates/edit the follow up';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.DT_CREATE IS 'Date of follow up creation';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.ID_PROF_CREATE IS 'Professional that created the follow up';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.FLG_STATUS IS 'Follow up status: A - active, C - cancel, E - edit';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.NOTES IS 'Notes';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.ID_CANCEL_INFO_DET IS 'Cancel information details.';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.UPDATE_INSTITUTION IS 'Update Institution';
COMMENT ON COLUMN PAT_TRIAL_FOLLOW_UP_HIST.ID_EPISODE_RECORD is 'ID  episode where it was registered';
