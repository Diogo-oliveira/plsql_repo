

  CREATE TABLE TRANSPORT_TYPE
   (	ID_TRANSPORT_TYPE NUMBER(12,0) NOT NULL ENABLE,
	CODE_TRANSPORT_TYPE VARCHAR2(200) NOT NULL ENABLE,
	NUM_PEOPLE_LAY NUMBER(2,0),
	NUM_PEOPLE_SEAT NUMBER(2,0),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE transport_type IS 'Tipos de transporte disponíveis para o exterior. Por ex., ambulância do tipo A1 ou do tipo A2' ;

COMMENT ON COLUMN transport_type.num_people_lay IS 'Nº de pessoas deitadas (maca) que pode acomodar' ;
COMMENT ON COLUMN transport_type.num_people_seat IS 'Nº de pessoas sentadas que pode acomodar' ;
COMMENT ON COLUMN transport_type.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
