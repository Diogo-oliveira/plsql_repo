

  CREATE TABLE REP_PROFILE_TEMPLATE_DET
   (	ID_REP_PROFILE_TEMPLATE_DET NUMBER(24,0) NOT NULL ENABLE,
	ID_REP_PROFILE_TEMPLATE NUMBER(12,0) NOT NULL ENABLE,
	ID_REPORTS NUMBER(24,0) NOT NULL ENABLE,
	ID_REP_SCREEN NUMBER(24,0),
	FLG_AREA_REPORT VARCHAR2(2),
	FLG_ACTION VARCHAR2(2),
	RANK NUMBER(6,0),
	VALUE_ACTION VARCHAR2(200),
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE rep_profile_template_det IS 'Relatórios que constituem os templates de acessos aos relatórios' ;

COMMENT ON COLUMN rep_profile_template_det.id_rep_profile_template_det IS 'Chave primária' ;
COMMENT ON COLUMN rep_profile_template_det.id_rep_profile_template IS 'ID do template dos relatórios' ;
COMMENT ON COLUMN rep_profile_template_det.id_reports IS 'ID do relatório' ;
COMMENT ON COLUMN rep_profile_template_det.id_rep_screen IS 'ID do ecran e funcionalidade' ;
COMMENT ON COLUMN rep_profile_template_det.flg_area_report IS 'Área na qual será alocado o relatório. R-Reports;OD-Ongoing Documents; C-Consents;CR-Certificates;F-Forms;L-Lables; DE-Documents produced in this episode; S- Save To' ;
COMMENT ON COLUMN rep_profile_template_det.flg_action IS 'Tipo de acção:OR - Open report; OS - Open screen;' ;
COMMENT ON COLUMN rep_profile_template_det.rank IS 'Ordem de visualização' ;
COMMENT ON COLUMN rep_profile_template_det.value_action IS 'Valor da acção. No caso da flg_action=OR, será indicado por ex. se irá ser imprimido em PDF, no caso da flg_action=OS - o nome do ecran a ser visualizado' ;

alter table REP_PROFILE_TEMPLATE_DET modify FLG_AREA_REPORT not null;

