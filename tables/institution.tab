

  CREATE TABLE INSTITUTION
   (	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	CODE_INSTITUTION VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	BARCODE VARCHAR2(30),
	ABBREVIATION VARCHAR2(30),
	LOCATION VARCHAR2(200),
	INE_LOCATION VARCHAR2(6),
	ID_PARENT NUMBER(12,0),

	PHONE_NUMBER VARCHAR2(30),
	EXT_CODE NUMBER(7,0)
   );


COMMENT ON TABLE institution IS 'Instituições de saúde' ;

COMMENT ON COLUMN institution.code_institution IS 'Código para tradução' ;
COMMENT ON COLUMN institution.flg_type IS 'Tipo: H - hospital, C - centro de saúde, P - clínica privada' ;
COMMENT ON COLUMN institution.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN institution.rank IS 'Ordem de apresentação' ;
COMMENT ON COLUMN institution.barcode IS 'Código de barras' ;
COMMENT ON COLUMN institution.location IS 'Cidade ou localidade' ;
COMMENT ON COLUMN institution.ine_location IS 'Localidade da instituição (codificação do INE). Este campo apresenta a estrutura DDCCFF onde: DD - código do distrito; CC - código do concelho; FF - código da freguesia.' ;
COMMENT ON COLUMN institution.phone_number IS 'Nº de telefone da instituição.' ;


comment on column INSTITUTION.ID_PARENT
  is 'Instituição pai';
comment on column INSTITUTION.EXT_CODE
  is 'Código da institição no SONHO';

alter table INSTITUTION modify EXT_CODE VARCHAR2(7);

