

  CREATE TABLE DRUG_INSTIT_JUSTIFICATION
   (	ID_DRUG_INSTIT_JUSTIFICATION NUMBER(24,0) NOT NULL ENABLE,
	ID_DRUG_JUSTIFICATION NUMBER(24,0) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	RANK NUMBER(6,0)
   );


COMMENT ON TABLE drug_instit_justification IS 'Justificações de prescrição disponíveis em cada instituição e software.' ;

COMMENT ON COLUMN drug_instit_justification.id_drug_instit_justification IS 'Chave primária' ;
COMMENT ON COLUMN drug_instit_justification.id_drug_justification IS 'ID da justificação' ;
COMMENT ON COLUMN drug_instit_justification.flg_type IS 'Flag que indica o fim a que se destina a justificação: prescrição (P), requisições à farmácia (R), rejeição de aviamento (A), devolução total (T), devolução parcial (D).' ;
COMMENT ON COLUMN drug_instit_justification.id_institution IS 'ID da instituição onde está disponível a justificação.' ;
COMMENT ON COLUMN drug_instit_justification.id_software IS 'ID do software onde está disponível a justificação.' ;
COMMENT ON COLUMN drug_instit_justification.rank IS 'Rank para ordenação das opções no multichoice.' ;


