CREATE TABLE AREA_KEY_NEXTVAL
 (AREA VARCHAR(32) NOT NULL
 ,KEY VARCHAR(32) NOT NULL
 ,CUR_VALUE NUMBER(24) NOT NULL
 )
/
COMMENT ON TABLE AREA_KEY_NEXTVAL IS 'This table holds the current value to be used as sequences for a given area / key'
/
COMMENT ON COLUMN AREA_KEY_NEXTVAL.AREA IS 'The area for which a sequence is needed.'
/
COMMENT ON COLUMN AREA_KEY_NEXTVAL.KEY IS 'The key for which a sequence is needed.'
/
COMMENT ON COLUMN AREA_KEY_NEXTVAL.CUR_VALUE IS 'The current value of the sequence.'
/
