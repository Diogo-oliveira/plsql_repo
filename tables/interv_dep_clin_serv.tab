

  CREATE TABLE INTERV_DEP_CLIN_SERV
   (	ID_INTERV_DEP_CLIN_SERV NUMBER(24,0) NOT NULL ENABLE,
	ID_INTERVENTION NUMBER(24,0) NOT NULL ENABLE,
	ID_DEP_CLIN_SERV NUMBER(24,0),
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(24,0),
	ID_PROFESSIONAL NUMBER(24,0),
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	FLG_BANDAID VARCHAR2(1)
   );



COMMENT ON TABLE interv_dep_clin_serv IS 'Intervenções + frequentes por departamento / serviço clínico' ;

COMMENT ON COLUMN interv_dep_clin_serv.id_dep_clin_serv IS 'Departamento + serv. clínico que executa o procedimento, ou para o qual o procedimento é mais frequente' ;
COMMENT ON COLUMN interv_dep_clin_serv.flg_type IS 'Tipo de acção do departamento e serv. clínico: R - realização da intervenção, P - pode pedir a intervenção, M - mais frequentes' ;
COMMENT ON COLUMN interv_dep_clin_serv.id_institution IS 'Instituição para a qual o procedimento é requisitável' ;
COMMENT ON COLUMN interv_dep_clin_serv.id_professional IS 'Profissional para o qual o procedimento é mais frequente' ;
COMMENT ON COLUMN interv_dep_clin_serv.id_software IS 'Aplicação Alert para a qual se verifica o registo' ;
COMMENT ON COLUMN interv_dep_clin_serv.flg_bandaid IS 'Para a instituição parametrizada, é um proc. facturável na execução de pensos' ;

ALTER TABLE INTERV_DEP_CLIN_SERV 
 ADD (FLG_CHARGEABLE  VARCHAR2(1) NULL
 )
/

COMMENT ON COLUMN INTERV_DEP_CLIN_SERV.FLG_CHARGEABLE IS 'Indica se o procedimento é facturável (Y/N)'
/

