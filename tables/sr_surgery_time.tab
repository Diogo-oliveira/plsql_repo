

  CREATE TABLE SR_SURGERY_TIME
   (	ID_SR_SURGERY_TIME NUMBER(24,0) NOT NULL ENABLE,
	CODE_SR_SURGERY_TIME VARCHAR2(200),
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(2),
	FLG_AVAILABLE VARCHAR2(1),
	RANK NUMBER,
	ADW_LAST_UPDATE DATE,
	FLG_PAT_STATUS VARCHAR2(1),
	FLG_VAL_PREV VARCHAR2(1)
   );



COMMENT ON COLUMN sr_surgery_time.id_sr_surgery_time IS 'Identificador da tabela' ;
COMMENT ON COLUMN sr_surgery_time.code_sr_surgery_time IS 'Código para as traduções' ;
COMMENT ON COLUMN sr_surgery_time.id_software IS 'Id Software' ;
COMMENT ON COLUMN sr_surgery_time.flg_type IS 'Tipo do registo para permitir incluir informação nos sumários, independentemente dos ids' ;
COMMENT ON COLUMN sr_surgery_time.flg_available IS 'Indica se o tempo operatório está disponível ou não. (Y-Disponível; N-Não disponível)' ;
COMMENT ON COLUMN sr_surgery_time.rank IS 'Usado para ordenações' ;
COMMENT ON COLUMN sr_surgery_time.adw_last_update IS 'Última actualização do registo' ;
COMMENT ON COLUMN sr_surgery_time.flg_pat_status IS 'Estado que o paciente deve ficar na SR_PAT_STATUS quando é introduzido o tempo operatório para esta categoria' ;
COMMENT ON COLUMN sr_surgery_time.flg_val_prev IS 'Indica se deve validar se os tempos operatórios devem estar previamente preenchidos' ;


