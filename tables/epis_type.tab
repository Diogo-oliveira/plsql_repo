

  CREATE TABLE EPIS_TYPE
   (	ID_EPIS_TYPE NUMBER(12,0) NOT NULL ENABLE,
	INTERN_NAME_EPIS_TYPE VARCHAR2(200) NOT NULL ENABLE,
	CODE_EPIS_TYPE VARCHAR2(200) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0)
   );


COMMENT ON TABLE epis_type IS 'Tipos de episódio: U - urgência, G - operatório, C - consulta externa, O - obs, S - social, I - internamento' ;

COMMENT ON COLUMN epis_type.code_epis_type IS 'Código para tradução do tipo de episódio' ;
COMMENT ON COLUMN epis_type.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;

