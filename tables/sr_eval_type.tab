

  CREATE TABLE SR_EVAL_TYPE
   (	ID_SR_EVAL_TYPE NUMBER(3,0) NOT NULL ENABLE,
	CODE_SR_EVAL_TYPE VARCHAR2(200),
	ID_SURG_PERIOD NUMBER(3,0) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1),
	RANK NUMBER(3,0),
	VAL VARCHAR2(1),
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	ID_DOC_AREA NUMBER(24,0) NOT NULL ENABLE,
	FLG_ACCESS VARCHAR2(1)
   );



COMMENT ON TABLE sr_eval_type IS 'Nos ecrãs que não se referem a avaliações, indica os grupos de cada opção. N- Avaliações de Enfermagem, D- Registos do crirugião e anestesista' ;

COMMENT ON COLUMN sr_eval_type.id_sr_eval_type IS 'ID único' ;
COMMENT ON COLUMN sr_eval_type.code_sr_eval_type IS 'Código para obtenção do nome da avaliação na tabela translation' ;
COMMENT ON COLUMN sr_eval_type.id_surg_period IS 'ID do período operatório' ;
COMMENT ON COLUMN sr_eval_type.flg_available IS 'Disponibilidade da avaliação na instituição' ;
COMMENT ON COLUMN sr_eval_type.rank IS 'Ordem de visualização' ;
COMMENT ON COLUMN sr_eval_type.val IS 'Nos ecrãs que não se referem a avaliações, indica os grupos de cada opção. N- Avaliações de Enfermagem, D- Registos do crirugião e anestesista' ;
COMMENT ON COLUMN sr_eval_type.id_institution IS 'ID da instituição' ;
COMMENT ON COLUMN sr_eval_type.id_software IS 'ID do software' ;
COMMENT ON COLUMN sr_eval_type.id_doc_area IS 'ID da área de Documentation' ;
COMMENT ON COLUMN sr_eval_type.flg_access IS 'Tipo de acesso para criar avaliações deste tipo. (N-Nurse; D-Doctor; X-All)' ;


