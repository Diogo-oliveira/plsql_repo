create table PRESCRIPTION_STD_INSTR
(
  ID_PRESCRIPTION_STD_INSTR NUMBER(24),
  UNIT_MEASURE_QTY          NUMBER(24),
  ID_UNIT_MEASURE_FREQ      NUMBER(24),
  ID_UNIT_MEASURE_DUR       NUMBER(24),
  FORM_FARM_ID              VARCHAR2(255),
  VERSION                   VARCHAR2(10),
  QTY                       NUMBER(24,4),
  FREQUENCY                 NUMBER(24,4),
  DURATION                  NUMBER(24,4)
)

COMMENT ON TABLE PRESCRIPTION_STD_INSTR IS 'Instruções Standard para posologia';

comment on column PRESCRIPTION_STD_INSTR.VERSION is 'Versão (PT/USA)';
comment on column PRESCRIPTION_STD_INSTR.QTY is 'Quantidade';
comment on column PRESCRIPTION_STD_INSTR.FREQUENCY is 'Frequência';
comment on column PRESCRIPTION_STD_INSTR.DURATION is 'Duração';
comment on column PRESCRIPTION_STD_INSTR.UNIT_MEASURE_QTY is 'Unidade de medida da quantidade';
comment on column PRESCRIPTION_STD_INSTR.ID_UNIT_MEASURE_FREQ is 'Unidade de medida da frequência';
comment on column PRESCRIPTION_STD_INSTR.ID_UNIT_MEASURE_DUR is 'Unidade de medida da duração';
comment on column PRESCRIPTION_STD_INSTR.FORM_FARM_ID is 'Forma de apresentação do medicamento';


