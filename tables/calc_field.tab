PROMPT Creating Table 'CALC_FIELD'
CREATE TABLE CALC_FIELD
 (ID_CALC_FIELD NUMBER(24) NOT NULL
 ,ID_CALCULATOR NUMBER(24) NOT NULL
 ,CODE_CALC_FIELD VARCHAR2(200) NOT NULL
 ,FLG_TYPE VARCHAR2(1) DEFAULT 'I' NOT NULL
 ,FLG_MANDATORY VARCHAR2(1) DEFAULT 'Y' NOT NULL
 ,ID_UNIT_MEASURE_TYPE NUMBER(24)
 ,ID_UNIT_MEA_ORIG NUMBER(24)
 ,RANK NUMBER(6)
 )
/
COMMENT ON TABLE CALC_FIELD IS 'This table holds all the fields for the calculators.'
/
COMMENT ON COLUMN CALC_FIELD.ID_CALC_FIELD IS 'Calculator Field Id'
/
COMMENT ON COLUMN CALC_FIELD.ID_CALCULATOR IS 'Related calculator Id'
/
COMMENT ON COLUMN CALC_FIELD.CODE_CALC_FIELD IS 'Code for translation'
/
COMMENT ON COLUMN CALC_FIELD.FLG_TYPE IS 'Field type - I-Input O-Output'
/
COMMENT ON COLUMN CALC_FIELD.FLG_MANDATORY IS 'If this field is mandatory for calculation. Y-Yes N-No'
/
COMMENT ON COLUMN CALC_FIELD.ID_UNIT_MEASURE_TYPE IS 'The type of unit measure'
/
COMMENT ON COLUMN CALC_FIELD.ID_UNIT_MEA_ORIG IS 'The original unit measure to be used in the calculation'
/
COMMENT ON COLUMN CALC_FIELD.RANK IS 'Rank for sorting purposes'
/
-- CHANGE END