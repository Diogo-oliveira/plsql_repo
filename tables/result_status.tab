

  CREATE TABLE RESULT_STATUS
   (	ID_RESULT_STATUS NUMBER(24,0) NOT NULL ENABLE,
	VALUE VARCHAR2(1) NOT NULL ENABLE,
	DESC_RESULT_STATUS VARCHAR2(4000) NOT NULL ENABLE
   );


COMMENT ON TABLE result_status IS 'Parametrização de estados dos resultados (registos da tabela "0085 - Observation result status codes interpretation" do HL7)' ;

COMMENT ON COLUMN result_status.value IS 'Valor na tabela de HL7' ;
COMMENT ON COLUMN result_status.desc_result_status IS 'Descrição na tabela de HL7' ;

