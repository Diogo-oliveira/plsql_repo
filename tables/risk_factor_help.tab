CREATE TABLE RISK_FACTOR_HELP
( ID_RISK_FACTOR_HELP         NUMBER(12) not null,
  CODE_TITLE_RISK_FACTOR_HELP VARCHAR2(200) not null,
  CODE_RISK_FACTOR_HELP       VARCHAR2(200) not null,
  FLG_AVAILABLE               VARCHAR2(1) not null,
  ID_DOC_AREA NUMBER(24) NOT NULL
);


COMMENT ON TABLE RISK_FACTOR_HELP IS 'Tabela onde estão os textos de ajuda para cada factor de risco';

COMMENT ON COLUMN RISK_FACTOR_HELP.ID_RISK_FACTOR_HELP IS 'Chave primária';
COMMENT ON COLUMN RISK_FACTOR_HELP.CODE_TITLE_RISK_FACTOR_HELP IS 'Código para tradução do título da ajuda';
COMMENT ON COLUMN RISK_FACTOR_HELP.CODE_RISK_FACTOR_HELP IS 'Código para tradução da ajuda';
COMMENT ON COLUMN RISK_FACTOR_HELP.FLG_AVAILABLE IS 'Disponibilidade do registo - Y/N';
COMMENT ON COLUMN RISK_FACTOR_HELP.ID_DOC_AREA IS 'Id da área do factor de risco';


