

  CREATE TABLE VITAL_SIGN_RELATION
   (	ID_VITAL_SIGN_RELATION NUMBER(12,0) NOT NULL ENABLE,
	ID_VITAL_SIGN_PARENT NUMBER(12,0) NOT NULL ENABLE,
	ID_VITAL_SIGN_DETAIL NUMBER(12,0) NOT NULL ENABLE,
	VAL_MIN_PARENT NUMBER(12,2),
	VAL_MAX_PARENT NUMBER(12,2),
	VAL_MIN_DETAIL NUMBER(12,2),
	VAL_MAX_DETAIL NUMBER(12,2),
	ID_DISCRIMINATOR NUMBER(12,0),
	RELATION_DOMAIN VARCHAR2(1) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0)

   );


COMMENT ON TABLE vital_sign_relation IS 'Relação master-detail entre sinais vitais, para apresentação nos ecrãs de triagem de Manchester e (opcionalmente) valores de validação entre eles' ;

COMMENT ON COLUMN vital_sign_relation.val_min_parent IS 'Valor mínimo para o SV indicado em ID_VS_PARENT' ;
COMMENT ON COLUMN vital_sign_relation.val_max_parent IS 'Valor máximo para o SV indicado em ID_VS_PARENT' ;
COMMENT ON COLUMN vital_sign_relation.val_min_detail IS 'Valor mínimo para o SV indicado em ID_VS_DETAIL' ;
COMMENT ON COLUMN vital_sign_relation.val_max_detail IS 'Valor máximo para o SV indicado em ID_VS_DETAIL' ;
COMMENT ON COLUMN vital_sign_relation.relation_domain IS 'Domínio de utilização da relação: M - manchester, C - concatenação (pressão arterial), S - soma (Glasgow)' ;
COMMENT ON COLUMN vital_sign_relation.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN vital_sign_relation.rank IS 'Ordem da relação (ex: visualização das partes da PA)' ;


