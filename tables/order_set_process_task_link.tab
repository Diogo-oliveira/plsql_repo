CREATE TABLE ORDER_SET_PROCESS_TASK_LINK
 (ID_ORDER_SET_PROCESS_TASK NUMBER(24) NOT NULL
 ,ID_TASK_LINK NUMBER(24) NOT NULL
 ,FLG_TASK_LINK_TYPE VARCHAR2(1)
 );
 
COMMENT ON TABLE ORDER_SET_PROCESS_TASK_LINK IS 'Links associated with order set process tasks';
COMMENT ON COLUMN ORDER_SET_PROCESS_TASK_LINK.ID_ORDER_SET_PROCESS_TASK IS 'Id of the order set process task';
COMMENT ON COLUMN ORDER_SET_PROCESS_TASK_LINK.ID_TASK_LINK IS 'Task link ID';
COMMENT ON COLUMN ORDER_SET_PROCESS_TASK_LINK.FLG_TASK_LINK_TYPE IS 'Type of task link (this value depends on the business logic of each task type)';

