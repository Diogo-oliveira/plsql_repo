CREATE TABLE XDS_DOCUMENT_CLASS
(
    ID_XDS_DOCUMENT_CLASS NUMBER(24) NOT NULL,
    DOCUMENT_CLASS        VARCHAR2(200 CHAR) NOT NULL,
    CODE_DOCUMENT_CLASS   VARCHAR2(200 CHAR),
    ID_CONTENT            VARCHAR2(200 CHAR),
    CREATE_USER           VARCHAR2(24 CHAR),
    CREATE_TIME           TIMESTAMP(6) WITH LOCAL TIME ZONE,
    CREATE_INSTITUTION    NUMBER(24),
    UPDATE_USER           VARCHAR2(24 CHAR),
    UPDATE_TIME           TIMESTAMP(6) WITH LOCAL TIME ZONE,
    UPDATE_INSTITUTION    NUMBER(24)
);

COMMENT ON TABLE XDS_DOCUMENT_CLASS IS 'Document class supported by HIE XDS document repository';

COMMENT ON COLUMN XDS_DOCUMENT_CLASS.id_xds_document_class IS 'Primary key';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.document_class IS 'Document class code';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.id_content IS 'Content identifier';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.code_document_class IS 'Document class description';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.create_user IS 'Creation User';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.create_time IS 'Creation Time';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.create_institution IS 'Creation Institution';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.update_user IS 'Update User';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.update_time IS 'Update Time';
COMMENT ON COLUMN XDS_DOCUMENT_CLASS.update_institution IS 'Update Institution';
-- CHANGE END: Ariel Machado