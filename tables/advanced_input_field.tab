create table ALERT.ADVANCED_INPUT_FIELD
(
	ID_ADVANCED_INPUT_FIELD NUMBER(24) not null,
	INTERN_NAME VARCHAR2(200) not null,
	CODE_ADVANCED_INPUT_FIELD VARCHAR2(200) not null,
	TYPE VARCHAR2(2) not null,
	ADW_LAST_UPDATE DATE not null
);

comment on table ALERT.ADVANCED_INPUT_FIELD
	is 'Advanced input field configuration';
comment on column ADVANCED_INPUT_FIELD.ID_ADVANCED_INPUT_FIELD
	is 'Chave primária';
comment on column ADVANCED_INPUT_FIELD.INTERN_NAME
	is 'Nome interno';
comment on column ADVANCED_INPUT_FIELD.CODE_ADVANCED_INPUT_FIELD
	is 'Código para tradução';
comment on column ADVANCED_INPUT_FIELD.TYPE
	is 'L: multichoice; N: keypad; F: keypad com texto; D: keypad com data; T: keypad com hora; DT: keypad com data e hora';
comment on column ADVANCED_INPUT_FIELD.ADW_LAST_UPDATE
	is 'Data da última alteração';

