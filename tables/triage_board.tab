

  CREATE TABLE TRIAGE_BOARD
   (	ID_TRIAGE_BOARD NUMBER(12,0) NOT NULL ENABLE,
	CODE_TRIAGE_BOARD VARCHAR2(200) NOT NULL ENABLE,
	PAGE NUMBER(6,0),
	SEX VARCHAR2(1),
	AGE_MIN NUMBER(3,0),
	AGE_MAX NUMBER(3,0),
	CODE_HELP_TRIAGE_BOARD VARCHAR2(4000),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE triage_board IS 'Fluxogramas de Manchester' ;

COMMENT ON COLUMN triage_board.id_triage_board IS 'Chave primária' ;
COMMENT ON COLUMN triage_board.code_triage_board IS 'Código para tradução dos nomes dos fluxogramas' ;
COMMENT ON COLUMN triage_board.page IS 'Página' ;
COMMENT ON COLUMN triage_board.sex IS 'Sexo do doente para que se possa seleccionar este fluxograma' ;
COMMENT ON COLUMN triage_board.age_min IS 'Idade mínima do doente para que se possa seleccionar este fluxograma' ;
COMMENT ON COLUMN triage_board.age_max IS 'Idade máxima do doente para que se possa seleccionar este fluxograma' ;
COMMENT ON COLUMN triage_board.code_help_triage_board IS 'Código para tradução da explicação dos fluxogramas de acordo com o manual de triagem de Manchester' ;
COMMENT ON COLUMN triage_board.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN triage_board.adw_last_update IS 'Data da última alteração' ;


