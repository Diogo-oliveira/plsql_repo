   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."FLG_ACTION" IS 'Action - ''A'' - Add; ''R'' - Remove; ''B'' - Base';



   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."CREATE_USER" IS 'Creation User';



   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."CREATE_TIME" IS 'Creation Time';



   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."CREATE_INSTITUTION" IS 'Creation Institution';



