   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."CODE_DOMAIN" IS 'sys_domain.code_domain value';



   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."VAL" IS 'sys_domain.val value';



   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."RANK_DEFAULT" IS 'Record rank';



