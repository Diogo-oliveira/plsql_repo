   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."UPDATE_TIME" IS 'Update Time';



   COMMENT ON COLUMN "ALERT"."SYS_DOMAIN_MKT"."UPDATE_INSTITUTION" IS 'Update Institution';



   COMMENT ON TABLE "ALERT"."SYS_DOMAIN_MKT"  IS 'Configuration of SYS_DOMAIN values by market';

