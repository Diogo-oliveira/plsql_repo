

  CREATE TABLE PAT_HISTORY_TYPE
   (	ID_PAT_HISTORY_TYPE NUMBER(24,0),
	CODE_PAT_HISTORY_TYPE VARCHAR2(2000),
	ACRONYM VARCHAR2(6),
	ADW_LAST_UPDATE DATE,
	FLG_TYPE VARCHAR2(2)
   );

-- Add comments to the columns 
comment on column PAT_HISTORY_TYPE.ID_PAT_HISTORY_TYPE
  is 'Chave primária';
comment on column PAT_HISTORY_TYPE.CODE_PAT_HISTORY_TYPE
  is 'Código para tradução dos tipos de história do paciente';
comment on column PAT_HISTORY_TYPE.ACRONYM
  is 'Acrónimo';
comment on column PAT_HISTORY_TYPE.ADW_LAST_UPDATE
  is 'Data da última alteração';
comment on column PAT_HISTORY_TYPE.FLG_TYPE
  is 'Tipo de história do paciente';