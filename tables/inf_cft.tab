

  CREATE TABLE INF_CFT
   (	CODE VARCHAR2(14) NOT NULL ENABLE,
	DESCR VARCHAR2(110) NOT NULL ENABLE,
	CFT_ID NUMBER(12,0),
	CFT_ID_PARENT NUMBER(12,0),
	FLG_PHARM VARCHAR2(1),
	LEVEL_NUM NUMBER,
	ID_LEVEL_1 NUMBER(12,0),
	ID_LEVEL_2 NUMBER(12,0),
	ID_LEVEL_3 NUMBER(12,0),
	ID_LEVEL_4 NUMBER(12,0),
	ID_LEVEL_5 NUMBER(12,0)

   );


COMMENT ON TABLE inf_cft IS 'Classificações Farmacoterapêutica (CFT) de medicamentos.' ;

COMMENT ON COLUMN inf_cft.code IS 'Código identificador da Classificação Farmacoterapêutica (CFT) do medicamento.' ;
COMMENT ON COLUMN inf_cft.descr IS 'Descrição da Classificação Farmacoterapêutica (CFT) do medicamento.' ;
COMMENT ON COLUMN inf_cft.cft_id IS 'ID único.' ;
COMMENT ON COLUMN inf_cft.cft_id_parent IS 'ID do registo pai.' ;
COMMENT ON COLUMN inf_cft.flg_pharm IS 'Flag que indica se este grupo tem medicamentos comercializados(Y) ou não(N).' ;
COMMENT ON COLUMN inf_cft.level_num IS 'Nível do grupo' ;
COMMENT ON COLUMN inf_cft.id_level_1 IS 'ID do grupo do nível 1' ;
COMMENT ON COLUMN inf_cft.id_level_2 IS 'ID do grupo do nível 2' ;
COMMENT ON COLUMN inf_cft.id_level_3 IS 'ID do grupo do nível 3' ;
COMMENT ON COLUMN inf_cft.id_level_4 IS 'ID do grupo do nível 4' ;
COMMENT ON COLUMN inf_cft.id_level_5 IS 'ID do grupo do nível 5' ;


