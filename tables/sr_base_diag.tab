

  CREATE TABLE SR_BASE_DIAG
   (	ID_SR_BASE_DIAG NUMBER(24,0) NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_DIAGNOSIS NUMBER(12,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	DT_DIAG DATE NOT NULL ENABLE,
	NOTES VARCHAR2(2000)
   );


COMMENT ON TABLE sr_base_diag IS 'Guarda as alterações de diagnóstico base de um episódio de bloco operatório' ;

COMMENT ON COLUMN sr_base_diag.id_sr_base_diag IS 'ID único' ;
COMMENT ON COLUMN sr_base_diag.id_episode IS 'ID do episódio' ;
COMMENT ON COLUMN sr_base_diag.id_diagnosis IS 'ID do diagnóstico base' ;
COMMENT ON COLUMN sr_base_diag.id_professional IS 'ID do profissional que alterou o diagnóstico base' ;
COMMENT ON COLUMN sr_base_diag.dt_diag IS 'Data da alteração do diagnóstico base' ;
COMMENT ON COLUMN sr_base_diag.notes IS 'Notas' ;
