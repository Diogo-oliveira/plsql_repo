
  CREATE TABLE DOC_SPECIFICATION
   (	ID_DOC_SPECIFICATION NUMBER(12,0) NOT NULL ENABLE,
	ID_DOC_TYPE NUMBER(12,0) NOT NULL ENABLE,
	CODE_DOC_SPECIFICATION VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_OTHER VARCHAR2(1) NOT NULL ENABLE
   );



COMMENT ON COLUMN doc_specification.id_doc_specification IS 'Chave primária' ;
COMMENT ON COLUMN doc_specification.id_doc_type IS 'Tipo de documento' ;
COMMENT ON COLUMN doc_specification.code_doc_specification IS 'Código de identificação para a descrição multi-língua' ;
COMMENT ON COLUMN doc_specification.flg_available IS 'Registo disponível: Y - disponível, N - Não disponível.' ;
COMMENT ON COLUMN doc_specification.rank IS 'Valor para ordenação de display do registo' ;
COMMENT ON COLUMN doc_specification.adw_last_update IS 'Data da última alteração do registo' ;
COMMENT ON COLUMN doc_specification.flg_other IS 'Permite escrever à mão a especificação do documento? Y - Sim, N - Não' ;

