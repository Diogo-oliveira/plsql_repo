CREATE TABLE HEADER_TAG_GRP
 (ID_HEADER_TAG_GRP NUMBER(24) NOT NULL
 ,INTERNAL_NAME VARCHAR2(32) NOT NULL
 ,INTERNAL_DESC VARCHAR2(240) NOT NULL
 );

COMMENT ON TABLE HEADER_TAG_GRP IS 'The list of tags groups available. Related tags belong to the same tag group.';
COMMENT ON COLUMN HEADER_TAG_GRP.ID_HEADER_TAG_GRP IS 'Primary key';
COMMENT ON COLUMN HEADER_TAG_GRP.INTERNAL_NAME IS 'Tag group internal name';
COMMENT ON COLUMN HEADER_TAG_GRP.INTERNAL_DESC IS 'Tag group internal description';

ALTER TABLE HEADER_TAG_GRP ADD 
  ( CREATE_USER VARCHAR2(24),
    CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
    CREATE_INSTITUTION NUMBER(24),
    UPDATE_USER VARCHAR2(24),
    UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
    UPDATE_INSTITUTION NUMBER(24));
COMMENT ON COLUMN HEADER_TAG_GRP.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN HEADER_TAG_GRP.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN HEADER_TAG_GRP.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN HEADER_TAG_GRP.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN HEADER_TAG_GRP.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN HEADER_TAG_GRP.UPDATE_INSTITUTION IS 'Update Institution';
