

  CREATE TABLE DRUG_PHARMA_CLASS
   (	ID_DRUG_PHARMA_CLASS NUMBER(12,0) NOT NULL ENABLE,
	CODE_DRUG_PHARMA_CLASS VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE,
	CODE_CFT VARCHAR2(10)
   );


COMMENT ON TABLE drug_pharma_class IS 'Tabela que contém as classes de fármacos' ;

COMMENT ON COLUMN drug_pharma_class.id_drug_pharma_class IS 'Chave primária' ;
COMMENT ON COLUMN drug_pharma_class.code_drug_pharma_class IS 'Classe de fármacos' ;
COMMENT ON COLUMN drug_pharma_class.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN drug_pharma_class.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN drug_pharma_class.code_cft IS 'Código do grupo farmacológico conforme codificação do INFARMED' ;


