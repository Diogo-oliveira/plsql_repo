  CREATE TABLE VITAL_SIGN_CONDITIONS
  (ID_VITAL_SIGN_CONDITIONS NUMBER(24,0) NOT NULL ENABLE,
   ID_VITAL_SIGN NUMBER(24,0) NOT NULL ENABLE,
   ID_CONDITION_GROUP_AND NUMBER(24,0) ,
   ID_CONDITION_GROUP NUMBER(24,0) NOT NULL ENABLE,
   FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
   ADW_LAST_UPDATE DATE NOT NULL ENABLE);


COMMENT ON TABLE VITAL_SIGN_CONDITIONS IS 'Parametrização das condições que um sinal vital pode assumir ' ;

COMMENT ON COLUMN VITAL_SIGN_CONDITIONS.id_vital_sign_conditions IS 'Chave primária' ;
COMMENT ON COLUMN VITAL_SIGN_CONDITIONS.id_vital_sign IS 'Código do sinal vital' ;
COMMENT ON COLUMN VITAL_SIGN_CONDITIONS.id_condition_group_and IS 'Identificador do grupo de condições, em que cada condição tem que ser verdadeira ' ;
COMMENT ON COLUMN VITAL_SIGN_CONDITIONS.id_condition_group IS 'Grupo que agrupa um conjunto de condições (id_condition_group_and)' ;
COMMENT ON COLUMN VITAL_SIGN_CONDITIONS.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN VITAL_SIGN_CONDITIONS.adw_last_update IS 'Data da última alteração' ;