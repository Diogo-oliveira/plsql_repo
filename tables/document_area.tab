

  CREATE TABLE DOCUMENT_AREA
   (	ID_DOCUMENT_AREA NUMBER NOT NULL ENABLE,
	CODE_DOCUMENT_AREA VARCHAR2(240) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	MDM_CODING NUMBER(12,0)
   );


COMMENT ON COLUMN document_area.id_document_area IS 'Chave primária' ;
COMMENT ON COLUMN document_area.code_document_area IS 'Descrição da área' ;
COMMENT ON COLUMN document_area.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN document_area.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN document_area.mdm_coding IS 'Codificação de  MDM "Medical Decision Making"' ;


