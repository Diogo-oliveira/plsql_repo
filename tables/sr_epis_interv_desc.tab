

  CREATE TABLE SR_EPIS_INTERV_DESC
   (	ID_SR_EPIS_INTERV_DESC NUMBER(24,0) NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_SR_INTERVENTION NUMBER(24,0),
	DESC_INTERV VARCHAR2(4000),
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	DT_INTERV_DESC DATE NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	DT_CANCEL DATE,
	ID_PROF_CANCEL NUMBER(24,0),
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE
   );



COMMENT ON COLUMN sr_epis_interv_desc.id_sr_epis_interv_desc IS 'ID único' ;
COMMENT ON COLUMN sr_epis_interv_desc.id_episode IS 'ID do episódio' ;
COMMENT ON COLUMN sr_epis_interv_desc.desc_interv IS 'Descrição da intervenção' ;
COMMENT ON COLUMN sr_epis_interv_desc.flg_status IS 'Estado: A- Activo, C- Cancelado' ;
COMMENT ON COLUMN sr_epis_interv_desc.dt_interv_desc IS 'Data da inserção da descrição' ;
COMMENT ON COLUMN sr_epis_interv_desc.id_professional IS 'ID do profissional que acrescentou a descrição ou o comentário' ;
COMMENT ON COLUMN sr_epis_interv_desc.dt_cancel IS 'Data de cancelamento' ;
COMMENT ON COLUMN sr_epis_interv_desc.id_prof_cancel IS 'Id do profissional que cancelou a descrição ou o comentário' ;
COMMENT ON COLUMN sr_epis_interv_desc.flg_type IS 'Tipo de descrição: S- Cirurgica, A- Anestésica' ;

