

  CREATE TABLE SR_PRE_EVAL
   (	ID_SR_PRE_EVAL NUMBER(24,0) NOT NULL ENABLE,
	CODE_SR_PRE_EVAL VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(2) NOT NULL ENABLE,
	MIN_VALUE NUMBER(12,3),
	MAX_VALUE NUMBER(12,3),
	FLG_AVAILABLE VARCHAR2(1) DEFAULT 'Y' NOT NULL ENABLE,
	RANK NUMBER,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE,
	FLG_PROF_CAT VARCHAR2(1)

   );


COMMENT ON TABLE sr_pre_eval IS 'Items a preencher nas visitas pré-operatórias e pré-anestésicas' ;

COMMENT ON COLUMN sr_pre_eval.id_sr_pre_eval IS 'ID único' ;
COMMENT ON COLUMN sr_pre_eval.code_sr_pre_eval IS 'Código para obtenção da descrição na tabela Translation' ;
COMMENT ON COLUMN sr_pre_eval.flg_type IS 'Tipo de valor (Sim/Não, texto, número, data, etc). Valores possíveis: T- Texto, SN- Sim/Não, TN- texto/não (quais ou não)' ;
COMMENT ON COLUMN sr_pre_eval.flg_available IS 'Indica se está disponível' ;
COMMENT ON COLUMN sr_pre_eval.rank IS 'Ordem para ordenação' ;
COMMENT ON COLUMN sr_pre_eval.id_institution IS 'ID da instituição. Se for 0 é igual para todas as instituições' ;
COMMENT ON COLUMN sr_pre_eval.id_software IS 'ID do software. Se for 0 é igual para todas as instituições' ;
COMMENT ON COLUMN sr_pre_eval.adw_last_update IS 'Data da última alteração do registo' ;
