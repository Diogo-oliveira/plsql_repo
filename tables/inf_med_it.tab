
  CREATE TABLE INF_MED_IT
   (	MED_ID NUMBER(10,0) NOT NULL ENABLE,
	NOME VARCHAR2(100) NOT NULL ENABLE,
	DOS_COMP VARCHAR2(1000),
	GENERICO VARCHAR2(1) NOT NULL ENABLE,
	DATA_AIM DATE,
	FORM_FARM_ID NUMBER(4,0),
	TITULAR_AIM_ID NUMBER(10,0),
	ESTADO_AIM_ID NUMBER(3,0),
	CLASS_DISP_ID NUMBER(3,0),
	CLASS_ESTUP_ID NUMBER(3,0),
	DCIPT_ID NUMBER(10,0) NOT NULL ENABLE,
	DATA_ESTADO DATE,
	DATA_ALTER DATE,
	DATA_ALT_ESTADO DATE,
	TIPO_PROD_ID NUMBER(3,0)
   );


COMMENT ON TABLE inf_med_it IS 'Medicamentos.' ;

COMMENT ON COLUMN inf_med_it.med_id IS 'Código identificador do medicamento.' ;
COMMENT ON COLUMN inf_med_it.nome IS 'Nome autorizado para o medicamento.' ;
COMMENT ON COLUMN inf_med_it.dos_comp IS 'Quantidade em substâncias activas.' ;
COMMENT ON COLUMN inf_med_it.generico IS 'Medicamento genérico de acordo com a legislação em vigor (S/N).' ;
COMMENT ON COLUMN inf_med_it.data_aim IS 'Data da AIM do medicamento.' ;
COMMENT ON COLUMN inf_med_it.form_farm_id IS 'Código identificador da forma farmacêutica do medicamento.' ;
COMMENT ON COLUMN inf_med_it.titular_aim_id IS 'Código identificador do titular da AIM do medicamento.' ;
COMMENT ON COLUMN inf_med_it.estado_aim_id IS 'Código identificador do estado da AIM do medicamento.' ;
COMMENT ON COLUMN inf_med_it.class_disp_id IS 'Código identificador da classificação do medicamento quanto ao regime de dispensa ao público do medicamento.' ;
COMMENT ON COLUMN inf_med_it.class_estup_id IS 'Código identificador da classificação do medicamento segundo a legislção para substâncias controladas.' ;
COMMENT ON COLUMN inf_med_it.dcipt_id IS 'Código identificador da DCI das substâncias activas constituintes do medicamento.' ;
COMMENT ON COLUMN inf_med_it.data_estado IS 'Data do último estado do medicamento. Actualizada sempre que há alteração do ESTADO_AIM_ID para um valor diferente de 1, i.e., quando o medicamento deixa de estar autorizado.' ;
COMMENT ON COLUMN inf_med_it.data_alter IS 'Data da última alteração ao medicamento. Actualizada sempre que há alteração de qualquer um dos atributos da tabela.' ;
COMMENT ON COLUMN inf_med_it.data_alt_estado IS 'Data da última alteração do estado do medicamento. Actualizada sempre que há alteração do ESTADO_AIM_ID.' ;
COMMENT ON COLUMN inf_med_it.tipo_prod_id IS 'Código identificador do tipo de produto.' ;

