

  CREATE TABLE DOCUMENTATION_REL
   (	ID_DOCUMENTATION_REL NUMBER(24,0) NOT NULL ENABLE,
	ID_DOCUMENTATION NUMBER(24,0) NOT NULL ENABLE,
	ID_DOCUMENTATION_ACTION NUMBER(24,0),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON COLUMN documentation_rel.id_documentation_rel IS 'Chave primária' ;
COMMENT ON COLUMN documentation_rel.id_documentation IS 'Código da relação área/componente' ;
COMMENT ON COLUMN documentation_rel.id_documentation_action IS 'Código do área/componente sobre o qual é exercida uma acção em consequência de outro componente' ;
COMMENT ON COLUMN documentation_rel.flg_available IS 'Disponibilidade do registo' ;
COMMENT ON COLUMN documentation_rel.adw_last_update IS 'Data da última alteração' ;

ALTER TABLE documentation_rel ADD flg_action VARCHAR2(1) DEFAULT 'W' NOT NULL ENABLE;
ALTER TABLE documentation_rel ADD value_action VARCHAR2(2000);
ALTER TABLE documentation_rel ADD id_doc_element_crit NUMBER(24,0);
COMMENT ON COLUMN documentation_rel.flg_action IS 'Tipo de accão a executar: W - workflow temático ; S - mostrar componente ; H - esconder componente';
COMMENT ON COLUMN documentation_rel.value_action IS 'Valor que pode estar associado à relação entre componentes/elementos';
COMMENT ON COLUMN documentation_rel.id_doc_element_crit IS 'Preenchido caso a relação seja entre um critério de elemento e um componente';

