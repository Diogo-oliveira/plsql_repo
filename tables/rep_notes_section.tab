create table REP_NOTES_SECTION
(
  ID_REPORTS     NUMBER(24) NOT NULL,
  FLG_TASK       VARCHAR2(2 CHAR) NOT NULL,
  ID_REP_SECTION NUMBER(24),
  FLG_AVAILABLE  VARCHAR2(1 CHAR) NOT NULL,
  CREATE_USER           VARCHAR2(24 CHAR),
  CREATE_TIME           TIMESTAMP WITH LOCAL TIME ZONE,
  CREATE_INSTITUTION    NUMBER(24),
  UPDATE_USER           VARCHAR2(24 CHAR),
  UPDATE_TIME           TIMESTAMP WITH LOCAL TIME ZONE,
  UPDATE_INSTITUTION    NUMBER(24)
);


COMMENT ON TABLE REP_NOTES_SECTION IS 'Sections to be included in the discharge notes.';

COMMENT ON COLUMN REP_NOTES_SECTION.ID_REPORTS IS 'Letter report ID';
COMMENT ON COLUMN REP_NOTES_SECTION.FLG_TASK IS 'Task identifier (values are available in SYS_DOMAIN)';
COMMENT ON COLUMN REP_NOTES_SECTION.ID_REP_SECTION IS 'Report section ID';
COMMENT ON COLUMN REP_NOTES_SECTION.FLG_AVAILABLE IS 'Availability of the record in the institution DB';
