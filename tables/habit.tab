

  CREATE TABLE HABIT
   (	ID_HABIT NUMBER(24,0) NOT NULL ENABLE,
	CODE_HABIT VARCHAR2(200) NOT NULL ENABLE,
	RANK NUMBER(3,0),
	FLG_AVAILABLE VARCHAR2(1)
   );


COMMENT ON COLUMN habit.id_habit IS 'ID do hábito' ;
COMMENT ON COLUMN habit.code_habit IS 'Código do hábito a ler na tabela TRANSLATION' ;
COMMENT ON COLUMN habit.rank IS 'Ordem da ordenação' ;
COMMENT ON COLUMN habit.flg_available IS 'Disponível Y/N?' ;

ALTER TABLE HABIT ADD (ID_CONTENT VARCHAR2(200));
comment on column HABIT.ID_CONTENT is 'Identificador único de conteúdo';

