
CREATE TABLE PROTOCOL_CONTEXT_IMAGE
 (ID_PROTOCOL_CONTEXT_IMAGE NUMBER(24) NOT NULL
 ,ID_PROTOCOL NUMBER(24) NOT NULL
 ,FILE_NAME VARCHAR2(2000)
 ,IMG_DESC VARCHAR2(2000)
 ,DT_IMG TIMESTAMP WITH LOCAL TIME ZONE
 ,IMG BLOB
 ,IMG_THUMBNAIL BLOB
 ,FLG_STATUS VARCHAR2(1)
 );

COMMENT ON COLUMN PROTOCOL_CONTEXT_IMAGE.ID_PROTOCOL_CONTEXT_IMAGE IS 'ID of protocol image context associated';
COMMENT ON COLUMN PROTOCOL_CONTEXT_IMAGE.ID_PROTOCOL IS 'ID of protocol';
COMMENT ON COLUMN PROTOCOL_CONTEXT_IMAGE.FILE_NAME IS 'Name of the file to be uploaded';
COMMENT ON COLUMN PROTOCOL_CONTEXT_IMAGE.IMG_DESC IS 'Description of image';
COMMENT ON COLUMN PROTOCOL_CONTEXT_IMAGE.DT_IMG IS 'Date of image upload';
COMMENT ON COLUMN PROTOCOL_CONTEXT_IMAGE.IMG IS 'Image file';
COMMENT ON COLUMN PROTOCOL_CONTEXT_IMAGE.IMG_THUMBNAIL IS 'Image file thumbnail';
COMMENT ON COLUMN PROTOCOL_CONTEXT_IMAGE.FLG_STATUS IS 'Status of image';

