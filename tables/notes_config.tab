CREATE TABLE NOTES_CONFIG
(
ID_NOTES_CONFIG NUMBER(24)      NOT NULL ,
INTERN_NAME  VARCHAR2(0200)  NOT NULL ,
NOTES_CODE   VARCHAR2(0010)  NOT NULL ,
INTERN_DESC  VARCHAR2(2000),
flg_import   VARCHAR2(1) NOT NULL,
code_notes_config VARCHAR2(200) NOT NULL,
adw_last_update DATE NOT NULL
);

COMMENT ON COLUMN NOTES_CONFIG.ID_NOTES_CONFIG   IS 'Chave primária' ;
COMMENT ON COLUMN NOTES_CONFIG.INTERN_NAME       IS 'Nome interno' ;
COMMENT ON COLUMN NOTES_CONFIG.NOTES_CODE        IS 'Código a usar para o diario: IMG-Imagem, VS-sinais vitais, TXT-texto livre, etc...' ;
COMMENT ON COLUMN NOTES_CONFIG.INTERN_DESC       IS 'Descrição interna da configuração' ;
COMMENT ON COLUMN NOTES_CONFIG.EXTERN_DESC       IS 'Descrição externa para o diario' ;
COMMENT ON COLUMN notes_config.flg_import        IS 'Registos importados automaticamente: Y - Sim; N - Não';
COMMENT ON COLUMN notes_config.code_notes_config IS 'Descritivo para visualização do registo';


