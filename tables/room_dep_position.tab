

  CREATE TABLE ROOM_DEP_POSITION
   (	ID_ROOM_DEP_POSITION NUMBER(24,0) NOT NULL ENABLE,
	POSITION_X NUMBER(24,2) NOT NULL ENABLE,
	POSITION_Y NUMBER(24,2) NOT NULL ENABLE,
	ID_ROOM NUMBER(24,0),
	RANK NUMBER(24,0) NOT NULL ENABLE,
	FLG_MAX VARCHAR2(1)
   );


COMMENT ON TABLE room_dep_position IS 'Posições das salas dentro de cada departamento/andar' ;

COMMENT ON COLUMN room_dep_position.id_room_dep_position IS 'Chave primária' ;
COMMENT ON COLUMN room_dep_position.position_x IS 'Posição X' ;
COMMENT ON COLUMN room_dep_position.position_y IS 'Posição Y' ;
COMMENT ON COLUMN room_dep_position.id_room IS 'Sala' ;
COMMENT ON COLUMN room_dep_position.rank IS 'Ordenação' ;
COMMENT ON COLUMN room_dep_position.flg_max IS 'Coordenada máxima' ;


