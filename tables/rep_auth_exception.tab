CREATE TABLE REP_AUTH_EXCEPTION
(
  ID_REP_AUTH_EXCEPTION     NUMBER(24)  NOT NULL,
  ID_REPORT_AUTH_PRINT      NUMBER(24)  NOT NULL,
  ID_PROFESSIONAL           NUMBER(24)  NOT NULL,
  FLG_AUTH                  VARCHAR2(1) NOT NULL
) 

TABLESPACE TABLE_S;

COMMENT ON TABLE REP_AUTH_EXCEPTION IS 'Tabela de excepções, por profissional, sobre a necessidade de se autenticar antes de imprimir um relatório.';

COMMENT ON COLUMN REP_AUTH_EXCEPTION.ID_REP_AUTH_EXCEPTION IS 'Chave primária.';
COMMENT ON COLUMN REP_AUTH_EXCEPTION.ID_REPORT_AUTH_PRINT IS 'ID do par relatório/perfil ao qual se vai atribuir uma excepção.';
COMMENT ON COLUMN REP_AUTH_EXCEPTION.ID_PROFESSIONAL IS 'ID do perfil do profissional.';
COMMENT ON COLUMN REP_AUTH_EXCEPTION.FLG_AUTH IS 'Flag que indica se a autenticação é necessária para imprimir o relatório (‘Y’ ou ‘N’)';


