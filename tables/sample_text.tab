

  CREATE TABLE SAMPLE_TEXT
   (	ID_SAMPLE_TEXT NUMBER(12,0) NOT NULL ENABLE,
	ID_SAMPLE_TEXT_TYPE NUMBER(12,0) NOT NULL ENABLE,
	CODE_TITLE_SAMPLE_TEXT VARCHAR2(200) NOT NULL ENABLE,
	CODE_DESC_SAMPLE_TEXT VARCHAR2(4000) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	GENDER VARCHAR2(1),
	AGE_MAX NUMBER(3,0),
	AGE_MIN NUMBER(3,0),
	CODE_ICD VARCHAR2(30),
	ID_DIAGNOSIS NUMBER(24,0),

	FLG_CLASS VARCHAR2(1)
   );


COMMENT ON TABLE sample_text IS 'Textos genéricos, parametrizados inicialmente' ;

COMMENT ON COLUMN sample_text.code_title_sample_text IS 'Código para tradução do título ou descritivo abreviado (a aparecer no keypad)' ;
COMMENT ON COLUMN sample_text.code_desc_sample_text IS 'Código para tradução do texto' ;
COMMENT ON COLUMN sample_text.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN sample_text.gender IS 'Género ao qual se aplica' ;
COMMENT ON COLUMN sample_text.age_max IS 'Idade máxima à qual se aplica' ;
COMMENT ON COLUMN sample_text.age_min IS 'Idade mínima à qual se aplica' ;
COMMENT ON COLUMN sample_text.code_icd IS 'Código internacional do diagnóstico.' ;
COMMENT ON COLUMN sample_text.id_diagnosis IS 'Diagnóstico correspondente ao texto mais frequente (transcrito do standard)' ;
COMMENT ON COLUMN sample_text.flg_class IS 'A - motivo administrativo de consulta (CARE: texto + frequente do ICPC2)' ;




ALTER TABLE SAMPLE_TEXT ADD (ID_CONTENT VARCHAR2(200));
COMMENT ON COLUMN SAMPLE_TEXT.ID_CONTENT  IS 'Identificador único de conteúdo';

