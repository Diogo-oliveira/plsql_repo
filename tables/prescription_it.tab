
  CREATE TABLE PRESCRIPTION_IT
   (	ID_PRESCRIPTION NUMBER(24,0) NOT NULL ENABLE,
	DT_PRESCRIPTION DATE NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_PATIENT NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	ID_PROF_CANCEL NUMBER(24,0),
	NOTES_CANCEL VARCHAR2(4000),
	DT_CANCEL DATE,
	ID_INSTITUTION_CANCEL NUMBER(12,0),
	ID_SOFTWARE_CANCEL NUMBER(24,0),
	FLG_XML VARCHAR2(1),
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_SUB_TYPE VARCHAR2(2)
   );


COMMENT ON TABLE prescription_it IS 'Prescrições.' ;

COMMENT ON COLUMN prescription_it.id_prescription IS 'ID da prescrição.' ;
COMMENT ON COLUMN prescription_it.dt_prescription IS 'Data da prescrição.' ;
COMMENT ON COLUMN prescription_it.id_episode IS 'ID do episódio em que foi feita a prescrição.' ;
COMMENT ON COLUMN prescription_it.id_patient IS 'ID do paciente.' ;
COMMENT ON COLUMN prescription_it.id_professional IS 'Profissional que prescreve.' ;
COMMENT ON COLUMN prescription_it.id_institution IS 'ID da instituição onde foi feita a prescrição.' ;
COMMENT ON COLUMN prescription_it.id_software IS 'ID do software onde foi feita a prescrição.' ;
COMMENT ON COLUMN prescription_it.flg_status IS 'Estado da prescrição: P - impressa; C - cancelada' ;
COMMENT ON COLUMN prescription_it.id_prof_cancel IS 'Profissional que cancela.' ;
COMMENT ON COLUMN prescription_it.notes_cancel IS 'Notas de cancelamento.' ;
COMMENT ON COLUMN prescription_it.dt_cancel IS 'Data de cancelamento.' ;
COMMENT ON COLUMN prescription_it.id_institution_cancel IS 'ID da instituição onde foi cancelada a prescrição.' ;
COMMENT ON COLUMN prescription_it.id_software_cancel IS 'ID do software onde foi cancelada a prescrição.' ;
COMMENT ON COLUMN prescription_it.flg_xml IS 'Flag que indica se esta prescrição já foi enviada no ficheiro XML.' ;
COMMENT ON COLUMN prescription_it.flg_type IS 'Local onde vai ser aviada: E - externa; I - interna.' ;
COMMENT ON COLUMN prescription_it.flg_sub_type IS 'Flag que indica se é um dietético para o exterior (DE) ou manipulado para o exterior (ME). Só é preenchida se FLG_TYPE = ''P''.' ;

