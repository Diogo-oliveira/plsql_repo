

  CREATE TABLE EPIS_EXT_SYS
   (	ID_EPIS_EXT_SYS NUMBER(24,0) NOT NULL ENABLE,
	ID_EXTERNAL_SYS NUMBER(12,0) NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	VALUE VARCHAR2(30) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(24,0) NOT NULL ENABLE,
	ID_EPIS_TYPE NUMBER(24,0)
   );


COMMENT ON TABLE epis_ext_sys IS 'Correspondência dos identificadores únicos dos episódios, no Alert e nos sistemas externos' ;

COMMENT ON COLUMN epis_ext_sys.value IS 'Identificador único do episódio, no sistema externo indicado' ;
COMMENT ON COLUMN epis_ext_sys.id_epis_type IS 'Tipo de episódio' ;



