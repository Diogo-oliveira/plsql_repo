
-- CHANGED BY: Carlos Loureiro
-- CHANGE DATE: 2009/09/17
-- CHANGE REASON: ALERT-43436 Reports multichoice options exclusions
CREATE TABLE REP_SCREEN_EXCL 
(
		ID_SYS_BUTTON_PROP NUMBER(24)    NOT NULL,
		SCREEN_NAME        VARCHAR2(200) NOT NULL,
    ID_INSTITUTION     NUMBER(24)    DEFAULT 0    NOT NULL,
    FLG_ENABLE         VARCHAR2(1)   DEFAULT 'Y'  NOT NULL, 
		CREATE_USER        VARCHAR2(24),
		CREATE_TIME        TIMESTAMP(6) WITH LOCAL TIME ZONE,
		CREATE_INSTITUTION NUMBER(24),
		UPDATE_USER        VARCHAR2(24),
		UPDATE_TIME        TIMESTAMP(6) WITH LOCAL TIME ZONE,
		UPDATE_INSTITUTION NUMBER(24)
);
COMMENT ON TABLE REP_SCREEN_EXCL IS 'Report exclusive usage (REP_SCREEN entries are mandatory for each ID_SYS_BUTTON_PROP/SCREEN_NAME here enabled)';
COMMENT ON COLUMN REP_SCREEN_EXCL.ID_SYS_BUTTON_PROP IS 'ID of SYS_BUTTON_PROP table';
COMMENT ON COLUMN REP_SCREEN_EXCL.SCREEN_NAME IS 'Screen name where the exclusive usage is applied';
COMMENT ON COLUMN REP_SCREEN_EXCL.ID_INSTITUTION IS 'ID of the affected institution';
COMMENT ON COLUMN REP_SCREEN_EXCL.FLG_ENABLE IS 'Flag that enables/disables the record: Y:Enabled N:Disabled';
COMMENT ON COLUMN REP_SCREEN_EXCL.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN REP_SCREEN_EXCL.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN REP_SCREEN_EXCL.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN REP_SCREEN_EXCL.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN REP_SCREEN_EXCL.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN REP_SCREEN_EXCL.UPDATE_INSTITUTION IS 'Update Institution';
-- CHANGE END

