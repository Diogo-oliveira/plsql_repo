

  CREATE TABLE SYS_APPLICATION_AREA
   (	ID_SYS_APPLICATION_AREA NUMBER(12,0) NOT NULL ENABLE,
	INTERN_NAME VARCHAR2(200) NOT NULL ENABLE
   );


COMMENT ON TABLE sys_application_area IS 'Áreas da aplicação (ex: tools, entrance, grelhas de tarefas, consulta, ...)' ;

alter table sys_application_area
add (flg_area varchar2(1));

comment on column sys_application_area.flg_area is 'Área da aplicação: (T)ools, (G)relha, Ficha do (P)aciente, (V)iewer, (L)ogin, A - todas';


comment on column SYS_APPLICATION_AREA.FLG_AREA
  is 'Área da aplicação: (T)ools, (G)relha, Ficha do (P)aciente com efectivação, (F)icha do Paciente sem efectivação, (V)iewer, (L)ogin, A - todas';

  
