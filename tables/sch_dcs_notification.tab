
create table sch_dcs_notification
(
       id_sch_dcs_notification  number(12),
       id_dep_clin_serv         number(24),
			 notification_default     varchar2(1)
);

COMMENT ON TABLE sch_dcs_notification IS 'Table used to define for each dep_clin_serv if the patient notification is activated or not.';

COMMENT ON COLUMN sch_dcs_notification.id_sch_dcs_notification IS 'Unique identifier.';
COMMENT ON COLUMN sch_dcs_notification.id_dep_clin_serv        IS 'Dep. Clin. Serv. association.';
COMMENT ON COLUMN sch_dcs_notification.notification_default    IS 'Dep. Clin. Serv. notification default value. Check constraints to see the possible values.';

COMMENT ON COLUMN SCH_DCS_NOTIFICATION.ID_DEP_CLIN_SERV IS 'Department-Clinical service identifier';
COMMENT ON COLUMN SCH_DCS_NOTIFICATION.ID_SCH_DCS_NOTIFICATION IS 'DCS Notification identifier';
COMMENT ON COLUMN SCH_DCS_NOTIFICATION.NOTIFICATION_DEFAULT IS 'Default notification value. Check constraints to see the possible values.';

