

  CREATE TABLE VS_SOFT_INST
   (	ID_VS_SOFT_INST NUMBER(24,0) NOT NULL ENABLE,
	ID_VITAL_SIGN NUMBER(12,0) NOT NULL ENABLE,
	ID_UNIT_MEASURE NUMBER(24,0),
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	RANK NUMBER(24,0) NOT NULL ENABLE,
	FLG_VIEW VARCHAR2(2),
	COLOR_GRAFH VARCHAR2(200),
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	COLOR_TEXT VARCHAR2(200),
	BOX_TYPE VARCHAR2(1)

   );


COMMENT ON COLUMN vs_soft_inst.id_vs_soft_inst IS 'Chave primária' ;
COMMENT ON COLUMN vs_soft_inst.id_vital_sign IS 'Sinal Vital' ;
COMMENT ON COLUMN vs_soft_inst.id_unit_measure IS 'Unidade de medida' ;
COMMENT ON COLUMN vs_soft_inst.id_software IS 'Software' ;
COMMENT ON COLUMN vs_soft_inst.id_institution IS 'Instituição' ;
COMMENT ON COLUMN vs_soft_inst.rank IS 'Ordenação' ;
COMMENT ON COLUMN vs_soft_inst.flg_view IS 'Posição dos sinais vitais: S - Resumo; H - Saída de turno; V1 - Grelha completa; V2 - Grelha reduzida; V3 - Grelha da biometria; T - Triagem' ;
COMMENT ON COLUMN vs_soft_inst.color_grafh IS 'Côr atribuida a cada sinal vital (visão gráfica)' ;
COMMENT ON COLUMN vs_soft_inst.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN vs_soft_inst.color_text IS 'Côr atribuida ao texto associado a cada sinal vital' ;
COMMENT ON COLUMN vs_soft_inst.box_type IS 'Tipo de caixa: N - Normal; C - composed' ;

comment on column VS_SOFT_INST.FLG_VIEW
  is 'Posição dos sinais vitais: S - Resumo; H - Saída de turno; V1 - Grelha completa; V2 - Grelha reduzida; V3 - Grelha da biometria; T - Triagem; P - Pregnancy';

