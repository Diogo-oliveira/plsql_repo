

  CREATE TABLE PAT_NECESSITY
   (	ID_PAT_NECESSITY NUMBER(24,0) NOT NULL ENABLE,
	ID_PATIENT NUMBER(24,0) NOT NULL ENABLE,
	ID_NECESSITY NUMBER(12,0) NOT NULL ENABLE,
