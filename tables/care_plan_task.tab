COMMENT ON TABLE CARE_PLAN_TASK IS 'Tabela das tarefas para os Care Plans';
COMMENT ON COLUMN CARE_PLAN_TASK.ID_CARE_PLAN_TASK IS 'Id da tarefa para o Care Plan';
COMMENT ON COLUMN CARE_PLAN_TASK.ID_PROF IS 'Id do profissional que associa a tarefa ao Care Plan';
COMMENT ON COLUMN CARE_PLAN_TASK.DT_CARE_PLAN_TASK IS 'Data de registo da associação da tarefa ao Care Plan';
COMMENT ON COLUMN CARE_PLAN_TASK.ID_ITEM IS 'Id do item seleccionado';
COMMENT ON COLUMN CARE_PLAN_TASK.FLG_STATUS IS 'Flag que indica o estado da tarefa';
COMMENT ON COLUMN CARE_PLAN_TASK.ID_TASK_TYPE IS 'Id do tipo de tarefa';
COMMENT ON COLUMN CARE_PLAN_TASK.DT_BEGIN IS 'Instruções da tarefa: data de início';
COMMENT ON COLUMN CARE_PLAN_TASK.DT_END IS 'Instruções da tarefa: data de fim';
COMMENT ON COLUMN CARE_PLAN_TASK.NUM_EXEC IS 'Instruções da tarefa: número de execuções';
COMMENT ON COLUMN CARE_PLAN_TASK.ID_UNIT_MEASURE IS 'Instruções da tarefa: id que indica qual a unidade para o intervalo';
COMMENT ON COLUMN CARE_PLAN_TASK.INTERVAL IS 'Instruções da tarefa: intervalo da tarefa';
COMMENT ON COLUMN CARE_PLAN_TASK.NOTES IS 'Notas da tarefa';
COMMENT ON COLUMN CARE_PLAN_TASK.ID_PROF_CANCEL IS 'Id do profissional que cancelou a tarefa';
COMMENT ON COLUMN CARE_PLAN_TASK.DT_CANCEL IS 'Data de cancelamento da tarefa';
COMMENT ON COLUMN CARE_PLAN_TASK.NOTES_CANCEL IS 'Notas de cancelamento da tarefa';



