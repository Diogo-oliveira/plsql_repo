
CREATE TABLE PROTOCOL_ACTION_CATEGORY
 (ID_PROTOCOL_ACTION_CATEGORY NUMBER(24) NOT NULL
 ,ID_ACTION NUMBER NOT NULL
 ,ID_CATEGORY NUMBER(12) NOT NULL
 ,TASK_TYPE NUMBER(24) NOT NULL
 ,FLG_AVAILABLE VARCHAR2(1) NOT NULL
 );

COMMENT ON COLUMN PROTOCOL_ACTION_CATEGORY.ID_PROTOCOL_ACTION_CATEGORY IS 'ID of guideline_action_category';
COMMENT ON COLUMN PROTOCOL_ACTION_CATEGORY.ID_ACTION IS 'ID of action';
COMMENT ON COLUMN PROTOCOL_ACTION_CATEGORY.ID_CATEGORY IS 'Category ID associated to action';
COMMENT ON COLUMN PROTOCOL_ACTION_CATEGORY.TASK_TYPE IS 'Task type associated to action';

