create table SUMMARY_PAGE
(
  ID_SUMMARY_PAGE NUMBER(24) not null,
  INTERNAL_NAME     VARCHAR2(200) not null,
  CODE_SUMMARY_PAGE  VARCHAR2(200) not null,
  ADW_LAST_UPDATE DATE not null
);



COMMENT ON COLUMN summary_page.id_summary_page IS 'Chave primária' ;
COMMENT ON COLUMN summary_page.internal_name IS 'Nome interno' ;
COMMENT ON COLUMN summary_page.code_summary_page IS 'Suporte para descrição multi-língua de summary page' ;
COMMENT ON COLUMN summary_page.adw_last_update IS 'Data da última alteração' ;

alter table summary_page add     flg_access        varchar2(1) default 'Y';

COMMENT ON COLUMN summary_page.flg_access IS 'Y - A summary page tem secções diferentes por perfil com diferentes níveis de acesso (só leitura / leitura e ecrita). N - A summary page tem as mesmas secções para qualquer perfil com acessos de leitura e escrita.' ;


