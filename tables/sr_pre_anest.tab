

  CREATE TABLE SR_PRE_ANEST
   (	ID_SR_PRE_ANEST NUMBER(24,0) NOT NULL ENABLE,
	ID_SR_PRE_ANEST_PARENT NUMBER(24,0),
	CODE_SR_PRE_ANEST VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1),
	FLG_AVAILABLE VARCHAR2(1),
	RANK NUMBER(6,0),
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE
   );


COMMENT ON TABLE sr_pre_anest IS 'Tabela de itens da avaliação pré-anestésica' ;

COMMENT ON COLUMN sr_pre_anest.id_sr_pre_anest IS 'ID único' ;
COMMENT ON COLUMN sr_pre_anest.code_sr_pre_anest IS 'Código para obtenção da descrição' ;
COMMENT ON COLUMN sr_pre_anest.flg_type IS 'Tipo de valor: T- Texto, N- Numérico, M- Multichoice, O- Apenas uma selecção' ;
COMMENT ON COLUMN sr_pre_anest.flg_available IS 'Disponibilidade (Y/N)' ;
COMMENT ON COLUMN sr_pre_anest.rank IS 'Ordem de visualização' ;
COMMENT ON COLUMN sr_pre_anest.id_software IS 'ID do software' ;
COMMENT ON COLUMN sr_pre_anest.id_institution IS 'ID da instituição' ;
COMMENT ON COLUMN sr_pre_anest.adw_last_update IS 'Data da última alteração' ;
