CREATE TABLE follow_up_type
( id_follow_up_type NUMBER(24) NOT NULL ENABLE,
code_follow_up_type VARCHAR2(200) NOT NULL ENABLE,
flg_type  VARCHAR2(2) NOT NULL ENABLE,
flg_available varchar2(1) not null enable,
adw_last_update DATE NOT NULL ENABLE);


COMMENT ON TABLE follow_up_type IS 'Tipo de acompanhamento' ;

COMMENT ON COLUMN follow_up_type.id_follow_up_type IS 'Chave primária' ;
COMMENT ON COLUMN follow_up_type.code_follow_up_type IS 'Código para o tipo de acompanhamento por língua' ;
COMMENT ON COLUMN follow_up_type.flg_type IS 'Tipo de acompanhamento do paciente: D - Date; DY - Days; S - SOS ' ;
COMMENT ON COLUMN follow_up_type.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN follow_up_type.adw_last_update IS 'Data da última alteração' ;

alter table follow_up_type add (code_units varchar2(200));
COMMENT ON COLUMN follow_up_type.code_units IS 'Código das unidades, caso seja mesurável' ;


