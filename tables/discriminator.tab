

  CREATE TABLE DISCRIMINATOR
   (	ID_DISCRIMINATOR NUMBER(12,0) NOT NULL ENABLE,
	CODE_DISCRIMINATOR VARCHAR2(200) NOT NULL ENABLE,
	FLG_DISC_TYPE VARCHAR2(1) NOT NULL ENABLE,
	MIN_PAIN NUMBER(3,0),
	MAX_PAIN NUMBER(3,0),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE discriminator IS 'Discriminadores' ;

COMMENT ON COLUMN discriminator.code_discriminator IS 'Código para tradução do discriminador' ;
COMMENT ON COLUMN discriminator.flg_disc_type IS 'D - decisão, P - dor, E - final, N - normal' ;
COMMENT ON COLUMN discriminator.min_pain IS 'Valor mínimo da régua da dor para os discriminadores de dor' ;
COMMENT ON COLUMN discriminator.max_pain IS 'Valor máximo da régua da dor para os discriminadores de dor' ;
COMMENT ON COLUMN discriminator.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
