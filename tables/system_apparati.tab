	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	GENDER VARCHAR2(1),
	AGE_MIN NUMBER(3,0),
	AGE_MAX NUMBER(3,0)
   );


COMMENT ON TABLE system_apparati IS 'Aparelhos e sistemas do corpo humano' ;

COMMENT ON COLUMN system_apparati.gender IS 'Género ao qual se aplica' ;
COMMENT ON COLUMN system_apparati.age_min IS 'Idade mínima à qual se aplica' ;
COMMENT ON COLUMN system_apparati.age_max IS 'Idade máxima à qual se aplica' ;


