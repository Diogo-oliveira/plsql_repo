
create table PAT_ADV_DIRECTIVE_DOC
(
	ID_PAT_ADV_DIRECTIVE_DOC NUMBER(24) NOT NULL,
	ID_DOC_EXTERNAL              NUMBER(24) NOT NULL,
  ID_PAT_ADVANCE_DIRECTIVE     NUMBER(24) NOT NULL,
	FLG_STATUS                   VARCHAR2(1) NOT NULL,
	ID_PROFESSIONAL              NUMBER(24) NOT NULL,
	DT_REGISTER                  TIMESTAMP WITH LOCAL TIME ZONE NOT NULL,
	ID_CANCEL_REASON             NUMBER(24),
	ID_PROF_CANCEL               NUMBER(24),
	NOTES_CANCEL                 VARCHAR2(4000),
	DT_CANCEL                    TIMESTAMP WITH LOCAL TIME ZONE		
);


COMMENT ON TABLE PAT_ADV_DIRECTIVE_DOC IS 'Advance directive documents.';

COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.ID_PAT_ADV_DIRECTIVE_DOC IS 'Primary key.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.ID_PAT_ADVANCE_DIRECTIVE IS 'Patient advance directive ID.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.ID_DOC_EXTERNAL IS 'Patient document ID.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.FLG_STATUS IS 'Association status: A - active, I - inactive.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.ID_PROFESSIONAL IS 'Professional who made the association.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.DT_REGISTER IS 'Record date.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.ID_CANCEL_REASON IS 'Cancellation reason.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.ID_PROF_CANCEL IS 'Professional who cancelled the record.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.NOTES_CANCEL IS 'Cancellation notes.';
COMMENT ON COLUMN PAT_ADV_DIRECTIVE_DOC.DT_CANCEL IS 'Cancellation date.';

