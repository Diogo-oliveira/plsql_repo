-- CHANGE REASON: [ALERT-306018] ALERT-306018 Versioning Single Page backoffice
CREATE TABLE PN_CONFIG_API_EA 
   (  ID_TL_TASK NUMBER(24) NOT NULL ENABLE, 
  RESPONSIBLE_TEAM VARCHAR2(30 CHAR), 
  PK_PROG_NOTES_CONSTANTS VARCHAR2(30 CHAR), 
  DATA_GOV_EVENT_EXEC_PROCEDURE VARCHAR2(200), 
  PK_DATA_GOV_ADMIN_FUNC VARCHAR2(100 CHAR), 
  GET_TASK_DESCRIPTION_API VARCHAR2(200), 
  GET_DETAILED_DESC_ALL_API VARCHAR2(200), 
  GET_TASK_ACTIONS_API VARCHAR2(200), 
  SET_COMMENT_ON_AREA_API VARCHAR2(200), 
  CANCEL_TASK_API VARCHAR2(200), 
  SET_SYNCRONIZABLE_AREAS_API VARCHAR2(200), 
  CREATE_USER VARCHAR2(24 CHAR), 
  CREATE_TIME TIMESTAMP (6) WITH LOCAL TIME ZONE, 
  CREATE_INSTITUTION NUMBER(24), 
  UPDATE_USER VARCHAR2(24 CHAR), 
  UPDATE_TIME TIMESTAMP (6) WITH LOCAL TIME ZONE, 
  UPDATE_INSTITUTION NUMBER(24)
  );
   COMMENT ON COLUMN PN_CONFIG_API_EA.ID_TL_TASK IS 'Task type ID, FK to TL_TASK';
   COMMENT ON COLUMN PN_CONFIG_API_EA.RESPONSIBLE_TEAM IS 'Functionality responsible team';
   COMMENT ON COLUMN PN_CONFIG_API_EA.PK_PROG_NOTES_CONSTANTS IS 'Constant name in PK_PROG_NOTES_CONSTANTS';
   COMMENT ON COLUMN PN_CONFIG_API_EA.DATA_GOV_EVENT_EXEC_PROCEDURE IS 'Procedure that is called when there are changes on the correspondent area (this must be set accordingly on the DATA_GOV_EVENT_TABLE)';
   COMMENT ON COLUMN PN_CONFIG_API_EA.PK_DATA_GOV_ADMIN_FUNC IS 'Function created on the pk_data_gov_admin package';
   COMMENT ON COLUMN PN_CONFIG_API_EA.GET_TASK_DESCRIPTION_API IS 'API to get the short description correspondent to the task type. Called on PK_PROG_NOTES_IN.GET_TASK_DESCRIPTION.';
   COMMENT ON COLUMN PN_CONFIG_API_EA.GET_DETAILED_DESC_ALL_API IS 'API to get the detailed description correspondent to the task type. Called on PK_PROG_NOTES_IN.GET_DETAILED_DESC_ALL';
   COMMENT ON COLUMN PN_CONFIG_API_EA.GET_TASK_ACTIONS_API IS 'API to get all the actions for a given task type. Called on PK_PROG_NOTES_IN.GET_TASK_ACTIONS';
   COMMENT ON COLUMN PN_CONFIG_API_EA.SET_COMMENT_ON_AREA_API IS 'API to set comments on areas with this action. Called on PK_PROG_NOTES_IN.SET_COMMENT_ON_AREA';
   COMMENT ON COLUMN PN_CONFIG_API_EA.CANCEL_TASK_API IS 'API to be used on the cancel action. Called on PK_PROG_NOTES_IN.CANCEL_TASK';
   COMMENT ON COLUMN PN_CONFIG_API_EA.SET_SYNCRONIZABLE_AREAS_API IS 'API to set the data for Single Page Areas that are synchronizable with the specific areas. Called on PK_PROG_NOTES_IN.SET_SYNCRONIZABLE_AREAS';
   COMMENT ON COLUMN PN_CONFIG_API_EA.CREATE_USER IS 'Creation User';
   COMMENT ON COLUMN PN_CONFIG_API_EA.CREATE_TIME IS 'Creation Time';
   COMMENT ON COLUMN PN_CONFIG_API_EA.CREATE_INSTITUTION IS 'Creation Institution';
   COMMENT ON COLUMN PN_CONFIG_API_EA.UPDATE_USER IS 'Update User';
   COMMENT ON COLUMN PN_CONFIG_API_EA.UPDATE_TIME IS 'Update Time';
   COMMENT ON COLUMN PN_CONFIG_API_EA.UPDATE_INSTITUTION IS 'Update Institution';
   COMMENT ON TABLE PN_CONFIG_API_EA  IS 'Contains all the APIS and EA functions used in the single page context';
/
-- CHANGE END: Nuno Alves