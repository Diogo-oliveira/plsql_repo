  CREATE TABLE SYS_MESSAGE
   (	CODE_MESSAGE VARCHAR2(200) NOT NULL ENABLE,
	DESC_MESSAGE VARCHAR2(4000) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	ID_LANGUAGE NUMBER(6,0) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	IMG_NAME VARCHAR2(200),
	ID_SYS_MESSAGE NUMBER(24,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0),
	ID_INSTITUTION NUMBER(24,0),
	ADW_LAST_UPDATE DATE
   );



COMMENT ON TABLE sys_message IS 'Mensagens de ajuda, erro, aplicacionais, etc.As traduções encontram-se na própria tabela.' ;

COMMENT ON COLUMN sys_message.code_message IS 'Nome: <nome>_<tipo><seq. de 3 algarismos>  O tipo é: T - título, M - conteúdo' ;
COMMENT ON COLUMN sys_message.desc_message IS 'Mensagem, na língua dada por ID_LANG' ;
COMMENT ON COLUMN sys_message.flg_type IS 'Tipo de mensagem: H - ecrãs de ajuda, A - títulos e headers aplicacionais, R - reports, E - erro' ;
COMMENT ON COLUMN sys_message.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN sys_message.img_name IS 'Nome da imagem correspondente' ;

ALTER TABLE SYS_MESSAGE ADD MODULE VARCHAR2(30);
COMMENT ON COLUMN SYS_MESSAGE.MODULE IS 'Campo para filtrar Módulo ( ADT, ORIS, etc )';

