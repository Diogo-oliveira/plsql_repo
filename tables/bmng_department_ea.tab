CREATE TABLE "ALERT"."BMNG_DEPARTMENT_EA"(  
    "ID_DEPARTMENT" NUMBER(24,0) NOT NULL,
    "TOTAL_UNAVAILABLE_BEDS" NUMBER(24,0) DEFAULT 0 NOT NULL,
    "BEDS_BLOCKED" NUMBER(24,0) DEFAULT 0 NOT NULL,
    "BEDS_RESERVED" NUMBER(24,0) DEFAULT 0 NOT NULL,
    "BEDS_OCUPPIED" NUMBER(24,0) DEFAULT 0 NOT NULL,
    "TOTAL_AVAILABLE_BEDS" NUMBER(24,0) DEFAULT 0 NOT NULL,
"TOTAL_OCUPPIED_NCH_HOURS" NUMBER(24,0) DEFAULT 0 NOT NULL,
"TOTAL_AVAIL_NCH_HOURS" NUMBER(24,0),
"DT_DG_LAST_UPDATE" TIMESTAMP(6) WITH LOCAL TIME ZONE DEFAULT CURRENT_TIMESTAMP NOT NULL,
    --
    "CREATE_USER"  VARCHAR2(24),
    "CREATE_TIME"  TIMESTAMP(6) WITH LOCAL TIME ZONE,
    "CREATE_INSTITUTION"  NUMBER(24),
    "UPDATE_USER"  VARCHAR2(24),
    "UPDATE_TIME"  TIMESTAMP(6) WITH LOCAL TIME ZONE,
    "UPDATE_INSTITUTION"  NUMBER(24)
);

-- Table Comment
COMMENT ON TABLE BMNG_DEPARTMENT_EA IS 'This EASY ACCESS table has information about current information of each department';

-- Collumns Comments
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."ID_DEPARTMENT" IS 'Department identifier (Primary Key)';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."TOTAL_UNAVAILABLE_BEDS" IS 'Total number of unavailable beds in current department (DEFAULT: 0)';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."BEDS_BLOCKED" IS 'Total number of blocked beds in current department (DEFAULT: 0)';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."BEDS_RESERVED" IS 'Total number of reserved beds in current department (DEFAULT: 0)';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."BEDS_OCUPPIED" IS 'Room type identifier (DEFAULT: 0)';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."TOTAL_AVAILABLE_BEDS" IS 'Allocation bed identifier (DEFAULT: 0)';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."TOTAL_OCUPPIED_NCH_HOURS" IS 'Sum of NCH of all patients allocated to current department (DEFAULT: 0)';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."TOTAL_AVAIL_NCH_HOURS" IS 'Total number of NCH hours available for this department';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."DT_DG_LAST_UPDATE" IS 'Date of the last update';
--
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."CREATE_USER" IS 'Professional ID that creates the registry';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."CREATE_TIME" IS 'Date of registry creation';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."CREATE_INSTITUTION" IS 'Institution ID where registry was created';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."UPDATE_USER" IS 'Professional ID that last updates the registry';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."UPDATE_TIME" IS 'Date of registry last update';
COMMENT ON COLUMN "ALERT"."BMNG_DEPARTMENT_EA"."UPDATE_INSTITUTION" IS 'Institution ID where registry was last updated';
--
-- CHANGE END: Luís Maia

