

  CREATE TABLE ANALYSIS_ALIAS
   (	ID_ANALYSIS_ALIAS NUMBER(24,0) NOT NULL ENABLE,
	ID_ANALYSIS NUMBER(12,0) NOT NULL ENABLE,
	CODE_ANALYSIS_ALIAS VARCHAR2(200) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(12,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0),
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE analysis_alias IS 'Definição das abreviaturas associadas às análises, por instituição / software.Pode-se pesquisar pelo alias, em vez do nome completo da análise, mas o resultado deve mostrar o nome completo.' ;

COMMENT ON COLUMN analysis_alias.code_analysis_alias IS 'Código para tradução da abreviatura, gerado pelo trigger da tabela' ;
COMMENT ON COLUMN analysis_alias.id_institution IS 'Instituição para a qual é válido o registo' ;
COMMENT ON COLUMN analysis_alias.id_software IS 'Aplicação para a qual é válido o registo' ;
COMMENT ON COLUMN analysis_alias.id_professional IS 'Profissional para o qual é válido o registo' ;

