

  CREATE TABLE LANGUAGE
   (	ID_LANGUAGE NUMBER(6,0) NOT NULL ENABLE,
	DESC_LANGUAGE VARCHAR2(30) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	NLS_CODE VARCHAR2(30),
	LOCALE VARCHAR2(30)
   );


COMMENT ON COLUMN language.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN language.nls_code IS 'Código NLS para, por exemplo, conversão de datas' ;
COMMENT ON COLUMN language.locale IS 'Identificação do locale java associado à língua. Nesta coluna indica-se a língua, país e variante. Deve obedecer à seguinte sintaxe: [língua]_[país]_[variante]. Ex: pt_PT' ;

alter table language add flg_available_online varchar2(2) default 'N';
comment on column language.flg_available_online is 'Languages available on the ALERT ONLINE software';




