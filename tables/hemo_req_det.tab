ALTER TABLE HEMO_REQ_DET ADD DT_CANCEL_TSTZ TIMESTAMP WITH LOCAL TIME ZONE; 
COMMENT ON COLUMN HEMO_REQ_DET.DT_CANCEL_TSTZ IS 'Data de cancelamento do detalhe da requisi‡ao'; 


