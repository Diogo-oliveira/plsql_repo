  CREATE TABLE CRIT_REL
   (	ID_CRITERIA_L NUMBER,
	ID_CRITERIA_R NUMBER,
	CRIT_CONDITION VARCHAR2(4000)
   ) ;


   COMMENT ON COLUMN CRIT_REL.ID_CRITERIA_L IS 'Criteria in the left side of the relation';



   COMMENT ON COLUMN CRIT_REL.ID_CRITERIA_R IS 'Criteria in the right side of the relation';



   COMMENT ON COLUMN CRIT_REL.CRIT_CONDITION IS 'Condition to be used to represent this relation';
