CREATE TABLE disch_instructions_group
( id_disch_instructions_group NUMBER(24) NOT NULL ENABLE,
code_disch_instructions_group VARCHAR2(200) NOT NULL ENABLE,
flg_available varchar2(1) not null enable,
adw_last_update DATE NOT NULL ENABLE);


COMMENT ON TABLE disch_instructions_group IS 'Grupo de instrucções da alta' ;

COMMENT ON COLUMN disch_instructions_group.id_disch_instructions_group IS 'Chave primária' ;
COMMENT ON COLUMN disch_instructions_group.code_disch_instructions_group IS 'Código para obter o grupo de instrucções da alta por língua' ;
COMMENT ON COLUMN disch_instructions_group.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN disch_instructions_group.adw_last_update IS 'Data da última alteração' ;




ALTER TABLE DISCH_INSTRUCTIONS_GROUP ADD (ID_CONTENT VARCHAR2(200));
COMMENT ON COLUMN DISCH_INSTRUCTIONS_GROUP.ID_CONTENT  IS 'Identificador único de conteúdo';

