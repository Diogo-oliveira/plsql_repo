

  CREATE TABLE REP_PROF_EXCEPTION
   (	ID_REP_PROF_EXCEPTION NUMBER(24,0) NOT NULL ENABLE,
	ID_REPORTS NUMBER(24,0),
	FLG_AREA_REPORT VARCHAR2(2),
	ID_REP_PROFILE_TEMPLATE_DET NUMBER(24,0),
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0),
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );



COMMENT ON TABLE rep_prof_exception IS 'Tabela de excepções dos acessos dos profissionais aos relatórios. Nesta tabela parametrizam-se todas as excepções (adicionar ou remover) de acessos para além dos que constituem os templates atribuídos ao utilizador' ;

COMMENT ON COLUMN rep_prof_exception.flg_area_report IS 'Área na qual será alocado o relatório. R-Reports;OD-Ongoing Documents; C-Consents;CR-Certificates;F-Forms;L-Lables' ;
COMMENT ON COLUMN rep_prof_exception.id_rep_profile_template_det IS 'Deve ser utilizado em vez do conjunto id_report+flg_area_report para remover acessos a reports' ;
COMMENT ON COLUMN rep_prof_exception.flg_type IS 'Indica se adiciona ou retira acessos a um determinado report no ecrã. Valores possíveis: A- Adiciona, R- Retira' ;
COMMENT ON COLUMN rep_prof_exception.rank IS 'Ordem de visualização' ;



