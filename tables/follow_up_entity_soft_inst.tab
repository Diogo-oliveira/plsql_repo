

CREATE TABLE follow_up_entity_soft_inst (
       id_follow_up_entity NUMBER(24) NOT NULL,
       id_institution NUMBER(24) NOT NULL,
       id_software    NUMBER(24) NOT NULL,
       flg_available  VARCHAR2(1) NOT NULL,
       rank           NUMBER(6)
);

COMMENT ON TABLE follow_up_entity_soft_inst IS 'Follow-up entities configuration table';

COMMENT ON COLUMN follow_up_entity_soft_inst.id_follow_up_entity IS 'Follow-up entity ID';
COMMENT ON COLUMN follow_up_entity_soft_inst.id_institution IS 'Institution ID';
COMMENT ON COLUMN follow_up_entity_soft_inst.id_software IS 'Software ID';
COMMENT ON COLUMN follow_up_entity_soft_inst.flg_available IS 'Availability: (Y) yes (N) no';
COMMENT ON COLUMN follow_up_entity_soft_inst.rank IS 'Ranking for sorting';
