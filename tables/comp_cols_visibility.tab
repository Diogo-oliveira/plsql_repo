-- CHANGE REASON: [ALERT-63591] Registration of complications through templates in use at JBZ (JBZ will provide the templates).
CREATE TABLE COMP_COLS_VISIBILITY
(
  ID_COMP_COLS_VISIBILITY NUMBER(24) NOT NULL,
ID_SYS_LIST             NUMBER(24) NOT NULL,
FLG_VISIBLE             VARCHAR2(1 CHAR) NOT NULL,
  ID_INSTITUTION          NUMBER(24) NOT NULL,  
  ID_SOFTWARE             NUMBER(24) NOT NULL,
  FLG_AVAILABLE           VARCHAR2(1 CHAR) NOT NULL,
  CREATE_USER             VARCHAR2(24 CHAR),
  CREATE_TIME             TIMESTAMP(6) WITH LOCAL TIME ZONE,
  CREATE_INSTITUTION      NUMBER(24),
  UPDATE_USER             VARCHAR2(24 CHAR),
  UPDATE_TIME             TIMESTAMP(6) WITH LOCAL TIME ZONE,
  UPDATE_INSTITUTION      NUMBER(24)
);

ALTER TABLE COMP_COLS_VISIBILITY MOVE TABLESPACE TABLE_S;

COMMENT ON TABLE COMP_COLS_VISIBILITY IS 'Visibility of complications screen columns.';
COMMENT ON COLUMN COMP_COLS_VISIBILITY.ID_COMP_COLS_VISIBILITY IS 'Primary key.';
COMMENT ON COLUMN COMP_COLS_VISIBILITY.ID_SYS_LIST IS 'Column type; The id_sys_list must belong to one of the following sys_list_group: COMPLICATION_COLUMNS_VISIBILITY or COMPLICATION_REQUEST_COLUMNS_VISIBILITY';
COMMENT ON COLUMN COMP_COLS_VISIBILITY.FLG_VISIBLE IS 'Columns is visible? Y - Yes, otherwise N.';
COMMENT ON COLUMN COMP_COLS_VISIBILITY.ID_INSTITUTION IS 'Institution ID.';
COMMENT ON COLUMN COMP_COLS_VISIBILITY.ID_SOFTWARE IS 'Software ID.';
COMMENT ON COLUMN COMP_COLS_VISIBILITY.FLG_AVAILABLE IS 'Availability of the record.';
-- CHANGE END: Alexandre Santos