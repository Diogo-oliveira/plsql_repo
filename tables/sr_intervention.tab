

  CREATE TABLE SR_INTERVENTION
   (	ID_SR_INTERVENTION NUMBER(24,0) NOT NULL ENABLE,
	ID_SR_INTERV_PARENT NUMBER(24,0),
	CODE_SR_INTERVENTION VARCHAR2(200) NOT NULL ENABLE,
	FLG_STATUS VARCHAR2(1),
	FLG_TYPE VARCHAR2(1),
	DURATION NUMBER(6,0),
	PREV_RECOVERY_TIME NUMBER(6,0),
	GDH VARCHAR2(100),
	ICD VARCHAR2(50),
	GENDER VARCHAR2(1),
	AGE_MIN NUMBER(3,0),

	AGE_MAX NUMBER(3,0),
	COST NUMBER(18,4),
	PRICE NUMBER(18,4),
	ID_SYSTEM_ORGAN NUMBER(24,0),
	ID_SPECIALITY NUMBER(12,0),
	ADW_LAST_UPDATE DATE
   );


COMMENT ON COLUMN sr_intervention.id_sr_intervention IS 'ID único' ;
COMMENT ON COLUMN sr_intervention.id_sr_interv_parent IS 'ID do "pai"' ;
COMMENT ON COLUMN sr_intervention.code_sr_intervention IS 'Código para obtenção da descrição na tabela Translation' ;
COMMENT ON COLUMN sr_intervention.flg_status IS 'Estado da intervenção. Valores possíveis: A- Activo, I- Inactivo' ;
COMMENT ON COLUMN sr_intervention.flg_type IS 'Tipo de cirurgia. Valores possíveis: S- Cirurgia' ;
COMMENT ON COLUMN sr_intervention.duration IS 'Duração estimada da intervenção' ;
COMMENT ON COLUMN sr_intervention.prev_recovery_time IS 'Tempo estimado de permanência no recobro' ;
COMMENT ON COLUMN sr_intervention.gdh IS 'Código GDH' ;
COMMENT ON COLUMN sr_intervention.icd IS 'Código OCD' ;
COMMENT ON COLUMN sr_intervention.gender IS 'Sexo a que a intervenção se aplica. Valores possíveis: F- Feminino, M- Masculino, null- todos' ;
COMMENT ON COLUMN sr_intervention.age_min IS 'Idade mínima dos pacientes a que a intervenção se destina' ;
COMMENT ON COLUMN sr_intervention.age_max IS 'Idade máxima dos pacientes a que a intervenção se destina' ;
COMMENT ON COLUMN sr_intervention.cost IS 'Custo da intervenção' ;

COMMENT ON COLUMN sr_intervention.price IS 'Preço da intervenção' ;
COMMENT ON COLUMN sr_intervention.id_system_organ IS 'ID do orgão' ;
COMMENT ON COLUMN sr_intervention.id_speciality IS 'ID da especialidade' ;
COMMENT ON COLUMN sr_intervention.adw_last_update IS 'Data da última alteração' ;

comment on column SR_INTERVENTION.ICD
  is 'Código ICD';
  
  
