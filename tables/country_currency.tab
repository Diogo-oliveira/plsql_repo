create table country_currency
(
       id_country_currency number(12),
       id_country          number(12),
       id_currency         number(6),
       rank                number(12),
       flg_available       varchar2(1),
       adw_last_update     date
);

comment on table country_currency is
'Relaciona um país com um conjunto de moedas';

---------

comment on column country_currency.id_country_currency is
'ID da tabela';

comment on column country_currency.id_country is
'ID do país';

comment on column country_currency.id_currency is
'ID da moeda';

comment on column country_currency.rank is
'Ordem preferencial da moeda';

comment on column country_currency.flg_available is
'Disponibilidade do registo';

comment on column country_currency.adw_last_update is
'Data da ultima alteração efectuada sobre o registo';