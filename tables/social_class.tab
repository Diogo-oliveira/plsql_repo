

  CREATE TABLE SOCIAL_CLASS
   (	ID_SOCIAL_CLASS NUMBER(12,0) NOT NULL ENABLE,
	CODE_SOCIAL_CLASS VARCHAR2(200) NOT NULL ENABLE,
	VAL_MIN NUMBER(2,0) NOT NULL ENABLE,
	VAL_MAX NUMBER(2,0) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON COLUMN social_class.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;


