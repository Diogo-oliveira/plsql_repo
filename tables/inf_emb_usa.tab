
  CREATE TABLE INF_EMB_USA
   (	EMB_ID NUMBER(10,0) NOT NULL ENABLE,
	N_REGISTO NUMBER(20,0),
	DESCR VARCHAR2(400) NOT NULL ENABLE,
	COMPART NUMBER(3,0),
	DATA_COMPART DATE,
	GRUPO_HOM_ID VARCHAR2(6),
	MED_ID NUMBER(10,0) NOT NULL ENABLE,
	DATA_ALTER DATE,
	DATA_ALT_COMP DATE,
	DATA_ALT_PRECO DATE,
	TRATAMENTO NUMBER(1,0),
	EMB_UNIT_ID NUMBER(1,0)
   );


COMMENT ON TABLE inf_emb_usa IS 'Embalagens.' ;

COMMENT ON COLUMN inf_emb_usa.emb_id IS 'Codigo identificador da embalagem.' ;
COMMENT ON COLUMN inf_emb_usa.n_registo IS 'Número de registo atribuído a cada embalagem.' ;
COMMENT ON COLUMN inf_emb_usa.descr IS 'Informação completa sobre a embalagem (formato do Prontuário Terapêutico)' ;
COMMENT ON COLUMN inf_emb_usa.compart IS 'Taxa de comparticipação da embalagem.' ;
COMMENT ON COLUMN inf_emb_usa.data_compart IS 'Data da comparticipação.' ;
COMMENT ON COLUMN inf_emb_usa.grupo_hom_id IS 'Código identificador do Grupo Homogéneo do medicamento.' ;
COMMENT ON COLUMN inf_emb_usa.med_id IS 'Código identificador do medicamento.' ;
COMMENT ON COLUMN inf_emb_usa.data_alter IS 'Data da última alteração da embalagem. Actualizada sempre que há alteração de qualquer um dos atributos da tabela.' ;
COMMENT ON COLUMN inf_emb_usa.data_alt_comp IS 'Data da última alteração do escalão de comparticipação da embalagem. Actualizada quando há alteração da comparticipação.' ;
COMMENT ON COLUMN inf_emb_usa.data_alt_preco IS 'Data da última alteração de preço da embalagem. Actualizada quando há alteração no preço.' ;
COMMENT ON COLUMN inf_emb_usa.tratamento IS 'Código identificador do tipo de tratamento.' ;
COMMENT ON COLUMN inf_emb_usa.emb_unit_id IS 'Código identificador da embalagem unitária.' ;

