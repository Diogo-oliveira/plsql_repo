
create table BODY_LAYER
(
  ID_BODY_LAYER   NUMBER(24) not null,
  INTERNAL_NAME   VARCHAR2(200) not null,
  CODE_BODY_LAYER VARCHAR2(200) not null,
  ADW_LAST_UPDATE DATE not null
);

comment on table BODY_LAYER
  is 'Tabela que contém os body layers para os diagramas corporais';
comment on column BODY_LAYER.ID_BODY_LAYER
  is 'Chave Primária';
comment on column BODY_LAYER.INTERNAL_NAME
  is 'Nome interno.';
comment on column BODY_LAYER.CODE_BODY_LAYER
  is 'Suporte para descrição multi-língua da body layer';
comment on column BODY_LAYER.ADW_LAST_UPDATE
  is 'Data da última alteração.';

