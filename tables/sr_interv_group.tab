

  CREATE TABLE SR_INTERV_GROUP
   (	ID_SR_INTERV_GROUP NUMBER(14,0) NOT NULL ENABLE,
	CODE_SR_INTERV_GROUP VARCHAR2(200),
	FLG_AVAILABLE VARCHAR2(1),
	RANK NUMBER(6,0),
	ADW_LAST_UPDATE VARCHAR2(240)
   );


COMMENT ON TABLE sr_interv_group IS 'Contém os grupos de cirurgias' ;

COMMENT ON COLUMN sr_interv_group.id_sr_interv_group IS 'ID do grupo de cirurgias' ;
COMMENT ON COLUMN sr_interv_group.code_sr_interv_group IS 'Código para obtenção da descrição na tabela Translation' ;
COMMENT ON COLUMN sr_interv_group.flg_available IS 'Disponibilidade' ;
COMMENT ON COLUMN sr_interv_group.rank IS 'Ordem de visualização' ;
COMMENT ON COLUMN sr_interv_group.adw_last_update IS 'Data da última alteração' ;


