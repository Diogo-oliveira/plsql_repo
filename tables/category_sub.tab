

  CREATE TABLE CATEGORY_SUB
   (	ID_CATEGORY_SUB NUMBER(12,0) NOT NULL ENABLE,
	ID_CATEGORY NUMBER(12,0),
	CODE_CATEGORY_SUB VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0),
	NUM_PROF NUMBER(3,0)
   );


COMMENT ON COLUMN category_sub.id_category_sub IS 'ID único' ;
COMMENT ON COLUMN category_sub.code_category_sub IS 'Código para obtenção da descrição' ;
COMMENT ON COLUMN category_sub.flg_available IS 'Indica se está disponível' ;
COMMENT ON COLUMN category_sub.flg_type IS 'Tipo de sub-categoria. Valores possíveis: S- Cirurgião, U- 1º auxiliar, X- 2º auxiliar, L- 3º auxiliar, V- Auxiliar anestesista, C- Enf. circulante, H- Enf. anestesia, I- Enf. instrumentista, R- Enf. chefe de sala, A- Anestesista' ;
COMMENT ON COLUMN category_sub.rank IS 'Ordem de visualização' ;
COMMENT ON COLUMN category_sub.num_prof IS 'Número máximo de profssionais desta categoria numa cirurgia (indicativo)' ;


