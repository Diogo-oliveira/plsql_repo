CREATE TABLE DISCH_REAS_STATUS
(
ID_DISCH_REAS_STATUS     NUMBER(12),
ID_DISCHARGE_REASON      NUMBER(24),
SCREEN_NAME              VARCHAR2(200 CHAR),
CODE_DOMAIN              VARCHAR2(200 CHAR) NOT NULL,
ID_INSTITUTION           NUMBER(24) NOT NULL,
ID_SOFTWARE              NUMBER(24) NOT NULL,
FLG_AVAILABLE            VARCHAR2(1 CHAR) DEFAULT 'Y' NOT NULL,
CREATE_USER              VARCHAR2(24 CHAR),
CREATE_TIME              TIMESTAMP WITH LOCAL TIME ZONE,
CREATE_INSTITUTION       NUMBER(24),
UPDATE_USER              VARCHAR2(24 CHAR),
UPDATE_TIME              TIMESTAMP WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION       NUMBER(24)
);

ALTER TABLE DISCH_REAS_STATUS MOVE TABLESPACE TABLE_S;

COMMENT ON TABLE DISCH_REAS_STATUS IS 'Discharge reason status values';
COMMENT ON COLUMN DISCH_REAS_STATUS.ID_DISCH_REAS_STATUS IS 'Primary key';
COMMENT ON COLUMN DISCH_REAS_STATUS.ID_DISCHARGE_REASON IS 'Discharge reason id. Is required to fill one of the following fields: SCREEN_NAME or ID_DISCHARGE_REASON; They are mutually exclusive, so fill only one of them.';
COMMENT ON COLUMN DISCH_REAS_STATUS.SCREEN_NAME IS 'Screen name. Is required to fill one of the following fields: SCREEN_NAME or ID_DISCHARGE_REASON; They are mutually exclusive, so fill only one of them.';
COMMENT ON COLUMN DISCH_REAS_STATUS.CODE_DOMAIN IS 'Code domain to use for translations purposes';
COMMENT ON COLUMN DISCH_REAS_STATUS.ID_INSTITUTION IS 'Institution ID';
COMMENT ON COLUMN DISCH_REAS_STATUS.ID_SOFTWARE IS 'Software ID';
COMMENT ON COLUMN DISCH_REAS_STATUS.FLG_AVAILABLE IS 'Availability of the record';
COMMENT ON COLUMN DISCH_REAS_STATUS.CREATE_USER is 'Professional ID which created the record';
COMMENT ON COLUMN DISCH_REAS_STATUS.CREATE_TIME is 'Date of record creation';
COMMENT ON COLUMN DISCH_REAS_STATUS.CREATE_INSTITUTION is 'Institution ID where record was created';
COMMENT ON COLUMN DISCH_REAS_STATUS.UPDATE_USER is 'Professional ID who last updated the record';
COMMENT ON COLUMN DISCH_REAS_STATUS.UPDATE_TIME is 'Date when record was last updated';
COMMENT ON COLUMN DISCH_REAS_STATUS.UPDATE_INSTITUTION is 'Institution ID where record was last updated';
