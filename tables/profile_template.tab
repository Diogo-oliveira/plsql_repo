

  CREATE TABLE PROFILE_TEMPLATE
   (	ID_PROFILE_TEMPLATE NUMBER(12,0) NOT NULL ENABLE,
	INTERN_NAME_TEMPL VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	ID_TEMPL_ASSOC NUMBER(24,0),
	ID_INSTITUTION NUMBER(24,0)
   );


COMMENT ON TABLE profile_template IS 'Templates de perfis de acesso. Por ex: "médico" e "médico chefe de equipa".Os acessos para cada template são pré-definidos em SYS_TEMPLATE_ACCESS, podendo ser utilizados como base para atribuição de acessos a profissionais.' ;

COMMENT ON COLUMN profile_template.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN profile_template.id_templ_assoc IS 'ID do template que está sempre associado ao do registo e q portanto é atribuído quando o registo actual é seleccionado p/ atribuição (por ex: o template "médico" tem associado o template do Viewer e portanto o registo do template "médico" tem esta coluna preenchida c/ o ID do template do Viewer)' ;

alter table PROFILE_TEMPLATE add FLG_TYPE VARCHAR2(1);

comment on column PROFILE_TEMPLATE.FLG_TYPE
  is 'Tipo: D - Médico, N - Enfermeiro, P - Farmacêutico, X - Auxiliar, A - Administrativo, T - Técnico, S - Assistente Social';

alter table profile_template add (code_profile_template varchar2(200));
alter table profile_template add (adw_last_update date);

alter table profile_template add (id_category NUMBER(12,0));

COMMENT ON COLUMN profile_template.id_category IS 'Categoria profissional';

ALTER TABLE profile_template ADD (FLG_GROUP VARCHAR2(4));

COMMENT ON COLUMN profile_template.flg_group IS 'P - Physician(Médico), C - Clínico(não médico), N - Não clínico';

