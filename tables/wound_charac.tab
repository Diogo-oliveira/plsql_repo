

  CREATE TABLE WOUND_CHARAC
   (	ID_WOUND_CHARAC NUMBER(24,0) NOT NULL ENABLE,
	CODE_WOUND_CHARAC VARCHAR2(200) NOT NULL ENABLE,
	INTERN_NAME VARCHAR2(200) NOT NULL ENABLE,
	ID_PARENT NUMBER(24,0),
	FLG_FILL_TYPE VARCHAR2(1) NOT NULL ENABLE,
	CODE_MEASURE_UNIT VARCHAR2(200),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE wound_charac IS 'Características da ferida (comprimento, aspecto da pele circundante, ...)' ;

COMMENT ON COLUMN wound_charac.code_wound_charac IS 'Código para tradução da característica' ;
COMMENT ON COLUMN wound_charac.flg_fill_type IS 'Tipo de preenchimento: N - numérico; V - varchar' ;
COMMENT ON COLUMN wound_charac.code_measure_unit IS 'Código para tradução da unidade de medida' ;
COMMENT ON COLUMN wound_charac.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;


