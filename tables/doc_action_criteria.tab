

  CREATE TABLE DOC_ACTION_CRITERIA
   (	ID_DOC_ACTION_CRITERIA NUMBER(24,0) NOT NULL ENABLE,
	ID_DOC_AREA NUMBER NOT NULL ENABLE,
	ID_DOC_ELEMENT_CRIT NUMBER(24,0) NOT NULL ENABLE,
	ID_DOC_ELEMENT_QUALIF NUMBER(24,0),
	ID_ELEM_CRIT_ACTION NUMBER(24,0),
	FLG_ACTION VARCHAR2(4) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE
   );


COMMENT ON COLUMN doc_action_criteria.id_doc_action_criteria IS 'Chave primária' ;
COMMENT ON COLUMN doc_action_criteria.id_doc_area IS 'Código da área' ;
COMMENT ON COLUMN doc_action_criteria.id_doc_element_crit IS 'Código do critério do elemento' ;
COMMENT ON COLUMN doc_action_criteria.id_doc_element_qualif IS 'Código da relação elemento/qualificação' ;
COMMENT ON COLUMN doc_action_criteria.id_elem_crit_action IS 'Código elemento/critério sobre o qual a acção é realizada' ;
COMMENT ON COLUMN doc_action_criteria.flg_action IS 'Tipo de Acção:CS-Mudar estado; S- Show; H- Hide; OK- Open Keepad' ;
COMMENT ON COLUMN doc_action_criteria.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN doc_action_criteria.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;

comment on column DOC_ACTION_CRITERIA.FLG_ACTION
  is 'Tipo de Acção:S-Selecionar;CS -Alteração do estado; H - Hide;OK - Open Keepad';
  
