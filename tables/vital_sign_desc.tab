

  CREATE TABLE VITAL_SIGN_DESC
   (	ID_VITAL_SIGN_DESC NUMBER(12,0) NOT NULL ENABLE,
	CODE_VITAL_SIGN_DESC VARCHAR2(200) NOT NULL ENABLE,
	ID_VITAL_SIGN NUMBER(12,0) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(6,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	VALUE VARCHAR2(30),
	ICON VARCHAR2(100)
   );


COMMENT ON TABLE vital_sign_desc IS 'Valores possíveis para os SV cujas leituras não são numéricas.Por ex., o sinal vital "estado de consciência" existe em VITAL_SIGN, mas os valores que pode tomar estão guardados nesta tabela.Inclui valores p/: Glasgow (olhos, motor e verbal), estado de consciência, fonte de O2, ritmo do pulso, pressão arterial (sistólica + diastólica)' ;

COMMENT ON COLUMN vital_sign_desc.code_vital_sign_desc IS 'Código para tradução' ;
COMMENT ON COLUMN vital_sign_desc.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN vital_sign_desc.value IS 'Valor associado ao registo, p/ o caso do Glasgow' ;

ALTER TABLE vital_sign_desc ADD CODE_ABBREVIATION VARCHAR2(200);
COMMENT ON COLUMN vital_sign_desc.CODE_ABBREVIATION IS 'Código da abreviação para tradução';

ALTER TABLE vital_sign_desc ADD (ID_CONTENT VARCHAR2(200));

comment on column vital_sign_desc.ID_CONTENT is 'Identificador único de conteúdo';

