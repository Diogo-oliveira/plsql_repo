
CREATE TABLE PROTOCOL_ADV_INPUT_VALUE
 (ID_PROTOCOL_ADV_INPUT_VALUE NUMBER(24) NOT NULL
 ,ID_ADV_INPUT_LINK NUMBER(24) NOT NULL
 ,FLG_TYPE VARCHAR2(1) NOT NULL
 ,VALUE_TYPE VARCHAR2(20) NOT NULL
 ,NVALUE NUMBER(8,3)
 ,DVALUE TIMESTAMP WITH LOCAL TIME ZONE
 ,VVALUE VARCHAR2(200)
 ,VALUE_DESC VARCHAR2(200)
 ,CRITERIA_VALUE_TYPE NUMBER(24)
 ,ID_ADVANCED_INPUT NUMBER(24) NOT NULL
 ,ID_ADVANCED_INPUT_FIELD NUMBER(24) NOT NULL
 ,ID_ADVANCED_INPUT_FIELD_DET NUMBER(24)
 );

COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.ID_PROTOCOL_ADV_INPUT_VALUE IS 'ID of protocol criteria value';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.ID_ADV_INPUT_LINK IS 'ID of protocol criteria link';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.FLG_TYPE IS 'Advanced Input for (C)riterias or (T)asks';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.VALUE_TYPE IS 'Value Type: Date / Number / Varchar';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.NVALUE IS 'Numeric value';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.DVALUE IS 'Date value';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.VVALUE IS 'Varchar value';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.VALUE_DESC IS 'Description of value';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.CRITERIA_VALUE_TYPE IS 'Criteria value type: Min / Max';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.ID_ADVANCED_INPUT IS 'ID of advanced input main configuration';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.ID_ADVANCED_INPUT_FIELD IS 'ID of advanced input field configuration';
COMMENT ON COLUMN PROTOCOL_ADV_INPUT_VALUE.ID_ADVANCED_INPUT_FIELD_DET IS 'ID of advanced input field details';

