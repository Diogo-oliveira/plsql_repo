
CREATE TABLE GUIDELINE_PROCESS_TASK_DET
 (ID_GUIDELINE_PROCESS_TASK_DET NUMBER(24) NOT NULL
 ,ID_GUIDELINE_PROCESS_TASK NUMBER(24) NOT NULL
 ,FLG_DETAIL_TYPE VARCHAR2(240) NOT NULL
 ,VALUE_TYPE VARCHAR2(20) NOT NULL
 ,NVALUE NUMBER(8,3)
 ,DVALUE TIMESTAMP WITH LOCAL TIME ZONE
 ,VVALUE VARCHAR2(200)
 );

COMMENT ON COLUMN GUIDELINE_PROCESS_TASK_DET.ID_GUIDELINE_PROCESS_TASK_DET IS 'Guideline process task detail ID';

COMMENT ON COLUMN GUIDELINE_PROCESS_TASK_DET.ID_GUIDELINE_PROCESS_TASK IS 'Guideline process tasks associated to detail';

COMMENT ON COLUMN GUIDELINE_PROCESS_TASK_DET.FLG_DETAIL_TYPE IS 'Type of detail';

COMMENT ON COLUMN GUIDELINE_PROCESS_TASK_DET.VALUE_TYPE IS 'Detail value type: Date / Number / Varchar';

COMMENT ON COLUMN GUIDELINE_PROCESS_TASK_DET.NVALUE IS 'Numeric value';

COMMENT ON COLUMN GUIDELINE_PROCESS_TASK_DET.DVALUE IS 'Date value';

COMMENT ON COLUMN GUIDELINE_PROCESS_TASK_DET.VVALUE IS 'Varchar value';

