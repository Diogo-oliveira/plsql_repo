
CREATE TABLE advanced_directive_inst_soft(
    id_advanced_directive_instsoft NUMBER NOT NULL,
    id_advanced_directive NUMBER NOT NULL,
    flg_print VARCHAR2(1) DEFAULT 'N' NOT NULL,
    id_institution NUMBER NOT NULL,
    id_software NUMBER DEFAULT 0 NOT NULL,
    rank NUMBER(4, 0) DEFAULT 0 NOT NULL,
    flg_available VARCHAR2(1) DEFAULT 'Y' NOT NULL,
    adw_last_update DATE DEFAULT SYSDATE NOT NULL
);
																			
COMMENT ON TABLE advanced_directive_inst_soft IS 'Parametrização de uma decisão antecipada por instituição e softwarare.';
COMMENT ON COLUMN advanced_directive_inst_soft.id_advanced_directive_instsoft IS 'Chave primária';
COMMENT ON COLUMN advanced_directive_inst_soft.id_advanced_directive IS 'PK da tabela advanced_directive';
COMMENT ON COLUMN advanced_directive_inst_soft.flg_print IS 'indica se esta adv directive deve ser impressa na pulseira do paciente ou não';
COMMENT ON COLUMN advanced_directive_inst_soft.id_institution IS 'id da instituição da parametrização';
COMMENT ON COLUMN advanced_directive_inst_soft.id_software IS 'id do software da parametrização (por defeito é 0)';
COMMENT ON COLUMN advanced_directive_inst_soft.rank IS 'chave para ordenamento';
COMMENT ON COLUMN advanced_directive_inst_soft.flg_available IS 'registo disponível?';
