
create table PAT_ADVANCE_DIRECTIVE
(
  ID_PAT_ADVANCE_DIRECTIVE NUMBER(24) NOT NULL,
	ID_PATIENT               NUMBER(24) NOT NULL,
	ID_EPIS_DOCUMENTATION    NUMBER(24) NOT NULL,
	FLG_HAS_ADV_DIRECTIVE    VARCHAR2(1) NOT NULL,
	FLG_STATUS               VARCHAR2(1) NOT NULL,
	ID_CANCEL_REASON         NUMBER(24),
	ID_PROF_CANCEL           NUMBER(24),
	NOTES_CANCEL             VARCHAR2(4000),
	DT_CANCEL                TIMESTAMP WITH LOCAL TIME ZONE
);


COMMENT ON TABLE PAT_ADVANCE_DIRECTIVE IS 'Patient advance directives record (one per patient)';

COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.ID_PAT_ADVANCE_DIRECTIVE IS 'Patient advance directive ID.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.ID_PATIENT IS 'Patient ID.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.ID_EPIS_DOCUMENTATION IS 'Documentation record associated with the advance directive.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.FLG_HAS_ADV_DIRECTIVE IS 'The patient has advance directives: Y - Yes, N - No, U - Unknown.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.FLG_STATUS IS 'Record status: A - Active, O - Outdated, C - Cancelled';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.ID_CANCEL_REASON IS 'Cancellation reason.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.ID_PROF_CANCEL IS 'Professional who cancelled the record.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.NOTES_CANCEL IS 'Cancellation notes.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE.DT_CANCEL IS 'Cancellation date.';

