-- Create table vacc_info
create table VACC_INFO
(
  ID_VACC_INFO       NUMBER(12) not null,
  ID_VACC            NUMBER(12) not null,
  ADVERS_REACT_DESCR VARCHAR2(2000) not null,
  ADW_LAST_UPDATE    DATE,
  CONTRA_INDIC       VARCHAR2(2000),
  PRECAUTIONS        VARCHAR2(2000)
)

