

  CREATE TABLE NURSE_ACTIVITY_REQ
   (	ID_NURSE_ACTIVITY_REQ NUMBER(24,0) NOT NULL ENABLE,
	DT_NURSE_ACTIVITY_REQ DATE NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	NOTES VARCHAR2(4000),
	DT_BEGIN DATE,
	FLG_TIME VARCHAR2(1) NOT NULL ENABLE,
	DT_CANCEL DATE,
	ID_PROF_CANCEL NUMBER(24,0),
	NOTES_CANCEL VARCHAR2(4000),

	ID_SCHEDULE NUMBER(24,0),
	ID_EPISODE_ORIGIN NUMBER(24,0),
	ID_EPISODE_DESTINATION NUMBER(24,0)
   );


COMMENT ON TABLE nurse_activity_req IS 'Requisição de actividades de enfermagem.Podem ser requisitadas e "programadas" por um médico na consulta, para execução na mesma consulta ou no futuro. Também podem ser requisitadas pelas enfermeiras, para programar tratamentos subsequentes.Estas requisições reflectem-se em SCHEDULE.' ;

COMMENT ON COLUMN nurse_activity_req.id_episode_origin IS 'ID do episódio em que foi registada a req. inicialmente (se FLG_TIME = ''N'')' ;
COMMENT ON COLUMN nurse_activity_req.id_episode_destination IS 'ID do episódio em que foi registada a req. destino (se FLG_TIME = ''N'')' ;
COMMENT ON COLUMN nurse_activity_req.flg_status IS 'F - concluído; R - requisitado; C - cancelado; E - em execução; D - pendente; P - parcial.' ;
COMMENT ON COLUMN nurse_activity_req.dt_begin IS 'Data pretendida para início da execução do exame (ie, ñ imediata)' ;
COMMENT ON COLUMN nurse_activity_req.flg_time IS 'Realização: E - neste episódio; N - próximo episódio; B - entre episódios' ;

alter table NURSE_aCTIVITY_REQ add id_prev_episode number(24);

COMMENT ON COLUMN nurse_activity_req.id_prev_episode IS 'ID do episódio onde foi criado a requisição' ;

alter table nurse_activity_req 
add (dt_nurse_activity_req_tstz timestamp with local time zone,
     dt_begin_tstz timestamp with local time zone,
     dt_cancel_tstz timestamp with local time zone);

