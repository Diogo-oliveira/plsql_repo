CREATE TABLE TRIAL_PROF_HIST (
  ID_TRIAL_HIST       NUMBER(24) NOT NULL,
  ID_PROFESSIONAL     NUMBER(24) NOT NULL,
  CREATE_USER         VARCHAR2(24 CHAR),
  CREATE_TIME         TIMESTAMP(6) WITH LOCAL TIME ZONE,
  CREATE_INSTITUTION  NUMBER(24),
  UPDATE_USER         VARCHAR2(24 CHAR),
  UPDATE_TIME         TIMESTAMP(6) WITH LOCAL TIME ZONE,
  UPDATE_INSTITUTION  NUMBER(24)
);  
  
COMMENT ON TABLE TRIAL_PROF_HIST IS 'History table for the list of professionais responsible for a trial';
COMMENT ON COLUMN TRIAL_PROF_HIST.ID_TRIAL_HIST IS 'ID Trail hist';
COMMENT ON COLUMN TRIAL_PROF_HIST.ID_PROFESSIONAL IS 'ID Professional';
COMMENT ON COLUMN TRIAL_PROF_HIST.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN TRIAL_PROF_HIST.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN TRIAL_PROF_HIST.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN TRIAL_PROF_HIST.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN TRIAL_PROF_HIST.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN TRIAL_PROF_HIST.UPDATE_INSTITUTION IS 'Update Institution';
-- CHANGE END: Elisabete Bugalho

