  CREATE TABLE SSCR_CRIT
   (	ID_SEARCH_SCREEN NUMBER,
	ID_CRITERIA NUMBER,
	FLG_AVAILABLE VARCHAR2(1),
	FLG_MANDATORY VARCHAR2(1),
	RANK NUMBER(3,0)
   ) ;


