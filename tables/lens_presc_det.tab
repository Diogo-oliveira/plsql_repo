CREATE TABLE LENS_PRESC_DET
 (ID_LENS_PRESC NUMBER(24) NOT NULL
 ,ID_LENS_PRESC_HIST NUMBER(24) NOT NULL
 ,ID_ADVANCED_INPUT NUMBER(6) NOT NULL
 ,ID_ADV_INP_FIELD_DET NUMBER(24) NOT NULL
 ,VALUE VARCHAR2(50) NOT NULL
 )
/

COMMENT ON TABLE LENS_PRESC_DET IS 'This table stores all field values related to a prescription.'
/

COMMENT ON COLUMN LENS_PRESC_DET.ID_LENS_PRESC IS 'Prescription Id'
/

COMMENT ON COLUMN LENS_PRESC_DET.ID_LENS_PRESC_HIST IS 'Prescription history Id'
/

COMMENT ON COLUMN LENS_PRESC_DET.ID_ADVANCED_INPUT IS 'Advanced input Id'
/

COMMENT ON COLUMN LENS_PRESC_DET.ID_ADV_INP_FIELD_DET IS 'Advanced input field detail Id'
/

COMMENT ON COLUMN LENS_PRESC_DET.VALUE IS 'The value to be stored.'
/


