create table TRANSFER_OPTION
(
  ID_TRANSFER_OPTION      NUMBER(24) NOT NULL,
	CODE_TRANSFER_OPTION  VARCHAR2(200) NOT NULL,
	FLG_AVAILABLE         VARCHAR2(1) NOT NULL
);

COMMENT ON TABLE TRANSFER_OPTION IS 'Table containg all the transfer reasons';
 
COMMENT ON COLUMN TRANSFER_OPTION.ID_TRANSFER_OPTION IS 'Primary key ID';
COMMENT ON COLUMN TRANSFER_OPTION.CODE_TRANSFER_OPTION IS 'Translation code';
COMMENT ON COLUMN TRANSFER_OPTION.FLG_AVAILABLE IS 'Availability of the record in the institution DB';




