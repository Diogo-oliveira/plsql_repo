create table TRANSFER_OPT_DCS
(
  ID_TRANSFER_OPTION      NUMBER(24) NOT NULL,
  ID_DEP_CLIN_SERV        NUMBER(24) NOT NULL
);

COMMENT ON TABLE TRANSFER_OPT_DCS IS 'Parametrization of transfer reasons inside a given clinical service and department';

COMMENT ON COLUMN TRANSFER_OPT_DCS.ID_TRANSFER_OPTION IS 'Transfer option ID';
COMMENT ON COLUMN TRANSFER_OPT_DCS.ID_DEP_CLIN_SERV IS 'Association ID between clinical service and department';

