  CREATE TABLE INTERV_PRESCRIPTION
   (	ID_INTERV_PRESCRIPTION NUMBER(24,0) NOT NULL ENABLE,
	DT_INTERV_PRESCRIPTION DATE NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0),
	FLG_TIME VARCHAR2(1) NOT NULL ENABLE,
	DT_BEGIN DATE,
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	DT_CANCEL DATE,
	ID_PROF_CANCEL NUMBER(24,0),
	NOTES_CANCEL VARCHAR2(4000),

	NOTES VARCHAR2(4000),
	ID_EPISODE_ORIGIN NUMBER(24,0),
	ID_EPISODE_DESTINATION NUMBER(24,0),
	ID_PROTOCOLS NUMBER(24,0),
	ID_PREV_EPISODE NUMBER(24,0)
   );


COMMENT ON TABLE interv_prescription IS 'Prescrição de procedimentos' ;

COMMENT ON COLUMN interv_prescription.id_interv_prescription IS 'Chave primaria' ;
COMMENT ON COLUMN interv_prescription.dt_interv_prescription IS 'Data de prescição' ;
COMMENT ON COLUMN interv_prescription.flg_time IS 'Realização: E - neste episódio; N - próximo episódio' ;
COMMENT ON COLUMN interv_prescription.dt_begin IS 'Data pretendida para início da execução do exame (ie, ñ imediata)' ;
COMMENT ON COLUMN interv_prescription.flg_status IS 'F - concluído; R - requisitado; C - cancelado; E - em execução; D - pendente; P - parcial' ;
COMMENT ON COLUMN interv_prescription.id_episode_origin IS 'ID do episódio em que foi registada a req. inicialmente (se FLG_TIME = ''N'')' ;
COMMENT ON COLUMN interv_prescription.id_episode_destination IS 'ID do episódio em que foi registada a req. destino (se FLG_TIME = ''N'')' ;
COMMENT ON COLUMN interv_prescription.id_protocols IS 'ID do protocolo, caso tenha sido requesitado através de um protocolo.' ;
COMMENT ON COLUMN interv_prescription.id_prev_episode IS 'ID do episódio em que foi registada a req. inicialmente' ;

