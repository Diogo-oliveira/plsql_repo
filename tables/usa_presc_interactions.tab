
  CREATE TABLE USA_PRESC_INTERACTIONS
   (	ID_PRESC_INTERACTIONS NUMBER(24,0) NOT NULL ENABLE,
	ID_PRESC_PHARM_SOURCE NUMBER(24,0) NOT NULL ENABLE,
	ID_PRESC_PHARM_DEST NUMBER(24,0),
	ID_PAT_MEDIC_LIST_DEST NUMBER(24,0),
	ID_PATIENT NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	DT_PRESC_INTERACTIONS DATE NOT NULL ENABLE
   );


COMMENT ON TABLE usa_presc_interactions IS 'Tabela onde se registam as intercções medicamentosas de cada prescrição.' ;

COMMENT ON COLUMN usa_presc_interactions.id_presc_interactions IS 'Chave primária.' ;
COMMENT ON COLUMN usa_presc_interactions.id_presc_pharm_source IS 'Prescrição com interacções medicamentosas.' ;
COMMENT ON COLUMN usa_presc_interactions.id_presc_pharm_dest IS 'Prescrição com a qual o medicamento prescrito interage. É NULL se a interacção é com um relato de medicação.' ;
COMMENT ON COLUMN usa_presc_interactions.id_pat_medic_list_dest IS 'Relato de medicação com o qual o medicamento prescrito interage. É NULL se a interacção é com uma prescrição.' ;
COMMENT ON COLUMN usa_presc_interactions.id_patient IS 'ID do paciente.' ;
COMMENT ON COLUMN usa_presc_interactions.id_professional IS 'Profissional que regista a associação.' ;
COMMENT ON COLUMN usa_presc_interactions.dt_presc_interactions IS 'Data de registo.' ;





ALTER TABLE USA_PRESC_INTERACTIONS ADD DT_PRESC_INTERACTIONS_TSTZ TIMESTAMP WITH LOCAL TIME ZONE; 
COMMENT ON COLUMN USA_PRESC_INTERACTIONS.DT_PRESC_INTERACTIONS_TSTZ IS 'Data de registo.'; 
