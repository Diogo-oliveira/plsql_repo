

  CREATE TABLE BODY_PART
   (	ID_BODY_PART NUMBER(12,0) NOT NULL ENABLE,
	CODE_BODY_PART VARCHAR2(200) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	RANK NUMBER(12,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE body_part IS 'Partes do corpo' ;

COMMENT ON COLUMN body_part.code_body_part IS 'Código para nome' ;
COMMENT ON COLUMN body_part.flg_type IS 'Tipo: C - colheita para análises, P - procedimento, A - ambos' ;
COMMENT ON COLUMN body_part.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;

comment on column BODY_PART.FLG_TYPE
  is 'Tipo: C - colheita para análises, P - procedimento, A - ambos, D - Diagrama corporal';

