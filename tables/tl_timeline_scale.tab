

  CREATE TABLE "ALERT"."TL_TIMELINE_SCALE"
   (	"ID_TL_TIMELINE" NUMBER(24,0),
	"ID_TL_SCALE_XLOWER" NUMBER(24,0),
	"ID_TL_SCALE_XUPPER" NUMBER(24,0),
	"DEFAULT_SCALE" VARCHAR2(1) DEFAULT 'N',
	"FLG_AVAILABLE" VARCHAR2(1),
	"ADW_LAST_UPDATE" DATE
   ) ;


