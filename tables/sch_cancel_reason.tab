

  CREATE TABLE SCH_CANCEL_REASON
   (	ID_SCH_CANCEL_REASON NUMBER(24,0) NOT NULL ENABLE,
	CODE_CANCEL_REASON VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) DEFAULT 'Y' NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE,
	RANK NUMBER(6,0)
   );

COMMENT ON TABLE SCH_CANCEL_REASON IS 'Contains the predefined reasons for cancelling appointments';

COMMENT ON COLUMN SCH_CANCEL_REASON.ADW_LAST_UPDATE IS 'Record modification date';
COMMENT ON COLUMN SCH_CANCEL_REASON.FLG_AVAILABLE IS 'Indicates if this record can be used: ''Y'' yes, ''N'' no';
COMMENT ON COLUMN SCH_CANCEL_REASON.CODE_CANCEL_REASON IS 'Translation code';
COMMENT ON COLUMN SCH_CANCEL_REASON.ID_SCH_CANCEL_REASON IS 'Cancel reason identifier';
COMMENT ON COLUMN SCH_CANCEL_REASON.RANK IS 'Sorting order for showing results';

