CREATE TABLE TRIAL_PROF (
  ID_TRIAL            NUMBER(24) NOT NULL,
  ID_PROFESSIONAL     NUMBER(24) NOT NULL,
  CREATE_USER         VARCHAR2(24 CHAR),
  CREATE_TIME         TIMESTAMP(6) WITH LOCAL TIME ZONE,
  CREATE_INSTITUTION  NUMBER(24),
  UPDATE_USER         VARCHAR2(24 CHAR),
  UPDATE_TIME         TIMESTAMP(6) WITH LOCAL TIME ZONE,
  UPDATE_INSTITUTION  NUMBER(24)
);  
  
COMMENT ON TABLE TRIAL_PROF IS 'List of professionais responsible for the trial';
COMMENT ON COLUMN TRIAL_PROF.ID_TRIAL IS 'ID Trail';
COMMENT ON COLUMN TRIAL_PROF.ID_PROFESSIONAL IS 'ID Professional';
COMMENT ON COLUMN TRIAL_PROF.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN TRIAL_PROF.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN TRIAL_PROF.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN TRIAL_PROF.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN TRIAL_PROF.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN TRIAL_PROF.UPDATE_INSTITUTION IS 'Update Institution';
