
create table PAT_ADVANCE_DIRECTIVE_DET
(
  ID_PAT_ADVANCE_DIRECTIVE NUMBER(24) NOT NULL,
	ID_ADVANCE_DIRECTIVE     NUMBER(24) NOT NULL,
	FLG_ADVANCE_DIRECTIVE    VARCHAR2(1) NOT NULL
);


COMMENT ON TABLE PAT_ADVANCE_DIRECTIVE_DET IS 'All registered advance directives of a specific patient.';

COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE_DET.ID_PAT_ADVANCE_DIRECTIVE IS 'Patient advance directive ID.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE_DET.ID_ADVANCE_DIRECTIVE IS 'Advance directive ID.';
COMMENT ON COLUMN PAT_ADVANCE_DIRECTIVE_DET.FLG_ADVANCE_DIRECTIVE IS 'Patient consent regarding the advance directives: Y - Allows, N - Doesnt Allow';

