--Excepções nos acessos
create table profile_templ_access_exception
(
  ID_PROF_TEMPL_ACCESS_EXCEPTION    NUMBER(24) not null,
  ID_PROFILE_TEMPLATE    						NUMBER(12),
  FLG_TYPE													VARCHAR2(1) not null,
  ID_INSTITUTION										NUMBER(24) not null,
  RANK                    					NUMBER(6),
  ID_SYS_BUTTON_PROP      					NUMBER(24),
  FLG_CREATE              					VARCHAR2(1),
  FLG_CANCEL              					VARCHAR2(1),
  FLG_SEARCH              					VARCHAR2(1),
  FLG_PRINT               					VARCHAR2(1),
  FLG_OK                  					VARCHAR2(1),
  FLG_DETAIL              					VARCHAR2(1),
  FLG_CONTENT             					VARCHAR2(1),
  FLG_HELP                					VARCHAR2(1),
  ID_SYS_SHORTCUT         					NUMBER(24),
  ID_SOFTWARE             					NUMBER(24),
  ID_SHORTCUT_PK          					NUMBER(24),
  ID_SOFTWARE_CONTEXT     					NUMBER(24),
  FLG_GRAPH               					VARCHAR2(1),
  FLG_VISION              					VARCHAR2(1),
  FLG_DIGITAL             					VARCHAR2(240),
  FLG_FREQ                					VARCHAR2(1),
  FLG_NO                  					VARCHAR2(240),
  POSITION                					NUMBER(3),
  TOOLBAR_LEVEL           					NUMBER(2),
  FLG_ACTION												VARCHAR2(1)
);
-- Add comments to the table 
comment on table PROFILE_TEMPL_ACCESS_EXCEPTION is 'Excepções aos acessos dos templates aos botões. As flags não são preenchidas para os botões com deepnavs.';
-- Add comments to the columns 
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.ID_PROF_TEMPL_ACCESS_EXCEPTION is 'Chave única';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.ID_PROFILE_TEMPLATE is 'ID do template';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_TYPE is 'Tipo de excepção: A- Add, R- Remove';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.ID_INSTITUTION is 'ID da instituição onde a excepção se aplica (0 para todas)';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.RANK is 'Ordem de apresentação';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.ID_SYS_BUTTON_PROP is 'ID do menu / deepnav';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_CREATE is 'Criação: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_CANCEL is 'Cancelamento: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_SEARCH is 'Pesquisa: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_PRINT is 'Impressão: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_OK is 'Avançar: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_DETAIL is 'Detalhe: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_CONTENT is 'Conteúdo: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_HELP is 'Ajuda: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.ID_SYS_SHORTCUT is 'ID do shortcut';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.ID_SOFTWARE is 'ID do software';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.ID_SHORTCUT_PK is 'ID do shortcut (PK)';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.ID_SOFTWARE_CONTEXT is 'Quando se acede numa aplicação (ex:OUTP) a funcionalidades de outra (ex: ORIS), a coluna ID_SOFTWARE deve ser preenchida com a aplicação acedida (ex:OUTP), mas ID_SOFTWARE_CONTEXT é preenchida com o ID da outra aplicação (ex: ORIS)';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_GRAPH is 'Ajuda: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_VISION is 'Ajuda: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_DIGITAL is 'Ajuda: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_FREQ is 'Ajuda: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_NO is 'Ajuda: N - não aplicável, I - inactivo, A - activo';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.POSITION is 'Posição do menu na toolbar (apenas para menus)';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.TOOLBAR_LEVEL is 'Nível da toolbar';
comment on column PROFILE_TEMPL_ACCESS_EXCEPTION.FLG_ACTION is 'acções: n - não aplicável, i - inactivo, a - activo';


