
create table DCI_COLOR
(
  DCI_ID          NUMBER(24) NOT NULL,
  COLOR           VARCHAR2(10) NOT NULL,
  FLG_TYPE        VARCHAR2(1) NOT NULL,
  ID_SOFTWARE     NUMBER(24) NOT NULL,
  ID_INSTITUTION  NUMBER(24) NOT NULL
);

COMMENT ON TABLE DCI_COLOR IS 'Association between a drug DCI and a color.';

COMMENT ON COLUMN DCI_COLOR.DCI_ID IS 'DCI ID.';
COMMENT ON COLUMN DCI_COLOR.COLOR IS 'Associated color.';
COMMENT ON COLUMN DCI_COLOR.FLG_TYPE IS 'Register type: P - partogram';
COMMENT ON COLUMN DCI_COLOR.ID_SOFTWARE IS 'Software ID';
COMMENT ON COLUMN DCI_COLOR.ID_INSTITUTION IS 'Institution ID';

