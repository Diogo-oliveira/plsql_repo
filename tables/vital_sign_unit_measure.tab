

  CREATE TABLE VITAL_SIGN_UNIT_MEASURE
   (	ID_VITAL_SIGN_UNIT_MEASURE NUMBER(24,0) NOT NULL ENABLE,
	ID_VITAL_SIGN NUMBER(12,0) NOT NULL ENABLE,
	ID_UNIT_MEASURE NUMBER(24,0),
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	VAL_MIN NUMBER(10,3),
	VAL_MAX NUMBER(10,3),
	FORMAT_NUM VARCHAR2(20),
	DECIMALS NUMBER(1,0),
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );



COMMENT ON COLUMN vital_sign_unit_measure.id_vital_sign_unit_measure IS 'Chave primária' ;
COMMENT ON COLUMN vital_sign_unit_measure.id_vital_sign IS 'Sinal Vital' ;
COMMENT ON COLUMN vital_sign_unit_measure.id_unit_measure IS 'Unidade de medida' ;
COMMENT ON COLUMN vital_sign_unit_measure.id_institution IS 'Instituição' ;
COMMENT ON COLUMN vital_sign_unit_measure.id_software IS 'Software' ;
COMMENT ON COLUMN vital_sign_unit_measure.val_min IS 'Valor mínimo aceitável' ;
COMMENT ON COLUMN vital_sign_unit_measure.val_max IS 'Valor máximo aceitável' ;
COMMENT ON COLUMN vital_sign_unit_measure.format_num IS 'Formato para apresentar ao utilizador' ;
COMMENT ON COLUMN vital_sign_unit_measure.decimals IS 'Número de decimais admissíveis para o registo de valores. valor entre 0 e 3, de acordo com o número de decimais do valor de leitura. Se definido, usar nas conversões entre unidades, tendo preferência sobre o valor indicado na tabela de conversões.' ;
COMMENT ON COLUMN vital_sign_unit_measure.adw_last_update IS 'Data da última alteração' ;


