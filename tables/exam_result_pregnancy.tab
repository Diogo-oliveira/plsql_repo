CREATE TABLE EXAM_RESULT_PREGNANCY
(ID_EXAM_RESULT_PREGNANCY NUMBER(24) NOT NULL
,ID_EXAM_RESULT           NUMBER(24) NOT NULL
,FLG_PREGNANT             VARCHAR2(1) DEFAULT 'N' NOT NULL
,ID_PAT_PREGNANCY         NUMBER(24)
,ID_EPIS_DOCUMENTATION    NUMBER(24)
);

COMMENT ON TABLE EXAM_RESULT_PREGNANCY                            IS 'Associa resultados de imagem a um processo de gravidez Y/N';
COMMENT ON COLUMN EXAM_RESULT_PREGNANCY.ID_EXAM_RESULT_PREGNANCY  IS 'Chave primária';
COMMENT ON COLUMN EXAM_RESULT_PREGNANCY.ID_EXAM_RESULT            IS 'Associação ao resultado de exame';
COMMENT ON COLUMN EXAM_RESULT_PREGNANCY.FLG_PREGNANT              IS 'Indicação se mulher está grávida ou não';
COMMENT ON COLUMN EXAM_RESULT_PREGNANCY.ID_PAT_PREGNANCY          IS 'Id do Processo de gravidade se aplicável';
COMMENT ON COLUMN EXAM_RESULT_PREGNANCY.ID_EPIS_DOCUMENTATION     IS 'Id da documentation correspondente';

ALTER TABLE EXAM_RESULT_PREGNANCY ADD WEEKS_PREGNANCY NUMBER(6);
ALTER TABLE EXAM_RESULT_PREGNANCY ADD FLG_WEEKS_CRITERIA VARCHAR2(1) not null;

comment on column EXAM_RESULT_PREGNANCY.WEEKS_PREGNANCY is 'Número de semanas de gravidez com base na ecografia';
comment on column EXAM_RESULT_PREGNANCY.FLG_WEEKS_CRITERIA is 'Criterio a ter em conta no cálculo de semanas da gravidez. U - idade ecográfica C - idade cronológica N - não aplicável.';

ALTER TABLE EXAM_RESULT_PREGNANCY ADD FLG_MULTIPLE VARCHAR2(1);
COMMENT ON COLUMN EXAM_RESULT_PREGNANCY.FLG_MULTIPLE IS 'Se gravidez múltipla: null - FETO ÚNICO; B - bicoriónica; M monocoriónica monoamniótica; A - monocoriónica  biamniótica no momento da ecografia' ;



