

  CREATE TABLE CATEGORY
   (	ID_CATEGORY NUMBER(12,0) NOT NULL ENABLE,
	CODE_CATEGORY VARCHAR2(200) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	FLG_CLINICAL VARCHAR2(1) NOT NULL ENABLE,
	FLG_PROF VARCHAR2(1) NOT NULL ENABLE
   );


COMMENT ON TABLE category IS 'Categorias profissionais: médico, director de serviço, director clínico, ...' ;

COMMENT ON COLUMN category.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN category.flg_type IS 'Tipo: D - médico, N - enfermeiro, P - farmacêutico, A - administrativo, T - técnico, O - outro, F - fisioterapeuta, C - coordenador, A - anestesista' ;
COMMENT ON COLUMN category.flg_clinical IS 'Indicação se é uma categoria médica: Y / N' ;
COMMENT ON COLUMN category.flg_prof IS 'Indicação se é uma categoria (PROF_CAT)' ;

comment on column CATEGORY.FLG_TYPE is 'Tipo: D - médico, N - enfermeiro, P - farmacêutico, A - administrativo, T - técnico, O - outro, F - fisioterapeuta, C - coordenador, A - anestesista, S - assistente social; M - Manchester';



