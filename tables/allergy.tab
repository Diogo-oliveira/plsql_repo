

  CREATE TABLE ALLERGY
   (	ID_ALLERGY NUMBER(12,0) NOT NULL ENABLE,
	ID_ALLERGY_PARENT NUMBER(12,0),
	CODE_ALLERGY VARCHAR2(200) NOT NULL ENABLE,
	FLG_SELECT VARCHAR2(1) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	FLG_ACTIVE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	RANK NUMBER(12,0),
	FLG_WITHOUT VARCHAR2(2)
   );


COMMENT ON COLUMN allergy.code_allergy IS 'Código para nome' ;
COMMENT ON COLUMN allergy.flg_select IS 'Alergia seleccionável pelo utilizador. Nem todas as alergias válidas são seleccionáveis (por ex, os níveis superiores da hierarquia não são)' ;
COMMENT ON COLUMN allergy.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN allergy.flg_active IS 'A - activo, I - inactivo' ;
COMMENT ON COLUMN allergy.rank IS 'ranking order' ;
COMMENT ON COLUMN allergy.flg_without IS 'Y - Sem alergias a...; F - Sem alergias a fármacos' ;

