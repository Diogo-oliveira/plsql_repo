

  CREATE TABLE PAT_FAMILY_DISEASE
   (	ID_PAT_FAMILY_DISEASE NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	ID_DIAGNOSIS NUMBER(12,0) NOT NULL ENABLE,
	DT_PAT_FAMILY_DISEASE DATE NOT NULL ENABLE,
	ID_PAT_FAMILY_MEMBER NUMBER(24,0) NOT NULL ENABLE,
	NOTES VARCHAR2(4000),
	YEAR_BEGIN NUMBER(4,0),
	MONTH_BEGIN NUMBER(2,0),
	DAY_BEGIN NUMBER(2,0),
	YEAR_END NUMBER(4,0),
	MONTH_END NUMBER(2,0),

	DAY_END NUMBER(2,0),
	ID_INSTITUTION NUMBER(24,0) NOT NULL ENABLE
   );


COMMENT ON TABLE pat_family_disease IS 'Doencas de que padecem ou padeceram os familiares;ocorrência de diabetes, hipertensão arterial, doenças malignas, doenças transmissíveis geneticamente.' ;

COMMENT ON COLUMN pat_family_disease.id_pat_family_disease IS 'Chave primaria' ;
COMMENT ON COLUMN pat_family_disease.id_diagnosis IS 'Chave primária' ;
COMMENT ON COLUMN pat_family_disease.dt_pat_family_disease IS 'Data do registo' ;
COMMENT ON COLUMN pat_family_disease.id_pat_family_member IS 'Chave primaria' ;
COMMENT ON COLUMN pat_family_disease.year_begin IS 'Ano (aproximado) de inicio da doença' ;
COMMENT ON COLUMN pat_family_disease.month_begin IS 'Mês (aproximado) de inicio da doença' ;
COMMENT ON COLUMN pat_family_disease.day_begin IS 'Dia (aproximado) de inicio da doença' ;
COMMENT ON COLUMN pat_family_disease.year_end IS 'Ano (aproximado) de fim da doença' ;
COMMENT ON COLUMN pat_family_disease.month_end IS 'Mês (aproximado) de fim da doença' ;
COMMENT ON COLUMN pat_family_disease.day_end IS 'Dia (aproximado) de fim da doença' ;

