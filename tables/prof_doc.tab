

  CREATE TABLE PROF_DOC
   (	ID_PROF_DOC NUMBER(24,0) NOT NULL ENABLE,
	ID_DOC_TYPE NUMBER(12,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	VALUE VARCHAR2(200) NOT NULL ENABLE,
	DT_EMITED DATE,
	DT_EXPIRE DATE,
	ID_INSTITUTION NUMBER(24,0) NOT NULL ENABLE,
	LOCAL_EMITED VARCHAR2(200)
   );


COMMENT ON TABLE prof_doc IS 'Nºs dos documentos de identificação registados para o profissional' ;

COMMENT ON COLUMN prof_doc.value IS 'Nº do documento de identificação indicado' ;
COMMENT ON COLUMN prof_doc.dt_emited IS 'Data de emissão' ;
COMMENT ON COLUMN prof_doc.dt_expire IS 'Data de validade' ;
COMMENT ON COLUMN prof_doc.local_emited IS 'Local de emissão' ;

