

  CREATE TABLE INE_LOCATION
   (	ID_INE_LOCATION NUMBER(24,0) NOT NULL ENABLE,
	DISTRITO VARCHAR2(100) NOT NULL ENABLE,
	CONCELHO VARCHAR2(100) NOT NULL ENABLE,
	FREGUESIA VARCHAR2(100) NOT NULL ENABLE,
	ZIP_CODE NUMBER(4,0) NOT NULL ENABLE,
	INE_DISTRITO VARCHAR2(2) NOT NULL ENABLE,
	INE_CONCELHO VARCHAR2(4),
	INE_FREGUESIA VARCHAR2(6)
   );


COMMENT ON TABLE ine_location IS 'Associação do código postal ao distrito/concelho/freguesia e codificação do INE.' ;

COMMENT ON COLUMN ine_location.id_ine_location IS 'Chave primária.' ;
COMMENT ON COLUMN ine_location.distrito IS 'Descritivo do distrito.' ;
COMMENT ON COLUMN ine_location.concelho IS 'Descritivo do concelho.' ;
COMMENT ON COLUMN ine_location.freguesia IS 'Descritivo da freguesia.' ;
COMMENT ON COLUMN ine_location.zip_code IS 'Código postal (só os 4 primeiros dígitos).' ;
COMMENT ON COLUMN ine_location.ine_distrito IS 'Código do INE para o distrito. Este campo apresenta a estrutura DD onde: DD - código do distrito.' ;
COMMENT ON COLUMN ine_location.ine_concelho IS 'Código do INE para o concelho. Este campo apresenta a estrutura DDCC onde: DD - código do distrito; CC - código do concelho.' ;
COMMENT ON COLUMN ine_location.ine_freguesia IS 'Código do INE para a freguesia. Este campo apresenta a estrutura DDCCFF onde: DD - código do distrito; CC - código do concelho; FF - código da freguesia.' ;
