CREATE TABLE CALCULATOR
 (ID_CALCULATOR NUMBER(24) NOT NULL
 ,CODE_CALCULATOR VARCHAR2(200) NOT NULL
 ,INTERNAL_NAME VARCHAR2(200) NOT NULL
 ,INTERNAL_DESC VARCHAR2(200)
 ,FORMULA VARCHAR2(4000)
 )
/
COMMENT ON TABLE CALCULATOR IS 'This table holds all the calculators available'
/
COMMENT ON COLUMN CALCULATOR.ID_CALCULATOR IS 'Calculator Id'
/
COMMENT ON COLUMN CALCULATOR.CODE_CALCULATOR IS 'Code for translation'
/
COMMENT ON COLUMN CALCULATOR.INTERNAL_NAME IS 'Internal name to be called by the upper layer'
/
COMMENT ON COLUMN CALCULATOR.INTERNAL_DESC IS 'Internal description of the calculator'
/
COMMENT ON COLUMN CALCULATOR.FORMULA IS 'Formula of the calculator. It must be sql based.'
/
