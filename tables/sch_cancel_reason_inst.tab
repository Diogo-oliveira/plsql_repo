

  CREATE TABLE SCH_CANCEL_REASON_INST
   (	ID_SCH_CANCEL_REASON_INST NUMBER(24,0) NOT NULL ENABLE,
	ID_SCH_CANCEL_REASON NUMBER(24,0) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) DEFAULT 'Y' NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE
   );

COMMENT ON TABLE SCH_CANCEL_REASON_INST IS 'Sets the predefined reasons that can be used for cancelling appointments on a given institution.';

COMMENT ON COLUMN SCH_CANCEL_REASON_INST.ID_INSTITUTION IS 'Institution identifier';
COMMENT ON COLUMN SCH_CANCEL_REASON_INST.ID_SCH_CANCEL_REASON_INST IS 'Cancel reason-institution association identifier';
COMMENT ON COLUMN SCH_CANCEL_REASON_INST.ID_SOFTWARE IS 'Software identifier.';
COMMENT ON COLUMN SCH_CANCEL_REASON_INST.FLG_AVAILABLE IS 'Indicates if this record can be used: ''Y'' yes, ''N'' no';
COMMENT ON COLUMN SCH_CANCEL_REASON_INST.ID_SCH_CANCEL_REASON IS 'Cancel reason identifier';

