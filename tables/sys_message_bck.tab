

  CREATE TABLE SYS_MESSAGE_BCK
   (	CODE_MESSAGE VARCHAR2(200) NOT NULL ENABLE,
	DESC_MESSAGE VARCHAR2(4000) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	ID_LANGUAGE NUMBER(6,0) NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	IMG_NAME VARCHAR2(200)
   );


COMMENT ON TABLE sys_message_bck IS 'Mensagens de ajuda, erro, aplicacionais, etc.As traduções encontram-se na própria tabela, pq a PK é constituída por duas colunas: ID_MESSAGE e ID_LANG.' ;

COMMENT ON COLUMN sys_message_bck.code_message IS 'Nome: <nome>_<tipo><seq. de 3 algarismos>  O tipo é: T - título, M - conteúdo' ;
COMMENT ON COLUMN sys_message_bck.desc_message IS 'Mensagem, na língua dada por ID_LANG' ;
COMMENT ON COLUMN sys_message_bck.flg_type IS 'Tipo de mensagem: H - ecrãs de ajuda, A - títulos e headers aplicacionais, R - reports, E - erro' ;
COMMENT ON COLUMN sys_message_bck.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN sys_message_bck.img_name IS 'Nome da imagem correspondente' ;
