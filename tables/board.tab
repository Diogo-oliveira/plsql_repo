

  CREATE TABLE BOARD
   (	ID_BOARD NUMBER(12,0) NOT NULL ENABLE,
	CODE_BOARD VARCHAR2(200) NOT NULL ENABLE,
	PAGE NUMBER(6,0) NOT NULL ENABLE,
	SEX VARCHAR2(1),
	AGE_MIN NUMBER(3,0),
	AGE_MAX NUMBER(3,0),
	CODE_HELP_BOARD VARCHAR2(4000),
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE
   );


COMMENT ON TABLE board IS 'Fluxogramas de Manchester' ;

COMMENT ON COLUMN board.code_board IS 'Código para tradução dos nomes dos fluxogramas' ;
COMMENT ON COLUMN board.page IS 'Página' ;
COMMENT ON COLUMN board.sex IS 'Sexo do doente para que se possa seleccionar este fluxograma' ;
COMMENT ON COLUMN board.age_min IS 'Idade mínima do doente para que se possa seleccionar este fluxograma' ;
COMMENT ON COLUMN board.age_max IS 'Idade máxima do doente para que se possa seleccionar este fluxograma' ;
COMMENT ON COLUMN board.code_help_board IS 'Código para tradução da explicação dos fluxogramas de acordo com o manual de triagem de Manchester' ;
COMMENT ON COLUMN board.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
