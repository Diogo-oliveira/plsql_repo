CREATE TABLE COMM_ORDER_QUESTION_RESP_HIST (
DT_COMM_ORDER_QUEST_RESP_HIST    TIMESTAMP(6) WITH LOCAL TIME ZONE,
ID_COMM_ORDER_QUESTION_RESP   NUMBER(24),
ID_EPISODE    NUMBER(24),
ID_COMMON_ORDER_REQ    NUMBER(24),
FLG_TIME    VARCHAR2(2 CHAR),
ID_QUESTIONNAIRE    NUMBER(24),
ID_RESPONSE   NUMBER(24),
NOTES   CLOB,
ID_PROF_LAST_UPDATE   NUMBER(24),
DT_LAST_UPDATE_TSTZ   TIMESTAMP(6) WITH LOCAL TIME ZONE,
CREATE_USER   VARCHAR2(50 CHAR),
CREATE_TIME   TIMESTAMP(6) WITH LOCAL TIME ZONE,
CREATE_INSTITUTION    NUMBER(24),
UPDATE_USER   VARCHAR2(50 CHAR),
UPDATE_TIME   TIMESTAMP(6) WITH LOCAL TIME ZONE,
UPDATE_INSTITUTION    NUMBER(24)
);


COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.DT_COMM_ORDER_QUEST_RESP_HIST IS 'Date when the register was made';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.ID_COMM_ORDER_QUESTION_RESP IS 'Cmmon Order question response ID';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.ID_EPISODE IS 'Episode ID';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.ID_COMMON_ORDER_REQ IS 'Common Order requisition ID';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.FLG_TIME IS 'Flag that indicates WHEN the questionnaire was answered (O - Order)';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.ID_QUESTIONNAIRE IS 'Question ID';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.ID_RESPONSE IS 'Response ID';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.NOTES IS 'Notes';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.ID_PROF_LAST_UPDATE IS 'Last update professional ID';
COMMENT ON COLUMN COMM_ORDER_QUESTION_RESP_HIST.DT_LAST_UPDATE_TSTZ IS 'Last update date';
