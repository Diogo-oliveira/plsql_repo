-- CHANGE REASON: [ALERT-52339] Patient efectivation per episode type, through a scheduled appointment - new table
CREATE TABLE SCHEDULE_INP_BED
 (ID_EPISODE NUMBER(24) NOT NULL
 ,ID_BED NUMBER(24) NOT NULL
 ,ID_ROOM NUMBER(24)
 ,DT_SCHEDULE TIMESTAMP WITH LOCAL TIME ZONE
 ,CREATE_USER VARCHAR2(24)
 ,CREATE_TIME TIMESTAMP WITH TIME ZONE
 ,CREATE_INSTITUTION NUMBER(24)
 ,UPDATE_USER VARCHAR2(24)
 ,UPDATE_TIME TIMESTAMP WITH TIME ZONE
 ,UPDATE_INSTITUTION NUMBER(24)
 );

COMMENT ON TABLE SCHEDULE_INP_BED IS 'To the PT market associates a bed to an episode (while does not exists scheduler)';
COMMENT ON COLUMN SCHEDULE_INP_BED.ID_EPISODE IS 'Episode id';
COMMENT ON COLUMN SCHEDULE_INP_BED.ID_BED IS 'Bed id';
COMMENT ON COLUMN SCHEDULE_INP_BED.ID_ROOM IS 'Room id';
COMMENT ON COLUMN SCHEDULE_INP_BED.DT_SCHEDULE IS 'Expected date of admission';
COMMENT ON COLUMN SCHEDULE_INP_BED.CREATE_USER IS 'Creation user';
COMMENT ON COLUMN SCHEDULE_INP_BED.CREATE_TIME IS 'Creation time';
COMMENT ON COLUMN SCHEDULE_INP_BED.CREATE_INSTITUTION IS 'Creation institution';
COMMENT ON COLUMN SCHEDULE_INP_BED.UPDATE_USER IS 'Update user';
COMMENT ON COLUMN SCHEDULE_INP_BED.UPDATE_TIME IS 'Update time';
COMMENT ON COLUMN SCHEDULE_INP_BED.UPDATE_INSTITUTION IS 'Update institution';
-- CHANGE END: Sofia Mendes

