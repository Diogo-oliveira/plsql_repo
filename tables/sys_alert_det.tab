COMMENT ON column sys_alert_det.replace2 IS 'Coluna de valor a apresentar da descrição do alerta. Ex: número de minutos em atraso';
COMMENT ON column sys_alert_det.id_schedule IS 'ID do agendamento';
COMMENT ON column sys_alert_det.id_sys_alert IS 'ID do tipo de alerta';
COMMENT ON column sys_alert_det.id_reg_det IS 'ID do registo de detalhe do evento que originou o alerta. Ex: Nos alertas de resultados de exames será o id_exam_result';
COMMENT ON column sys_alert_det.id_clinical_service	is 'ID do Serviço. Deve estar preenchido se o alerta for destinado a todos os profissionais de um serviço';
COMMENT ON column sys_alert_det.id_room	is 'ID da sala. Deve estar preenchido se o alerta for destinado a todos os profissionais alocados à sala';
COMMENT ON column sys_alert_det.id_sys_alert_det is 'ID único';




