

  CREATE TABLE DRUG_PRESCRIPTION
   (	ID_DRUG_PRESCRIPTION NUMBER(24,0) NOT NULL ENABLE,
	DT_DRUG_PRESCRIPTION DATE NOT NULL ENABLE,
	ID_EPISODE NUMBER(24,0) NOT NULL ENABLE,
	ID_PROFESSIONAL NUMBER(24,0) NOT NULL ENABLE,
	FLG_TYPE VARCHAR2(1) NOT NULL ENABLE,
	BARCODE VARCHAR2(30),
	NUM_DAYS_EXPIRE NUMBER(6,0),
	FLG_TIME VARCHAR2(1) NOT NULL ENABLE,
	DT_BEGIN DATE,
	FLG_STATUS VARCHAR2(1) NOT NULL ENABLE,
	DT_CANCEL DATE,

	ID_PROF_CANCEL NUMBER(24,0),
	NOTES_CANCEL VARCHAR2(4000),
	ID_EPISODE_ORIGIN NUMBER(24,0),
	ID_EPISODE_DESTINATION NUMBER(24,0),
	ID_PROTOCOLS NUMBER(24,0),
	ID_PREV_EPISODE NUMBER(24,0)
   );


COMMENT ON TABLE drug_prescription IS 'Prescrição de medicamentos, interna ou externa (receitas)' ;

COMMENT ON COLUMN drug_prescription.flg_type IS 'I - interna, E - externa' ;
COMMENT ON COLUMN drug_prescription.barcode IS 'Código de barras' ;
COMMENT ON COLUMN drug_prescription.num_days_expire IS 'Nº de dias de validade' ;
COMMENT ON COLUMN drug_prescription.flg_time IS 'Realização: E - neste episódio; N - próximo episódio; B - até ao próximo episódio' ;
COMMENT ON COLUMN drug_prescription.dt_begin IS 'Data pretendida para início da execução do exame (ie, ñ imediata)' ;
COMMENT ON COLUMN drug_prescription.flg_status IS 'Estado da prescrição: D - pendente, R - requisitado, P - parcial, F - concluído, C - anulado, I - interrompido' ;
COMMENT ON COLUMN drug_prescription.id_episode_origin IS 'ID do episódio em que foi registada a req. inicialmente (ie, se FLG_TIME = ''N'')' ;
COMMENT ON COLUMN drug_prescription.id_episode_destination IS 'ID do episódio em que foi registada a req. destino (se FLG_TIME = ''N'')' ;
COMMENT ON COLUMN drug_prescription.id_protocols IS 'ID do protocolo, caso tenha sido requesitado através de um protocolo.' ;
COMMENT ON COLUMN drug_prescription.id_prev_episode IS 'ID do episódio em que foi registada a req. inicialmente' ;

alter table drug_prescription 
add (dt_drug_prescription_tstz timestamp with local time zone,
dt_begin_tstz timestamp with local time zone,
dt_cancel_tstz timestamp with local time zone);

