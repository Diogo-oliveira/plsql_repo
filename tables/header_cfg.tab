-- CHANGE REASON: [ALERT-10700] New header in the application
CREATE TABLE HEADER_CFG
 (ID_MARKET NUMBER(24) NOT NULL
 ,ID_SOFTWARE NUMBER(24) NOT NULL
 ,ID_PROFILE_TEMPLATE NUMBER(12) NOT NULL
 ,ID_EPIS_TYPE NUMBER(12) NOT NULL
 ,ID_HEADER NUMBER(24) NOT NULL
 ,FLG_AVAILABLE VARCHAR2(1) NOT NULL
 );
COMMENT ON TABLE HEADER_CFG IS 'Configuration table for the Headers';
COMMENT ON COLUMN HEADER_CFG.ID_MARKET IS 'Market Id';
COMMENT ON COLUMN HEADER_CFG.ID_SOFTWARE IS 'Software Id';
COMMENT ON COLUMN HEADER_CFG.ID_PROFILE_TEMPLATE IS 'Profile template Id';
COMMENT ON COLUMN HEADER_CFG.ID_EPIS_TYPE IS 'Episode type Id';
COMMENT ON COLUMN HEADER_CFG.ID_HEADER IS 'Header Id';
COMMENT ON COLUMN HEADER_CFG.FLG_AVAILABLE IS 'Availability of this record Y-Yes N-No';
ALTER TABLE HEADER_CFG ADD 
  ( CREATE_USER VARCHAR2(24),
    CREATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
    CREATE_INSTITUTION NUMBER(24),
    UPDATE_USER VARCHAR2(24),
    UPDATE_TIME TIMESTAMP WITH LOCAL TIME ZONE,
    UPDATE_INSTITUTION NUMBER(24));
COMMENT ON COLUMN HEADER_CFG.CREATE_USER IS 'Creation User';
COMMENT ON COLUMN HEADER_CFG.CREATE_TIME IS 'Creation Time';
COMMENT ON COLUMN HEADER_CFG.CREATE_INSTITUTION IS 'Creation Institution';
COMMENT ON COLUMN HEADER_CFG.UPDATE_USER IS 'Update User';
COMMENT ON COLUMN HEADER_CFG.UPDATE_TIME IS 'Update Time';
COMMENT ON COLUMN HEADER_CFG.UPDATE_INSTITUTION IS 'Update Institution';
-- CHANGE END: Eduardo Lourenco

