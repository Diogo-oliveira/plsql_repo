create table THERAPEUTIC_PROTOCOLS
(
  ID_THERAPEUTIC_PROTOCOLS   NUMBER(24) not null,
  CODE_THERAPEUTIC_PROTOCOLS VARCHAR2(255),
  ADW_LAST_UPDATE            TIMESTAMP(6) WITH LOCAL TIME ZONE,
  FLG_AVAILABLE              VARCHAR2(1)
);

comment on table THERAPEUTIC_PROTOCOLS is 'Protocolos Terapêuticos';

comment on column THERAPEUTIC_PROTOCOLS.CODE_THERAPEUTIC_PROTOCOLS is 'Descritivo do Protocolo Terapêutico';
comment on column THERAPEUTIC_PROTOCOLS.ADW_LAST_UPDATE is 'Data de última alteração';
comment on column THERAPEUTIC_PROTOCOLS.FLG_AVAILABLE is 'Y - Sim, N - Não';

