

  CREATE TABLE REP_SECTION_DET
   (	ID_REP_SECTION_DET NUMBER(24,0) NOT NULL ENABLE,
	ID_REPORTS NUMBER(24,0) NOT NULL ENABLE,
	ID_REP_SECTION NUMBER(24,0) NOT NULL ENABLE,
	ID_SOFTWARE NUMBER(24,0) NOT NULL ENABLE,
	ID_INSTITUTION NUMBER(12,0) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	RANK NUMBER(6,0)
   );


COMMENT ON TABLE rep_section_det IS 'Parametrização das secções que compõem um report' ;

COMMENT ON COLUMN rep_section_det.id_rep_section_det IS 'Chave primária' ;
COMMENT ON COLUMN rep_section_det.id_reports IS 'Código do relatório' ;
COMMENT ON COLUMN rep_section_det.id_rep_section IS 'Código da secção do relatório' ;
COMMENT ON COLUMN rep_section_det.id_software IS 'Disponibilidade' ;
COMMENT ON COLUMN rep_section_det.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN rep_section_det.rank IS 'Ordem de visualização' ;


--Rui Batista 2007/11/02
--Permitir parametrizar quais as secções a incluir, por defeito, no relatório
alter table rep_section_det add (flg_default varchar2(1));

COMMENT ON COLUMN rep_section_det.flg_default IS 'Secção Activa/inactiva por defeito. Valores possíveis:(Y/N)' ;
COMMENT ON COLUMN rep_section_det.flg_default IS 'Secção Activa/inactiva por defeito. Valores possíveis:(A/I)' ;


