

  CREATE TABLE ACTION_CRITERIA
   (	ID_ACTION_CRITERIA NUMBER NOT NULL ENABLE,
	ID_ELEM_CRIT_ACTION NUMBER,
	FLG_ACTION VARCHAR2(4) NOT NULL ENABLE,
	ADW_LAST_UPDATE DATE NOT NULL ENABLE,
	FLG_AVAILABLE VARCHAR2(1) NOT NULL ENABLE,
	ID_DOCUMENT_AREA NUMBER NOT NULL ENABLE,
	ID_SYS_ELEMENT_CRIT NUMBER NOT NULL ENABLE,
	ID_ELEMENT_QUALIF NUMBER
   );


COMMENT ON COLUMN action_criteria.id_action_criteria IS 'Chave primária' ;
COMMENT ON COLUMN action_criteria.id_elem_crit_action IS 'Código elemento/critério sobre o qual a acção é realizada' ;
COMMENT ON COLUMN action_criteria.flg_action IS 'Tipo de Acção:CS-Mudar estado; S- Show; H- Hide; OK- Open Keepad' ;
COMMENT ON COLUMN action_criteria.adw_last_update IS 'Data da última alteração' ;
COMMENT ON COLUMN action_criteria.flg_available IS 'Disponibilidade do registo na instituição onde está instalada a BD' ;
COMMENT ON COLUMN action_criteria.id_document_area IS 'Chave primária' ;
COMMENT ON COLUMN action_criteria.id_sys_element_crit IS 'Chave primária - Código elemento/critério que dá origem a acção' ;
COMMENT ON COLUMN action_criteria.id_element_qualif IS 'Chave primária' ;


