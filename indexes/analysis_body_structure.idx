-- CHANGE REASON: [ALERT-254055] 
DECLARE
    e_object_exists EXCEPTION;
    PRAGMA EXCEPTION_INIT(e_object_exists, -00955);
    e_non_existant EXCEPTION;
    PRAGMA EXCEPTION_INIT(e_non_existant, -02443);
BEGIN
    BEGIN
        EXECUTE IMMEDIATE 'drop INDEX abe_uidx';
    EXCEPTION
        WHEN e_non_existant THEN
            dbms_output.put_line('aviso :operação já executada anteriormente.');
    END;
    BEGIN
        EXECUTE IMMEDIATE 'CREATE UNIQUE INDEX abe_uidx ON analysis_body_structure(CASE flg_available WHEN ''Y'' THEN id_analysis ELSE NULL END,
                                                        CASE flg_available WHEN ''Y'' THEN id_sample_type ELSE NULL END,
                                                        CASE flg_available WHEN ''Y'' THEN id_body_structure ELSE NULL END) tablespace alert_idx';
    EXCEPTION
        WHEN e_object_exists THEN
            dbms_output.put_line('Index already there');
    END;
END;
/
-- CHANGE END:  Rui Gomes